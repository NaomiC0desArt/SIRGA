@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        // Filtro por año escolar
        document.getElementById('filterAnio')?.addEventListener('change', function() {
            const anioId = this.value;
            const filas = document.querySelectorAll('#periodosTable tbody tr');

            filas.forEach(fila => {
                const filaAnio = fila.getAttribute('data-anio');

                if (anioId === 'all') {
                    fila.classList.remove('hidden');
                } else if (filaAnio === anioId) {
                    fila.classList.remove('hidden');
                } else {
                    fila.classList.add('hidden');
                }
            });
        });

        // Filtro por periodo
        document.getElementById('filterPeriodo')?.addEventListener('change', function() {
            const periodoNum = this.value;
            const filas = document.querySelectorAll('#periodosTable tbody tr');

            filas.forEach(fila => {
                const filaPeriodo = fila.getAttribute('data-periodo');

                if (periodoNum === 'all') {
                    fila.classList.remove('hidden');
                } else if (filaPeriodo === periodoNum) {
                    fila.classList.remove('hidden');
                } else {
                    fila.classList.add('hidden');
                }
            });
        });

        // Confirmación para eliminación
        document.querySelectorAll('.confirm-delete').forEach(link => {
            link.addEventListener('click', function(e) {
                e.preventDefault();
                const id = this.getAttribute('data-id');
                const nombre = this.getAttribute('data-nombre');
                const fechas = this.getAttribute('data-fechas');

                Swal.fire({
                    title: '¿Eliminar Periodo?',
                    html: `
                        <div class="text-left space-y-3">
                            <p class="text-gray-700">Estás a punto de eliminar el periodo:</p>
                            <div class="bg-gray-100 p-4 rounded-lg">
                                <p class="font-semibold text-gray-900 text-lg text-center">${nombre}</p>
                                <p class="text-sm text-gray-600 text-center mt-1">${fechas}</p>
                            </div>
                            <div class="bg-red-50 border-l-4 border-red-400 p-3 rounded">
                                <p class="text-sm text-red-700">
                                    <strong>¡Advertencia!</strong><br>
                                    Esta acción eliminará permanentemente el periodo y puede afectar registros académicos asociados.
                                </p>
                            </div>
                        </div>
                    `,
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonColor: '#dc2626',
                    cancelButtonColor: '#6b7280',
                    confirmButtonText: 'Sí, eliminar',
                    cancelButtonText: 'Cancelar',
                    customClass: {
                        popup: 'rounded-2xl',
                        confirmButton: 'rounded-lg px-6 py-2.5',
                        cancelButton: 'rounded-lg px-6 py-2.5'
                    }
                }).then((result) => {
                    if (result.isConfirmed) {
                        // Rellenar formulario oculto
                        document.getElementById("deleteId").value = id;

                        // Enviar formulario por POST
                        const form = document.getElementById("deleteForm");
                        form.action = `/Periodo/Delete/${id}`;
                        form.submit();
                    }
                });
            });
        });

        // Mostrar mensaje de éxito con animación
        @if (TempData["SuccessMessage"] != null)
        {
                <text>
                setTimeout(() => {
                    const successAlert = document.querySelector('.bg-green-50');
                    if (successAlert) {
                        successAlert.style.animation = 'fade-in 0.5s ease-out';
                    }
                }, 100);
                </text>
        }

        // Combinar filtros
        function aplicarFiltros() {
            const anioId = document.getElementById('filterAnio')?.value || 'all';
            const periodoNum = document.getElementById('filterPeriodo')?.value || 'all';
            const filas = document.querySelectorAll('#periodosTable tbody tr');

            filas.forEach(fila => {
                const filaAnio = fila.getAttribute('data-anio');
                const filaPeriodo = fila.getAttribute('data-periodo');

                let mostrar = true;

                if (anioId !== 'all' && filaAnio !== anioId) {
                    mostrar = false;
                }

                if (periodoNum !== 'all' && filaPeriodo !== periodoNum) {
                    mostrar = false;
                }

                if (mostrar) {
                    fila.classList.remove('hidden');
                } else {
                    fila.classList.add('hidden');
                }
            });
        }

        // Aplicar ambos filtros cuando cambien
        document.getElementById('filterAnio')?.addEventListener('change', aplicarFiltros);
        document.getElementById('filterPeriodo')?.addEventListener('change', aplicarFiltros);
    </script>

