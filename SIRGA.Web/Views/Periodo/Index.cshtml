                </div>
            </div>
        </div>

        <!-- Mensajes de éxito/error -->
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="bg-green-50 border border-green-200 rounded-lg p-6 mb-6 animate-fade-in">
                <div class="flex items-start">
                    <svg class="w-6 h-6 text-green-400 mt-0.5 mr-3 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                    </svg>
                    <div class="flex-1">
                        <h3 class="text-sm font-medium text-green-800 mb-2">@TempData["SuccessMessage"]</h3>
                    </div>
                </div>
            </div>
        }

        @if (TempData["ErrorMessage"] != null)
        {
            <div class="bg-red-50 border border-red-200 rounded-lg p-4 mb-6 animate-fade-in">
                <div class="flex items-start">
                    <svg class="w-5 h-5 text-red-400 mt-0.5 mr-3 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                    </svg>
                    <div class="text-sm text-red-700">@TempData["ErrorMessage"]</div>
                </div>
            </div>
        }

        <!-- Tarjeta de contenido -->
        <div class="bg-white rounded-2xl shadow-xl border border-gray-100 overflow-hidden">
            <div class="px-8 py-6 border-b border-gray-200">
                <div class="flex flex-col sm:flex-row justify-between items-start sm:items-center gap-4">
                    <div>
                        <h2 class="text-2xl font-bold text-gray-900 flex items-center">
                            <svg class="w-6 h-6 mr-3 text-emerald-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 10h16M4 14h16M4 18h16" />
                            </svg>
                            Lista de Periodos
                        </h2>
                        <div class="mt-2 flex items-center space-x-4">
                            <!-- Filtro por año escolar 
                            <div class="flex items-center space-x-2">
                                <label class="text-sm text-gray-600">Filtrar por año:</label>
                                <select id="filterAnio" class="text-sm border-gray-300 rounded-lg focus:ring-emerald-500 focus:border-emerald-500">
                                    <option value="all">Todos los años</option>
                                    <!-- Esto debería cargarse dinámicamente desde ViewData o ViewBag
                                    @if (ViewData["AniosEscolares"] != null)
                                    {
                                        foreach (var anio in (List<SIRGA.Application.DTOs.Entities.AnioEscolarDto>)ViewData["AniosEscolares"])
                                        {
                                            <option value="@anio.Id">@anio.AnioInicio-@anio.AnioFin</option>
                                        }
                                    }
                                </select>
                        </div>-->

                            <!-- Filtro por periodo -->
                            <div class="flex items-center space-x-2">
                                <label class="text-sm text-gray-600">Periodo:</label>
                                <select id="filterPeriodo" class="text-sm border-gray-300 rounded-lg focus:ring-emerald-500 focus:border-emerald-500">
                                    <option value="all">Todos</option>
                                    <option value="1">Primer Periodo</option>
                                    <option value="2">Segundo Periodo</option>
                                    <option value="3">Tercer Periodo</option>
                                    <option value="4">Cuarto Periodo</option>
                                </select>
                            </div>
                        </div>
                    </div>

                    <div class="flex items-center space-x-2 text-sm text-gray-500">
                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                        </svg>
                        <span>Total: @Model.Count() periodo(s)</span>
                    </div>
                </div>
            </div>

            @if (Model != null && Model.Any())
            {
                <div class="overflow-x-auto">
                    <table class="min-w-full divide-y divide-gray-200" id="periodosTable">
                        <thead class="bg-gray-50">
                            <tr>
                                <th class="px-6 py-4 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                    ID
                                </th>
                                <th class="px-6 py-4 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                    Periodo
                                </th>
                                <th class="px-6 py-4 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                    Fecha Inicio
                                </th>
                                <th class="px-6 py-4 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                    Fecha Fin
                                </th>
                                <th class="px-6 py-4 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                    Duración
                                </th>
                                <th class="px-6 py-4 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                    Año Escolar
                                </th>
                                <th class="px-6 py-4 text-center text-xs font-medium text-gray-500 uppercase tracking-wider">
                                    Acciones
                                </th>
                            </tr>
                        </thead>
                        <tbody class="bg-white divide-y divide-gray-200">
                            @foreach (var item in Model)
                            {
                                var nombrePeriodo = ObtenerNombrePeriodo(item.Numero);
                                var colorPeriodo = ObtenerColorPeriodo(item.Numero);
                                var iconoPeriodo = ObtenerIconoPeriodo(item.Numero);
                                var duracion = (item.FechaFin - item.FechaInicio).Days + 1;

                                <tr class="hover:bg-gray-50 transition-colors duration-150"
                                    data-anio="@item.AnioEscolarId"
                                    data-periodo="@((int)item.Numero)">
                                    <td class="px-6 py-4 whitespace-nowrap">
                                        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-emerald-100 text-emerald-800">
                                            @Html.DisplayFor(modelItem => item.Id)
                                        </span>
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap">
                                        <div class="flex items-center">
                                            <div class="h-8 w-8 rounded-full flex items-center justify-center mr-3 @colorPeriodo.Replace("text-", "bg-").Split(' ')[0]">
                                                <svg class="w-4 h-4 @colorPeriodo.Replace("bg-", "text-").Split(' ')[1]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="@iconoPeriodo" />
                                                </svg>
                                            </div>
                                            <div>
                                                <div class="text-sm font-medium text-gray-900">@nombrePeriodo</div>
                                                <div class="text-xs text-gray-500">Número: @((int)item.Numero)</div>
                                            </div>
                                        </div>
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap">
                                        <div class="text-sm text-gray-900">
                                            <span class="inline-flex items-center px-2 py-1 rounded text-xs font-medium bg-blue-50 text-blue-700">
                                                <svg class="w-3 h-3 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                                                </svg>
                                                @item.FechaInicio.ToString("dd/MM/yyyy")
                                            </span>
                                        </div>
                                        <div class="text-xs text-gray-500 mt-1">@item.FechaInicio.ToString("dddd", new System.Globalization.CultureInfo("es-ES"))</div>
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap">
                                        <div class="text-sm text-gray-900">
                                            <span class="inline-flex items-center px-2 py-1 rounded text-xs font-medium bg-red-50 text-red-700">
                                                <svg class="w-3 h-3 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                                                </svg>
                                                @item.FechaFin.ToString("dd/MM/yyyy")
                                            </span>
                                        </div>
                                        <div class="text-xs text-gray-500 mt-1">@item.FechaFin.ToString("dddd", new System.Globalization.CultureInfo("es-ES"))</div>
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap">
                                        <div class="flex items-center">
                                            <div class="text-sm font-medium text-gray-900 mr-2">@duracion días</div>
                                            @if (duracion < 60)
                                            {
                                                <span class="text-xs px-2 py-1 rounded-full bg-yellow-100 text-yellow-800">Corto</span>
                                            }
                                            else if (duracion <= 90)
                                            {
                                                <span class="text-xs px-2 py-1 rounded-full bg-green-100 text-green-800">Normal</span>
                                            }
                                            else
                                            {
                                                <span class="text-xs px-2 py-1 rounded-full bg-blue-100 text-blue-800">Largo</span>
                                            }
                                        </div>
                                        @{
                                            var hoy = DateTime.Today;
                                            var estadoPeriodo = "";
                                            var colorEstado = "";
                                            if (hoy < item.FechaInicio)
                                            {
                                                estadoPeriodo = "Por iniciar";
                                                colorEstado = "bg-gray-100 text-gray-800";
                                            }
                                            else if (hoy >= item.FechaInicio && hoy <= item.FechaFin)
                                            {
                                                estadoPeriodo = "En curso";
                                                colorEstado = "bg-green-100 text-green-800";
                                            }
                                            else
                                            {
                                                estadoPeriodo = "Finalizado";
                                                colorEstado = "bg-blue-100 text-blue-800";
                                            }
                                        }
                                        <div class="text-xs mt-1">
                                            <span class="inline-flex items-center px-2 py-1 rounded-full @colorEstado">
                                                @if (hoy >= item.FechaInicio && hoy <= item.FechaFin)
                                                {
                                                    <svg class="w-3 h-3 mr-1 animate-pulse" fill="currentColor" viewBox="0 0 20 20">
                                                        <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 10-2 0v4a1 1 0 00.293.707l2.828 2.829a1 1 0 101.415-1.415L11 9.586V6z" clip-rule="evenodd" />
                                                    </svg>
                                                }
                                                @estadoPeriodo
                                            </span>
                                        </div>
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap">
                                        <div class="text-sm text-gray-900">
                                            <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-medium bg-indigo-100 text-indigo-800">
                                                <svg class="w-3 h-3 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                                                </svg>
                                                @item.AnioEscolar
                                            </span>
                                        </div>
                                        @if (ViewData["AniosEscolares"] != null)
                                        {
                                            var anio = ((List<SIRGA.Application.DTOs.Entities.AnioEscolarDto>)ViewData["AniosEscolares"])
                                            .FirstOrDefault(a => a.Id == item.AnioEscolarId);
                                            if (anio != null)
                                            {
                                                <div class="text-xs text-gray-500 mt-1">@anio.AnioInicio-@anio.AnioFin</div>
                                            }
                                        }
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap text-center">
                                        <div class="flex justify-center gap-2">
                                            <!-- Editar -->
                                            <a asp-action="Edit" asp-route-id="@item.Id"
                                               class="inline-flex items-center px-3 py-2 bg-blue-500 hover:bg-blue-600 text-white text-xs font-medium rounded-lg shadow-sm hover:shadow-md transition-all duration-200"
                                               title="Editar">
                                                <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
                                                </svg>
                                                Editar
                                            </a>

                                            <!-- Detalles -->
                                            <a asp-action="Details" asp-route-id="@item.Id"
                                               class="inline-flex items-center px-3 py-2 bg-purple-500 hover:bg-purple-600 text-white text-xs font-medium rounded-lg shadow-sm hover:shadow-md transition-all duration-200"
                                               title="Ver detalles">
                                                <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                                                </svg>
                                                Detalles
                                            </a>

                                            <!-- Eliminar -->
                                            <a href="#"
                                                data-id = "@item.Id"
                                               class="inline-flex items-center px-3 py-2 bg-red-500 hover:bg-red-600 text-white text-xs font-medium rounded-lg shadow-sm hover:shadow-md transition-all duration-200 confirm-delete"
                                               title="Eliminar"
                                               data-nombre="@nombrePeriodo"
                                               data-fechas="@item.FechaInicio.ToString("dd/MM/yyyy") - @item.FechaFin.ToString("dd/MM/yyyy")">
                                                <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                                                </svg>
                                                Eliminar
                                            </a>
                                            <form id="deleteForm" method="post" style="display:none;">
                                                <input type="hidden" name="id" id="deleteId" />
                                            </form>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-16">
                    <div class="mx-auto h-24 w-24 bg-gray-100 rounded-full flex items-center justify-center mb-6">
                        <svg class="w-12 h-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                  d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z">
                            </path>
                        </svg>
                    </div>
                    <h3 class="text-lg font-medium text-gray-900 mb-2">No hay periodos registrados</h3>
                    <p class="text-gray-500 mb-6">Los periodos definen los segmentos de tiempo dentro de un año escolar</p>
                    <a asp-action="Create"
                       class="inline-flex items-center px-6 py-3 bg-gradient-to-r from-emerald-500 to-emerald-600 hover:from-emerald-600 hover:to-emerald-700 text-white font-semibold rounded-lg shadow-lg">
                        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6" />
                        </svg>
                        Crear Primer Periodo
                    </a>
                </div>
            }
        </div>
    </div>
