@model EstudianteDashboardViewModel
@using SIRGA.Web.ViewComponents

@{
    ViewData["Title"] = "Panel de Estudiante";
}

<div class="min-h-screen bg-gray-50 px-3 sm:px-4 lg:px-8 pt-8 pb-12">
    <div class="max-w-7xl mx-auto">

        <!-- Encabezado usando View Component -->
        @await Component.InvokeAsync("DashboardHeader", new DashboardHeaderViewModel
   {
       Title = "Mi Panel",
       UserName = Model.UserName,
       ColorScheme = "blue",
       IconPath = "M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253",
       ShowDate = true
   })

        <!-- Alertas -->
        <partial name="_Alerts" />

        <!-- Estadísticas Rápidas -->
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
            @await Component.InvokeAsync("StatsCard", new StatsCardViewModel
       {
           Title = "Promedio General",
           Value = "94",
           ColorScheme = "blue",
           IconPath = "M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"
       })

            @await Component.InvokeAsync("StatsCard", new StatsCardViewModel
       {
           Title = "Asignaturas Cursando",
           Value = "8",
           ColorScheme = "green",
           IconPath = "M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"
       })

            @await Component.InvokeAsync("StatsCard", new StatsCardViewModel
       {
           Title = "Asistencia",
           Value = "98%",
           ColorScheme = "orange",
           IconPath = "M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"
       })

            @await Component.InvokeAsync("StatsCard", new StatsCardViewModel
       {
           Title = "Clases Hoy",
           Value = "6",
           ColorScheme = "purple",
           IconPath = "M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"
       })
        </div>

        <!-- Módulos Principales -->
        <div class="bg-white rounded-2xl shadow-xl p-8 border border-gray-100 mb-8">
            <h2 class="text-2xl font-bold text-gray-900 mb-6 flex items-center">
                <svg class="w-6 h-6 mr-3 text-blue-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2H6a2 2 0 01-2-2V6zM14 6a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2h-2a2 2 0 01-2-2V6zM4 16a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2H6a2 2 0 01-2-2v-2zM14 16a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2h-2a2 2 0 01-2-2v-2z"></path>
                </svg>
                Mis Recursos Académicos
            </h2>

            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                @await Component.InvokeAsync("NavigationCard", new NavigationCardViewModel
           {
               Title = "Mis Calificaciones",
               Description = "Consulta tus notas y promedios",
               Controller = "Estudiante",
               Action = "Calificaciones",
               ColorScheme = "blue",
               IconPath = "M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"
           })

                @await Component.InvokeAsync("NavigationCard", new NavigationCardViewModel
           {
               Title = "Mi Horario",
               Description = "Consulta tu horario de clases",
               Controller = "Estudiante",
               Action = "Horario",
               ColorScheme = "green",
               IconPath = "M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"
           })

                @await Component.InvokeAsync("NavigationCard", new NavigationCardViewModel
           {
               Title = "Bienestar Estudiantil",
               Description = "Actividades extracurriculares",
               Controller = "BienestarEstudiantil",
               Action = "Index",
               ColorScheme = "purple",
               IconPath = "M14.828 14.828a4 4 0 01-5.656 0M9 10h.01M15 10h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"
           })
            </div>
        </div>

        <!-- Horario de Hoy -->
        @* <div class="bg-white rounded-2xl shadow-xl p-8 border border-gray-100">
        <h2 class="text-2xl font-bold text-gray-900 mb-6 flex items-center">
        <svg class="w-6 h-6 mr-3 text-blue-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
        </svg>
        Clases de Hoy
        </h2>

        @if (Model.TodayClasses != null && Model.TodayClasses.Any())
        {
        <div class="space-y-4">
        @foreach (var clase in Model.TodayClasses)
        {
        <div class="bg-gray-50 rounded-lg p-6 border border-gray-200 hover:shadow-md transition-shadow">
        <div class="flex items-center justify-between flex-wrap gap-4">
        <div class="flex items-center">
        <div class="bg-blue-100 rounded-lg p-3 mr-4">
        <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"></path>
        </svg>
        </div>
        <div>
        <h3 class="text-lg font-semibold text-gray-900">@clase.CourseName</h3>
        <p class="text-sm text-gray-600">Profesor: @clase.TeacherName</p>
        <p class="text-sm text-gray-500">@clase.StartTime - @clase.EndTime | Aula @clase.Classroom</p>
        </div>
        </div>
        <div class="flex items-center gap-2">
        @if (clase.IsNow)
        {
        <span class="px-3 py-1 bg-green-100 text-green-700 text-sm font-medium rounded-full flex items-center">
        <span class="w-2 h-2 bg-green-500 rounded-full mr-2 animate-pulse"></span>
        En curso
        </span>
        }
        else if (clase.IsNext)
        {
        <span class="px-3 py-1 bg-orange-100 text-orange-700 text-sm font-medium rounded-full">
        Próxima clase
        </span>
        }
        </div>
        </div>
        </div>
        }
        </div>
        }
        else
        {
        <div class="text-center py-12">
        <svg class="w-16 h-16 mx-auto text-gray-400 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
        </svg>
        <p class="text-gray-500 text-lg">No tienes clases programadas para hoy</p>
        <p class="text-gray-400 text-sm mt-2">¡Disfruta tu día libre!</p>
        </div>
        }
        </div>

        <!-- Resumen de Calificaciones Recientes -->
        <div class="bg-white rounded-2xl shadow-xl p-8 border border-gray-100 mt-8">
        <h2 class="text-2xl font-bold text-gray-900 mb-6 flex items-center">
        <svg class="w-6 h-6 mr-3 text-blue-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
        </svg>
        Calificaciones Recientes
        </h2>

        @if (Model.RecentGrades != null && Model.RecentGrades.Any())
        {
        <div class="overflow-x-auto">
        <table class="min-w-full divide-y divide-gray-200">
        <thead class="bg-gray-50">
        <tr>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Asignatura</th>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Evaluación</th>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Calificación</th>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Fecha</th>
        </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
        @foreach (var grade in Model.RecentGrades)
        {
        <tr class="hover:bg-gray-50">
        <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">@grade.SubjectName</td>
        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-600">@grade.EvaluationType</td>
        <td class="px-6 py-4 whitespace-nowrap">
        <span class="px-3 py-1 text-sm font-semibold rounded-full @(grade.Score >= 70 ? "bg-green-100 text-green-800" : "bg-red-100 text-red-800")">
        @grade.Score
        </span>
        </td>
        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">@grade.Date.ToString("dd/MM/yyyy")</td>
        </tr>
        }
        </tbody>
        </table>
        </div>
        }
        else
        {
        <div class="text-center py-8">
        <svg class="w-12 h-12 mx-auto text-gray-400 mb-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
        </svg>
        <p class="text-gray-500">No hay calificaciones registradas aún</p>
        </div>
        }
        </div> *@

    </div>
</div>