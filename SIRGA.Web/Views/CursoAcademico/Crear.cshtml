@model SIRGA.Web.Models.CursoAcademico.CreateCursoAcademicoDto

@{
    ViewData["Title"] = "Crear Curso Académico";
    var grados = ViewBag.Grados as List<SIRGA.Web.Models.Grado.GradoDto> ?? new List<SIRGA.Web.Models.Grado.GradoDto>();
    var currentYear = DateTime.Now.Year;
    var nextYear = currentYear + 1;
    Layout = "~/Views/Shared/_LayoutWithSidebar.cshtml";
    ViewBag.UserName = User.Identity.Name;
    ViewBag.UserRole = "Administrador";
}

@section SidebarMenu {
    <partial name="_AdminSidebarMenu" />
}

<div class="min-h-screen bg-gray-50 px-3 sm:px-4 lg:px-8 pt-8 pb-12">
    <div class="max-w-2xl mx-auto">

        <!-- Header -->
        <div class="bg-white rounded-2xl shadow-xl p-8 border border-gray-100 mb-8">
            <div class="flex items-center">
                <div class="h-12 w-12 bg-gradient-to-r from-teal-500 to-teal-600 rounded-full flex items-center justify-center mr-4 shadow-lg">
                    <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
                    </svg>
                </div>
                <div>
                    <h1 class="text-3xl font-bold text-gray-900">Crear Curso Académico</h1>
                    <p class="text-gray-600 mt-1">Asigna un año escolar a un grado específico</p>
                </div>
            </div>
        </div>

        <!-- Formulario -->
        <div class="bg-white rounded-2xl shadow-xl p-8 border border-gray-100">
            <form asp-action="Crear" method="post" class="space-y-6">
                @Html.AntiForgeryToken()
                <div asp-validation-summary="ModelOnly" class="text-sm text-red-500 bg-red-50 border border-red-200 rounded-lg p-4"></div>

                <!-- Información -->
                <div class="bg-teal-50 border border-teal-200 rounded-lg p-4 mb-6">
                    <div class="flex items-start">
                        <svg class="w-5 h-5 text-teal-500 mt-0.5 mr-3 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                        </svg>
                        <div class="text-sm text-teal-700">
                            <p class="font-semibold mb-2">Sobre los cursos académicos:</p>
                            <ul class="list-disc list-inside space-y-1">
                                <li>Selecciona el grado y sección correspondiente</li>
                                <li>El año escolar debe tener formato: <strong>YYYY-YYYY</strong></li>
                                <li>Ejemplo: <strong>@currentYear-@nextYear</strong></li>
                            </ul>
                        </div>
                    </div>
                </div>

                <!-- Grado -->
                <div>
                    <label asp-for="IdGrado" class="block text-md font-medium text-gray-700 mb-2">
                        <span class="flex items-center">
                            <svg class="w-5 h-5 mr-2 text-teal-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
                            </svg>
                            Grado y Sección <span class="text-red-500">*</span>
                        </span>
                    </label>
                    <select asp-for="IdGrado"
                            class="w-full px-4 py-3 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-teal-500 focus:border-teal-500 transition-all duration-200">
                        <option value="">Seleccione un grado...</option>
                        @foreach (var grado in grados)
                        {
                            <option value="@grado.Id">@grado.GradeName - Sección @grado.Section (Límite: @grado.StudentsLimit estudiantes)</option>
                        }
                    </select>
                    <span asp-validation-for="IdGrado" class="text-sm text-red-500 mt-1"></span>
                    @if (!grados.Any())
                    {
                        <p class="mt-2 text-sm text-yellow-600 bg-yellow-50 border border-yellow-200 rounded-lg p-3">
                            <svg class="w-4 h-4 inline mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"></path>
                            </svg>
                            No hay grados disponibles. <a asp-controller="Grado" asp-action="Crear" class="font-semibold underline">Crear un grado primero</a>
                        </p>
                    }
                </div>

                <!-- Año Escolar -->
                <div>
                    <label asp-for="SchoolYear" class="block text-md font-medium text-gray-700 mb-2">
                        <span class="flex items-center">
                            <svg class="w-5 h-5 mr-2 text-teal-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                            </svg>
                            Año Escolar <span class="text-red-500">*</span>
                        </span>
                    </label>
                    <input asp-for="SchoolYear"
                           class="w-full px-4 py-3 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-teal-500 focus:border-teal-500 transition-all duration-200"
                           placeholder="@currentYear-@nextYear"
                           maxlength="9" />
                    <span asp-validation-for="SchoolYear" class="text-sm text-red-500 mt-1"></span>
                    <p class="mt-2 text-sm text-gray-500">
                        <svg class="w-4 h-4 inline mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                        </svg>
                        Formato requerido: YYYY-YYYY (ej: @currentYear-@nextYear)
                    </p>
                </div>

                <!-- Ejemplo visual -->
                <div class="bg-gradient-to-r from-teal-50 to-cyan-50 border border-teal-200 rounded-lg p-6">
                    <h3 class="text-sm font-semibold text-teal-900 mb-3 flex items-center">
                        <svg class="w-5 h-5 mr-2 text-teal-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"></path>
                        </svg>
                        Ejemplo de configuración
                    </h3>
                    <div class="grid grid-cols-2 gap-4 text-sm">
                        <div class="bg-white rounded-lg p-3 border border-teal-200">
                            <p class="text-gray-600">Grado:</p>
                            <p class="font-semibold text-gray-900">1ro Básico - Sección A</p>
                        </div>
                        <div class="bg-white rounded-lg p-3 border border-teal-200">
                            <p class="text-gray-600">Año Escolar:</p>
                            <p class="font-semibold text-gray-900">@currentYear-@nextYear</p>
                        </div>
                    </div>
                </div>

                <!-- Botones -->
                <div class="flex justify-end gap-4 pt-6 border-t border-gray-200">
                    <a asp-action="Index"
                       class="px-6 py-3 bg-gray-100 hover:bg-gray-200 text-gray-700 font-semibold rounded-lg shadow-md transition-all duration-200">
                        Cancelar
                    </a>
                    <button type="submit"
                            class="px-6 py-3 bg-gradient-to-r from-teal-500 to-teal-600 hover:from-teal-600 hover:to-teal-700 text-white font-semibold rounded-lg shadow-lg hover:shadow-xl transform hover:scale-105 transition-all duration-200">
                        <span class="flex items-center">
                            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                            </svg>
                            Crear Curso
                        </span>
                    </button>
                </div>
            </form>
        </div>

    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        // Auto-formatear año escolar mientras se escribe
        document.querySelector('input[name="SchoolYear"]').addEventListener('input', function(e) {
            let value = e.target.value.replace(/[^\d-]/g, '');

            // Limitar formato a YYYY-YYYY
            if (value.length > 9) {
                value = value.substring(0, 9);
            }

            // Auto-agregar guión después de los primeros 4 dígitos
            if (value.length >= 4 && value.indexOf('-') === -1) {
                value = value.substring(0, 4) + '-' + value.substring(4);
            }

            e.target.value = value;
        });
    </script>
}