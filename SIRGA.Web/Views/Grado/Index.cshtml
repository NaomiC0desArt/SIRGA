@model List<SIRGA.Web.Models.Grado.GradoDto>

@{
    ViewData["Title"] = "Gestión de Grados";
    Layout = "~/Views/Shared/_LayoutWithSidebar.cshtml";
    ViewBag.UserName = User.Identity.Name;
    ViewBag.UserRole = "Administrador";
}

@section SidebarMenu {
    <partial name="_AdminSidebarMenu" />
}

<div class="max-w-7xl mx-auto">
    <!-- Header -->
    <div class="bg-white rounded-2xl shadow-xl p-8 border border-gray-100 mb-8">
        <div class="flex justify-between items-center">
            <div class="flex items-center">
                <div class="h-12 w-12 bg-gradient-to-r from-indigo-500 to-indigo-600 rounded-full flex items-center justify-center mr-4">
                    <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
                    </svg>
                </div>
                <div>
                    <h1 class="text-3xl font-bold text-gray-900">Gestión de Grados</h1>
                    <p class="text-gray-600 mt-1">Administra los grados académicos del sistema</p>
                </div>
            </div>

            <button onclick="abrirModalGrado()" class="px-6 py-3 bg-gradient-to-r from-indigo-500 to-indigo-600 hover:from-indigo-600 hover:to-indigo-700 text-white font-semibold rounded-lg shadow-lg">
                <svg class="w-5 h-5 inline mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6" />
                </svg>
                Nuevo Grado
            </button>
        </div>
    </div>

    <!-- Grados por Nivel -->
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
        <!-- Primaria -->
        <div class="bg-white rounded-2xl shadow-xl border border-gray-100 overflow-hidden">
            <div class="bg-gradient-to-r from-blue-500 to-blue-600 p-6">
                <h2 class="text-2xl font-bold text-white flex items-center">
                    <svg class="w-6 h-6 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"></path>
                    </svg>
                    Primaria
                </h2>
            </div>
            <div class="p-6">
                @{
                    var gradosPrimaria = Model.Where(g => g.Nivel == "Primaria").ToList();
                }
                @if (gradosPrimaria.Any())
                {
                    <div class="space-y-3">
                        @foreach (var grado in gradosPrimaria)
                        {
                            <div class="flex items-center justify-between p-4 bg-blue-50 rounded-lg hover:bg-blue-100 transition">
                                <div>
                                    <h3 class="font-semibold text-gray-900">@grado.GradeName</h3>
                                </div>
                                <div class="flex gap-2">
                                    <button onclick="editarGrado(@grado.Id)" class="px-3 py-2 bg-blue-500 hover:bg-blue-600 text-white text-xs rounded-lg">
                                        Editar
                                    </button>
                                    <button onclick="eliminarGrado(@grado.Id, '@grado.GradeName')" class="px-3 py-2 bg-red-500 hover:bg-red-600 text-white text-xs rounded-lg">
                                        Eliminar
                                    </button>
                                </div>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <p class="text-center text-gray-500 py-8">No hay grados de primaria</p>
                }
            </div>
        </div>

        <!-- Secundaria -->
        <div class="bg-white rounded-2xl shadow-xl border border-gray-100 overflow-hidden">
            <div class="bg-gradient-to-r from-purple-500 to-purple-600 p-6">
                <h2 class="text-2xl font-bold text-white flex items-center">
                    <svg class="w-6 h-6 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 14l9-5-9-5-9 5 9 5z"></path>
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 14l6.16-3.422a12.083 12.083 0 01.665 6.479A11.952 11.952 0 0012 20.055a11.952 11.952 0 00-6.824-2.998 12.078 12.078 0 01.665-6.479L12 14z"></path>
                    </svg>
                    Secundaria
                </h2>
            </div>
            <div class="p-6">
                @{
                    var gradosSecundaria = Model.Where(g => g.Nivel == "Secundaria").ToList();
                }
                @if (gradosSecundaria.Any())
                {
                    <div class="space-y-3">
                        @foreach (var grado in gradosSecundaria)
                        {
                            <div class="flex items-center justify-between p-4 bg-purple-50 rounded-lg hover:bg-purple-100 transition">
                                <div>
                                    <h3 class="font-semibold text-gray-900">@grado.GradeName</h3>
                                </div>
                                <div class="flex gap-2">
                                    <button onclick="editarGrado(@grado.Id)" class="px-3 py-2 bg-purple-500 hover:bg-purple-600 text-white text-xs rounded-lg">
                                        Editar
                                    </button>
                                    <button onclick="eliminarGrado(@grado.Id, '@grado.GradeName')" class="px-3 py-2 bg-red-500 hover:bg-red-600 text-white text-xs rounded-lg">
                                        Eliminar
                                    </button>
                                </div>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <p class="text-center text-gray-500 py-8">No hay grados de secundaria</p>
                }
            </div>
        </div>
    </div>
</div>

<!-- Modal Crear/Editar Grado -->
<div id="modalGrado" class="hidden fixed inset-0 z-50 overflow-y-auto">
    <div class="flex items-center justify-center min-h-screen px-4">
        <div class="fixed inset-0 bg-gray-900 bg-opacity-75" onclick="cerrarModalGrado()"></div>

        <div class="relative bg-white rounded-2xl shadow-2xl max-w-md w-full p-8">
            <div class="flex items-center justify-between mb-6">
                <h2 id="modalTituloGrado" class="text-2xl font-bold text-gray-900">Nuevo Grado</h2>
                <button onclick="cerrarModalGrado()" class="text-gray-400 hover:text-gray-600">
                    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                    </svg>
                </button>
            </div>

            <form id="formGrado" class="space-y-6">
                @Html.AntiForgeryToken()
                <input type="hidden" id="gradoId" value="0" />

                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-2">Nombre del Grado *</label>
                    <input type="text" id="gradeName" required class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500" placeholder="Ej: 1ro, 2do, 3ro" />
                </div>

                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-2">Nivel Educativo *</label>
                    <select id="nivel" required class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500">
                        <option value="">Seleccione un nivel...</option>
                        <option value="1">Primaria</option>
                        <option value="2">Secundaria</option>
                    </select>
                </div>

                <div class="flex justify-end gap-3 pt-4 border-t">
                    <button type="button" onclick="cerrarModalGrado()" class="px-6 py-3 bg-gray-100 hover:bg-gray-200 text-gray-700 rounded-lg">
                        Cancelar
                    </button>
                    <button type="submit" class="px-6 py-3 bg-indigo-500 hover:bg-indigo-600 text-white rounded-lg">
                        Guardar
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        function abrirModalGrado() {
            document.getElementById('modalTituloGrado').textContent = 'Nuevo Grado';
            document.getElementById('formGrado').reset();
            document.getElementById('gradoId').value = '0';
            document.getElementById('modalGrado').classList.remove('hidden');
        }

        function cerrarModalGrado() {
            document.getElementById('modalGrado').classList.add('hidden');
        }

        async function editarGrado(id) {
            try {
                const response = await fetch(`/Grado/ObtenerGrado?id=${id}`);
                const result = await response.json();

                if (result.success) {
                    document.getElementById('modalTituloGrado').textContent = 'Editar Grado';
                    document.getElementById('gradoId').value = id;
                    document.getElementById('gradeName').value = result.data.gradeName;
                    document.getElementById('nivel').value = result.data.nivel === 'Primaria' ? '1' : '2';
                    document.getElementById('modalGrado').classList.remove('hidden');
                } else {
                    Swal.fire('Error', result.message, 'error');
                }
            } catch (error) {
                console.error('Error:', error);
                Swal.fire('Error', 'Error al cargar el grado', 'error');
            }
        }

        document.getElementById('formGrado').addEventListener('submit', async function(e) {
            e.preventDefault();

            const id = document.getElementById('gradoId').value;
            const formData = {
                gradeName: document.getElementById('gradeName').value,
                nivel: parseInt(document.getElementById('nivel').value)
            };

            const token = document.querySelector('input[name="__RequestVerificationToken"]').value;
            const url = id === '0' ? '/Grado/Crear' : `/Grado/Actualizar/${id}`;
            const method = id === '0' ? 'POST' : 'PUT';

            try {
                const response = await fetch(url, {
                    method: method,
                    headers: { 
                        'Content-Type': 'application/json',
                        'RequestVerificationToken': token
                    },
                    body: JSON.stringify(formData)
                });

                const result = await response.json();

                if (result.success) {
                    Swal.fire('¡Éxito!', result.message, 'success').then(() => location.reload());
                } else {
                    Swal.fire('Error', result.message, 'error');
                }
            } catch (error) {
                console.error('Error:', error);
                Swal.fire('Error', 'Error al procesar la solicitud', 'error');
            }
        });

        async function eliminarGrado(id, nombre) {
            const result = await Swal.fire({
                title: '¿Eliminar grado?',
                html: `Se eliminará el grado <strong>${nombre}</strong>`,
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#dc2626',
                cancelButtonText: 'Cancelar',
                confirmButtonText: 'Sí, eliminar'
            });

            if (result.isConfirmed) {
                try {
                    const token = document.querySelector('input[name="__RequestVerificationToken"]').value;
                    const response = await fetch(`/Grado/Eliminar/${id}`, { 
                        method: 'DELETE',
                        headers: {
                            'RequestVerificationToken': token
                        }
                    });
                    const data = await response.json();

                    if (data.success) {
                        Swal.fire('¡Eliminado!', data.message, 'success').then(() => location.reload());
                    } else {
                        Swal.fire('Error', data.message, 'error');
                    }
                } catch (error) {
                    console.error('Error:', error);
                    Swal.fire('Error', 'Error al eliminar el grado', 'error');
                }
            }
        }
    </script>
}