@model SIRGA.Web.Models.Inscripcion.InscripcionDto

@{
    ViewData["Title"] = "Detalles de Inscripción";
}

<div class="min-h-screen bg-gray-50 px-3 sm:px-4 lg:px-8 pt-8 pb-12">
    <div class="max-w-5xl mx-auto">

        <!-- Header -->
        <div class="bg-white rounded-2xl shadow-xl p-8 border border-gray-100 mb-8">
            <div class="flex flex-col sm:flex-row justify-between items-start sm:items-center gap-4">
                <div class="flex items-center">
                    <div class="h-16 w-16 bg-gradient-to-r from-green-500 to-green-600 rounded-full flex items-center justify-center mr-4 shadow-lg">
                        <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                        </svg>
                    </div>
                    <div>
                        <h1 class="text-3xl font-bold text-gray-900">Inscripción #@Model.Id</h1>
                        <p class="text-gray-600 mt-1">
                            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-sm font-medium bg-green-100 text-green-800">
                                Registrada el @Model.FechaInscripcion.ToString("dd/MM/yyyy")
                            </span>
                        </p>
                    </div>
                </div>

                <div class="flex gap-3">
                    <a asp-action="Editar" asp-route-id="@Model.Id"
                       class="inline-flex items-center px-4 py-2 bg-green-500 hover:bg-green-600 text-white font-semibold rounded-lg shadow-md transition-all duration-200">
                        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
                        </svg>
                        Editar
                    </a>
                    <a asp-action="Index"
                       class="inline-flex items-center px-4 py-2 bg-gray-100 hover:bg-gray-200 text-gray-700 font-semibold rounded-lg shadow-md transition-all duration-200">
                        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
                        </svg>
                        Volver
                    </a>
                </div>
            </div>
        </div>

        <!-- Grid de Información -->
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">

            <!-- Información del Estudiante -->
            <div class="bg-white rounded-2xl shadow-xl p-6 border border-gray-100">
                <h2 class="text-xl font-bold text-gray-900 mb-4 flex items-center">
                    <svg class="w-6 h-6 mr-2 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                    </svg>
                    Información del Estudiante
                </h2>

                <div class="space-y-4">
                    <div>
                        <label class="text-sm font-medium text-gray-500">Nombre Completo</label>
                        <p class="text-lg text-gray-900 font-semibold">@Model.EstudianteNombre</p>
                    </div>

                    <div>
                        <label class="text-sm font-medium text-gray-500">Matrícula</label>
                        <p class="text-lg text-gray-900">
                            <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-blue-100 text-blue-800">
                                @Model.EstudianteMatricula
                            </span>
                        </p>
                    </div>

                    <div>
                        <label class="text-sm font-medium text-gray-500">ID de Estudiante</label>
                        <p class="text-lg text-gray-900">@Model.IdEstudiante</p>
                    </div>

                    <div class="pt-4 border-t border-gray-200">
                        <a asp-controller="Admin" asp-action="DetallesEstudiante" asp-route-id="@Model.IdEstudiante"
                           class="inline-flex items-center text-green-600 hover:text-green-800 font-medium">
                            Ver perfil completo del estudiante
                            <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                            </svg>
                        </a>
                    </div>
                </div>
            </div>

            <!-- Información del Curso Académico -->
            <div class="bg-white rounded-2xl shadow-xl p-6 border border-gray-100">
                <h2 class="text-xl font-bold text-gray-900 mb-4 flex items-center">
                    <svg class="w-6 h-6 mr-2 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
                    </svg>
                    Información del Curso
                </h2>

                <div class="space-y-4">
                    <div>
                        <label class="text-sm font-medium text-gray-500">Curso Académico</label>
                        <p class="text-lg text-gray-900 font-semibold">@Model.CursoAcademicoNombre</p>
                    </div>

                    <div>
                        <label class="text-sm font-medium text-gray-500">ID de Curso</label>
                        <p class="text-lg text-gray-900">@Model.IdCursoAcademico</p>
                    </div>

                    <div>
                        <label class="text-sm font-medium text-gray-500">Estado</label>
                        <p class="text-lg text-gray-900">
                            <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-green-100 text-green-800">
                                <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                                </svg>
                                Activa
                            </span>
                        </p>
                    </div>
                </div>
            </div>

            <!-- Detalles de la Inscripción -->
            <div class="bg-white rounded-2xl shadow-xl p-6 border border-gray-100">
                <h2 class="text-xl font-bold text-gray-900 mb-4 flex items-center">
                    <svg class="w-6 h-6 mr-2 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                    </svg>
                    Detalles de Registro
                </h2>

                <div class="space-y-4">
                    <div>
                        <label class="text-sm font-medium text-gray-500">Fecha de Inscripción</label>
                        <p class="text-lg text-gray-900">@Model.FechaInscripcion.ToString("dddd, dd 'de' MMMM 'de' yyyy")</p>
                    </div>

                    <div>
                        <label class="text-sm font-medium text-gray-500">ID de Inscripción</label>
                        <p class="text-lg text-gray-900">#@Model.Id</p>
                    </div>

                    <div>
                        <label class="text-sm font-medium text-gray-500">Tiempo desde la inscripción</label>
                        <p class="text-lg text-gray-900">
                            @{
                                var dias = (DateTime.Now - Model.FechaInscripcion).Days;
                            }
                            @if (dias == 0)
                            {
                                <span class="text-green-600 font-semibold">Hoy</span>
                            }
                            else if (dias == 1)
                            {
                                <span>Hace 1 día</span>
                            }
                            else if (dias < 30)
                            {
                                <span>Hace @dias días</span>
                            }
                            else if (dias < 365)
                            {
                                var meses = dias / 30;
                                <span>Hace @meses mes@(meses > 1 ? "es" : "")</span>
                            }
                            else
                            {
                                var años = dias / 365;
                                <span>Hace @años año@(años > 1 ? "s" : "")</span>
                            }
                        </p>
                    </div>
                </div>
            </div>

            <!-- Acciones Rápidas -->
            <div class="bg-white rounded-2xl shadow-xl p-6 border border-gray-100">
                <h2 class="text-xl font-bold text-gray-900 mb-4 flex items-center">
                    <svg class="w-6 h-6 mr-2 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
                    </svg>
                    Acciones Rápidas
                </h2>

                <div class="space-y-3">
                    <a asp-controller="Admin" asp-action="DetallesEstudiante" asp-route-id="@Model.IdEstudiante"
                       class="flex items-center p-3 bg-blue-50 hover:bg-blue-100 rounded-lg transition-colors duration-200">
                        <svg class="w-5 h-5 text-blue-600 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                        </svg>
                        <span class="text-sm font-medium text-blue-900">Ver perfil del estudiante</span>
                    </a>

                    <a asp-action="Editar" asp-route-id="@Model.Id"
                       class="flex items-center p-3 bg-green-50 hover:bg-green-100 rounded-lg transition-colors duration-200">
                        <svg class="w-5 h-5 text-green-600 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
                        </svg>
                        <span class="text-sm font-medium text-green-900">Editar inscripción</span>
                    </a>

                    <button type="button" onclick="imprimirDetalles()"
                            class="flex items-center w-full p-3 bg-purple-50 hover:bg-purple-100 rounded-lg transition-colors duration-200">
                        <svg class="w-5 h-5 text-purple-600 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 17h2a2 2 0 002-2v-4a2 2 0 00-2-2H5a2 2 0 00-2 2v4a2 2 0 002 2h2m2 4h6a2 2 0 002-2v-4a2 2 0 00-2-2H9a2 2 0 00-2 2v4a2 2 0 002 2zm8-12V5a2 2 0 00-2-2H9a2 2 0 00-2 2v4h10z"></path>
                        </svg>
                        <span class="text-sm font-medium text-purple-900">Imprimir comprobante</span>
                    </button>
                </div>
            </div>

        </div>

        <!-- Resumen en Card -->
        <div class="mt-6 bg-white rounded-2xl shadow-xl p-6 border border-gray-100">
            <h2 class="text-xl font-bold text-gray-900 mb-4 flex items-center">
                <svg class="w-6 h-6 mr-2 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"></path>
                </svg>
                Resumen de la Inscripción
            </h2>

            <div class="bg-gradient-to-r from-green-50 to-green-100 rounded-lg p-6 border border-green-200">
                <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
                    <div class="text-center">
                        <div class="text-sm font-medium text-green-600 mb-1">Estudiante</div>
                        <div class="text-lg font-bold text-green-900">@Model.EstudianteNombre</div>
                        <div class="text-xs text-green-600 mt-1">@Model.EstudianteMatricula</div>
                    </div>
                    <div class="text-center">
                        <div class="text-sm font-medium text-green-600 mb-1">Curso Académico</div>
                        <div class="text-lg font-bold text-green-900">@Model.CursoAcademicoNombre</div>
                    </div>
                    <div class="text-center">
                        <div class="text-sm font-medium text-green-600 mb-1">Fecha de Inscripción</div>
                        <div class="text-lg font-bold text-green-900">@Model.FechaInscripcion.ToString("dd/MM/yyyy")</div>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>

@section Scripts {
    <script>
        function imprimirDetalles() {
            window.print();
        }
    </script>
}