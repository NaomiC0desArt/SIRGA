@model SIRGA.Web.Models.ActividadExtracurricular.ActividadDetalleViewModel

@{
    ViewData["Title"] = Model.Nombre;
    Layout = "~/Views/Shared/_LayoutWithSidebar.cshtml";
    //ViewBag.UserName = Model.Fi;
    ViewBag.UserRole = "Estudiante";
}

@section SidebarMenu {
    <partial name="_EstudianteSidebarMenu"   />
}

<div class="min-h-screen bg-gradient-to-br from-purple-50 via-white to-blue-50 px-3 sm:px-4 lg:px-8 pt-8 pb-12">
    <div class="max-w-5xl mx-auto">

        <!-- Botón Volver -->
        <div class="mb-6">
            <a asp-action="Index" class="inline-flex items-center px-4 py-2 bg-white hover:bg-gray-50 text-gray-700 rounded-lg shadow-md transition-colors">
                <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
                </svg>
                Volver a Actividades
            </a>
        </div>

        <!-- Alertas -->
        <partial name="_Alerts" />

        <!-- Card Principal -->
        <div class="bg-white rounded-3xl shadow-2xl overflow-hidden border border-gray-100">

            <!-- Folleto/Imagen Completa -->
            <div class="relative bg-white">
                @if (!string.IsNullOrEmpty(Model.RutaImagen))
                {
                    <!-- ✅ Imagen completa del folleto (no recortada) -->
                    <img src="@Model.RutaImagen"
                         alt="@Model.Nombre"
                         class="w-full h-auto object-contain card-img"
                         onerror="this.style.display='none'; document.getElementById('fallback-@Model.Id').style.display='flex';">

                    <!-- Badges flotantes sobre la imagen -->
                    <div class="absolute top-6 left-6 flex gap-3 z-10">
                        <span class="px-4 py-2 bg-white text-gray-800 text-sm font-bold rounded-full shadow-2xl">
                            @Model.Categoria
                        </span>
                        @if (Model.EstaInscrito)
                        {
                            <span class="px-4 py-2 bg-green-500 text-white text-sm font-bold rounded-full shadow-2xl flex items-center">
                                <svg class="w-4 h-4 mr-1.5" fill="currentColor" viewBox="0 0 20 20">
                                    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                                </svg>
                                Ya Inscrito
                            </span>
                        }
                    </div>

                    <!-- Fallback si la imagen no carga -->
                    <div id="fallback-@Model.Id" class="hidden w-full min-h-[400px] flex items-center justify-center" style="background: linear-gradient(135deg, @Model.ColorTarjeta 0%, @Model.ColorTarjeta 100%);">
                        <div class="text-center text-white">
                            <svg class="w-32 h-32 mx-auto mb-4 opacity-30" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"></path>
                            </svg>
                            <p class="text-2xl font-bold">@Model.Nombre</p>
                            <p class="text-lg opacity-90 mt-2">Folleto no disponible</p>
                        </div>
                    </div>
                }
                else
                {
                    <!-- Si no hay imagen, mostrar header con color -->
                    <div class="w-full min-h-[400px] flex items-center justify-center" style="background: linear-gradient(135deg, @Model.ColorTarjeta 0%, @Model.ColorTarjeta 100%);">
                        <div class="text-center text-white p-8">
                            <svg class="w-32 h-32 mx-auto mb-6 opacity-30" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"></path>
                            </svg>
                            <div class="mb-4">
                                <span class="inline-block px-4 py-2 bg-white text-gray-800 text-sm font-bold rounded-full shadow-xl mb-4">
                                    @Model.Categoria
                                </span>
                                @if (Model.EstaInscrito)
                                {
                                    <span class="inline-block ml-2 px-4 py-2 bg-green-500 text-white text-sm font-bold rounded-full shadow-xl">
                                        <svg class="w-4 h-4 inline-block mr-1" fill="currentColor" viewBox="0 0 20 20">
                                            <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                                        </svg>
                                        Ya Inscrito
                                    </span>
                                }
                            </div>
                            <h1 class="text-5xl font-bold mb-4">@Model.Nombre</h1>
                            <div class="flex items-center justify-center text-xl">
                                <svg class="w-6 h-6 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
                                </svg>
                                @Model.TotalInscritos estudiante(s) inscrito(s)
                            </div>
                        </div>
                    </div>
                }
            </div>

            <!-- Título y Contador (visible solo cuando hay imagen) -->
            @if (!string.IsNullOrEmpty(Model.RutaImagen))
            {
                <div class="p-6 bg-gradient-to-r from-purple-600 to-blue-600 text-white">
                    <h1 class="text-4xl md:text-5xl font-bold mb-2">@Model.Nombre</h1>
                    <div class="flex items-center text-lg">
                        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
                        </svg>
                        @Model.TotalInscritos estudiante(s) inscrito(s)
                    </div>
                </div>
            }

            <!-- Contenido -->
            <div class="p-8 md:p-12">

                <!-- Descripción -->
                <div class="mb-10">
                    <h2 class="text-2xl font-bold text-gray-900 mb-4 flex items-center">
                        <svg class="w-6 h-6 mr-3 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                        </svg>
                        Acerca de esta actividad
                    </h2>
                    <p class="text-gray-700 text-lg leading-relaxed">
                        @Model.Descripcion
                    </p>
                </div>

                <!-- Información en Cards -->
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-10">

                    <!-- Horario -->
                    <div class="bg-gradient-to-br from-blue-50 to-blue-100 p-6 rounded-2xl border border-blue-200">
                        <div class="flex items-start">
                            <div class="w-14 h-14 bg-blue-600 rounded-xl flex items-center justify-center mr-4 flex-shrink-0">
                                <svg class="w-7 h-7 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                                </svg>
                            </div>
                            <div>
                                <h3 class="font-bold text-gray-900 text-lg mb-1">Horario</h3>
                                <p class="text-blue-800 font-semibold text-xl">@Model.DiaSemana</p>
                                <p class="text-blue-700 mt-1">@Model.HoraInicioFormateada - @Model.HoraFinFormateada</p>
                            </div>
                        </div>
                    </div>

                    <!-- Ubicación -->
                    @if (!string.IsNullOrEmpty(Model.Ubicacion))
                    {
                        <div class="bg-gradient-to-br from-green-50 to-green-100 p-6 rounded-2xl border border-green-200">
                            <div class="flex items-start">
                                <div class="w-14 h-14 bg-green-600 rounded-xl flex items-center justify-center mr-4 flex-shrink-0">
                                    <svg class="w-7 h-7 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                                    </svg>
                                </div>
                                <div>
                                    <h3 class="font-bold text-gray-900 text-lg mb-1">Ubicación</h3>
                                    <p class="text-green-800 font-semibold text-xl">@Model.Ubicacion</p>
                                </div>
                            </div>
                        </div>
                    }

                    <!-- Profesor -->
                    <div class="bg-gradient-to-br from-purple-50 to-purple-100 p-6 rounded-2xl border border-purple-200 @(string.IsNullOrEmpty(Model.Ubicacion) ? "" : "md:col-span-2")">
                        <div class="flex items-start">
                            <div class="w-14 h-14 bg-purple-600 rounded-xl flex items-center justify-center mr-4 flex-shrink-0">
                                <svg class="w-7 h-7 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                                </svg>
                            </div>
                            <div>
                                <h3 class="font-bold text-gray-900 text-lg mb-1">Profesor Encargado</h3>
                                <p class="text-purple-800 font-semibold text-xl">@Model.NombreProfesor</p>
                            </div>
                        </div>
                    </div>

                </div>

                <!-- Requisitos -->
                @if (!string.IsNullOrEmpty(Model.Requisitos))
                {
                    <div class="bg-yellow-50 border-l-4 border-yellow-400 p-6 rounded-lg mb-10">
                        <h3 class="font-bold text-gray-900 text-lg mb-3 flex items-center">
                            <svg class="w-5 h-5 mr-2 text-yellow-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-6 9l2 2 4-4"></path>
                            </svg>
                            Requisitos
                        </h3>
                        <p class="text-gray-700 leading-relaxed">@Model.Requisitos</p>
                    </div>
                }

                <!-- Botones de Acción -->
                <div class="flex flex-col sm:flex-row gap-4 pt-6 border-t border-gray-200">
                    @if (Model.EstaInscrito)
                    {
                        <button type="button"
                                onclick="document.getElementById('modalDesinscripcion').classList.remove('hidden')"
                                class="flex-1 px-8 py-4 bg-gradient-to-r from-red-500 to-red-600 hover:from-red-600 hover:to-red-700 text-white font-bold rounded-xl shadow-xl hover:shadow-2xl transition-all duration-200 transform hover:scale-105 text-lg">
                            <svg class="w-6 h-6 inline-block mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                            </svg>
                            Desinscribirme
                        </button>
                        <div class="flex-1 px-8 py-4 bg-green-50 border-2 border-green-300 rounded-xl flex items-center justify-center">
                            <svg class="w-6 h-6 text-green-600 mr-2" fill="currentColor" viewBox="0 0 20 20">
                                <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                            </svg>
                            <span class="text-green-700 font-bold text-lg">¡Ya estás inscrito!</span>
                        </div>
                    }
                    else
                    {
                        <form asp-action="Inscribirse" asp-route-id="@Model.Id" method="post" class="flex-1">
                            <button type="submit"
                                    class="w-full px-8 py-4 bg-gradient-to-r from-purple-600 to-blue-600 hover:from-purple-700 hover:to-blue-700 text-white font-bold rounded-xl shadow-xl hover:shadow-2xl transition-all duration-200 transform hover:scale-105 text-lg">
                                <svg class="w-6 h-6 inline-block mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
                                </svg>
                                ¡Inscribirme Ahora!
                            </button>
                        </form>
                    }
                </div>

                <p class="text-center text-sm text-gray-500 mt-4">
                    @if (Model.EstaInscrito)
                    {
                        <span>Esta actividad aparecerá automáticamente en tu horario.</span>
                    }
                    else
                    {
                        <span>Al inscribirte, esta actividad se agregará automáticamente a tu horario.</span>
                    }
                </p>
            </div>

        </div>

    </div>

</div>

<!-- Modal de Desinscripción -->
<div id="modalDesinscripcion" class="hidden fixed inset-0 bg-black bg-opacity-50 z-50 flex items-center justify-center p-4">
    <div class="bg-white rounded-3xl shadow-2xl max-w-md w-full p-8 transform transition-all">
        <div class="text-center mb-6">
            <div class="w-20 h-20 bg-red-100 rounded-full flex items-center justify-center mx-auto mb-4">
                <svg class="w-10 h-10 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"></path>
                </svg>
            </div>
            <h3 class="text-2xl font-bold text-gray-900 mb-3">¿Estás seguro?</h3>
            <p class="text-gray-600 leading-relaxed">
                Si te desinscribes de <strong>@Model.Nombre</strong>, esta actividad dejará de aparecer en tu horario y perderás tu lugar en la misma.
            </p>
        </div>

        <form asp-action="Desinscribirse" asp-route-id="@Model.Id" method="post">
            <div class="flex gap-3">
                <button type="button"
                        onclick="document.getElementById('modalDesinscripcion').classList.add('hidden')"
                        class="flex-1 px-6 py-3 bg-gray-100 hover:bg-gray-200 text-gray-700 rounded-xl font-semibold transition-colors">
                    Cancelar
                </button>
                <button type="submit"
                        class="flex-1 px-6 py-3 bg-red-600 hover:bg-red-700 text-white rounded-xl font-semibold transition-colors">
                    Sí, desinscribirme
                </button>
            </div>
        </form>
    </div>
</div>

<script>
    // Cerrar modal al hacer clic fuera
    document.getElementById('modalDesinscripcion').addEventListener('click', function (e) {
        if (e.target === this) {
            this.classList.add('hidden');
        }
    });
</script>