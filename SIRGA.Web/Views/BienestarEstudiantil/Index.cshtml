@model List<SIRGA.Web.Models.ActividadExtracurricular.ActividadViewModel>

@{
    ViewData["Title"] = "Bienestar Estudiantil";
    Layout = "~/Views/Shared/_LayoutWithSidebar.cshtml";
    //ViewBag.UserName = Model.;
    ViewBag.UserRole = "Estudiante";
}

@section SidebarMenu {
    <partial name="_EstudianteSidebarMenu"   />
}

<div class="min-h-screen bg-gradient-to-br from-purple-50 via-white to-blue-50 px-3 sm:px-4 lg:px-8 pt-8 pb-12">
    <div class="max-w-7xl mx-auto">

        <!-- Encabezado -->
        <div class="bg-white rounded-2xl shadow-xl p-8 border border-gray-100 mb-8">
            <div class="flex items-center justify-between flex-wrap gap-4">
                <div class="flex items-center">
                    <div class="h-16 w-16 bg-gradient-to-r from-purple-500 to-pink-500 rounded-full flex items-center justify-center mr-4 shadow-lg">
                        <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14.828 14.828a4 4 0 01-5.656 0M9 10h.01M15 10h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                        </svg>
                    </div>
                    <div>
                        <h1 class="text-3xl font-bold text-gray-900">Bienestar Estudiantil</h1>
                        <p class="text-gray-600 mt-1">Explora y participa en actividades extracurriculares</p>
                    </div>
                </div>
                <a asp-controller="Estudiante" asp-action="Index"
                   class="px-4 py-2 bg-gray-100 hover:bg-gray-200 text-gray-700 rounded-lg transition-colors">
                    <svg class="w-5 h-5 inline-block mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
                    </svg>
                    Volver al Panel
                </a>
            </div>
        </div>

        <div class="mb-6">
            <a asp-action="Recomendaciones"
               class="inline-flex items-center px-6 py-3 bg-gradient-to-r from-purple-500 to-pink-500 hover:from-purple-600 hover:to-pink-600 text-white font-semibold rounded-lg shadow-lg transition-all transform hover:scale-105">
                <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
                </svg>
                Ver Recomendaciones con IA
            </a>
        </div>

        <!-- Alertas -->
        <partial name="_Alerts" />

        <!-- Filtros por Categoría -->
        <div class="bg-white rounded-xl shadow-lg p-6 border border-gray-100 mb-8">
            <h2 class="text-lg font-semibold text-gray-900 mb-4">Filtrar por Categoría</h2>
            <div class="flex flex-wrap gap-3">
                <a asp-action="Index" asp-route-categoria=""
                   class="px-6 py-3 @(string.IsNullOrEmpty(ViewBag.CategoriaActual) ? "bg-purple-600 text-white" : "bg-gray-100 text-gray-700 hover:bg-gray-200") rounded-lg font-semibold transition-colors">
                    Todas
                </a>
                <a asp-action="Index" asp-route-categoria="Curso"
                   class="px-6 py-3 @(ViewBag.CategoriaActual == "Curso" ? "bg-purple-600 text-white" : "bg-gray-100 text-gray-700 hover:bg-gray-200") rounded-lg font-semibold transition-colors">
                    Cursos
                </a>
                <a asp-action="Index" asp-route-categoria="Actividad/Voluntariado"
                   class="px-6 py-3 @(ViewBag.CategoriaActual == "Actividad/Voluntariado" ? "bg-purple-600 text-white" : "bg-gray-100 text-gray-700 hover:bg-gray-200") rounded-lg font-semibold transition-colors">
                    Actividades/Voluntariado
                </a>
                <a asp-action="Index" asp-route-categoria="Club"
                   class="px-6 py-3 @(ViewBag.CategoriaActual == "Club" ? "bg-purple-600 text-white" : "bg-gray-100 text-gray-700 hover:bg-gray-200") rounded-lg font-semibold transition-colors">
                    Clubes
                </a>
            </div>
        </div>

        @if (Model != null && Model.Any())
        {
            <!-- Galería de Actividades -->
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
                @foreach (var actividad in Model)
                {
                    <div class="group bg-white rounded-2xl shadow-lg overflow-hidden border border-gray-100 hover:shadow-2xl transition-all duration-300 transform hover:-translate-y-2">

                        <!-- Imagen/Banner -->
                        <div class="relative h-48 overflow-hidden" style="background: linear-gradient(135deg, @actividad.ColorTarjeta 0%, @actividad.ColorTarjeta 100%);">
                            @if (!string.IsNullOrEmpty(actividad.RutaImagen))
                            {
                                <img src="@actividad.RutaImagen"
                                     alt="@actividad.Nombre"
                                     class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-300">
                            }
                            else
                            {
                                <div class="w-full h-full flex items-center justify-center">
                                    <svg class="w-20 h-20 text-white opacity-50" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"></path>
                                    </svg>
                                </div>
                            }

                            <!-- Badge de Categoría -->
                            <div class="absolute top-4 left-4">
                                <span class="px-3 py-1 bg-white bg-opacity-95 text-gray-800 text-xs font-bold rounded-full shadow-lg backdrop-blur-sm">
                                    @actividad.Categoria
                                </span>
                            </div>

                            <!-- Badge de Inscrito -->
                            @if (actividad.EstaInscrito)
                            {
                                <div class="absolute top-4 right-4">
                                    <span class="px-3 py-1 bg-green-500 text-white text-xs font-bold rounded-full shadow-lg flex items-center">
                                        <svg class="w-3 h-3 mr-1" fill="currentColor" viewBox="0 0 20 20">
                                            <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                                        </svg>
                                        Inscrito
                                    </span>
                                </div>
                            }
                        </div>

                        <!-- Contenido -->
                        <div class="p-6">
                            <h3 class="text-2xl font-bold text-gray-900 mb-3 line-clamp-2 group-hover:text-purple-600 transition-colors">
                                @actividad.Nombre
                            </h3>

                            <p class="text-gray-600 mb-4 line-clamp-3 text-sm leading-relaxed">
                                @actividad.Descripcion
                            </p>

                            <!-- Información Clave -->
                            <div class="space-y-3 mb-6">
                                <div class="flex items-center text-sm text-gray-700">
                                    <div class="w-10 h-10 bg-blue-100 rounded-lg flex items-center justify-center mr-3">
                                        <svg class="w-5 h-5 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                                        </svg>
                                    </div>
                                    <div>
                                        <p class="font-semibold">@actividad.DiaSemana</p>
                                        <p class="text-xs text-gray-500">@actividad.HoraInicioFormateada - @actividad.HoraFinFormateada</p>
                                    </div>
                                </div>

                                <div class="flex items-center text-sm text-gray-700">
                                    <div class="w-10 h-10 bg-purple-100 rounded-lg flex items-center justify-center mr-3">
                                        <svg class="w-5 h-5 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                                        </svg>
                                    </div>
                                    <div>
                                        <p class="font-semibold">@actividad.NombreProfesor</p>
                                        <p class="text-xs text-gray-500">Profesor Encargado</p>
                                    </div>
                                </div>

                                <div class="flex items-center text-sm text-gray-700">
                                    <div class="w-10 h-10 bg-green-100 rounded-lg flex items-center justify-center mr-3">
                                        <svg class="w-5 h-5 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
                                        </svg>
                                    </div>
                                    <div>
                                        <p class="font-semibold">@actividad.TotalInscritos estudiantes</p>
                                        <p class="text-xs text-gray-500">Actualmente inscritos</p>
                                    </div>
                                </div>
                            </div>

                            <!-- Botones de Acción -->
                            <div class="flex gap-3">
                                <a asp-action="Detalle" asp-route-id="@actividad.Id"
                                   class="flex-1 px-4 py-3 bg-gradient-to-r from-purple-600 to-blue-600 hover:from-purple-700 hover:to-blue-700 text-white text-center rounded-xl font-semibold shadow-lg hover:shadow-xl transition-all duration-200 transform hover:scale-105">
                                    Ver Detalles
                                </a>

                                @if (actividad.EstaInscrito)
                                {
                                    <button type="button"
                                            onclick="confirmarDesinscripcion(@actividad.Id)"
                                            class="px-4 py-3 bg-red-100 hover:bg-red-200 text-red-700 rounded-xl font-semibold transition-colors">
                                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                                        </svg>
                                    </button>
                                }
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <!-- Sin actividades -->
            <div class="bg-white rounded-2xl shadow-xl p-12 border border-gray-100 text-center">
                <svg class="w-24 h-24 mx-auto text-gray-400 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.172 16.172a4 4 0 015.656 0M9 10h.01M15 10h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
                <h3 class="text-2xl font-semibold text-gray-700 mb-2">
                    No hay actividades disponibles
                </h3>
                <p class="text-gray-500">
                    @if (!string.IsNullOrEmpty(ViewBag.CategoriaActual))
                    {
                        <span>No hay actividades en la categoría "@ViewBag.CategoriaActual" por el momento.</span>
                    }
                    else
                    {
                        <span>Aún no hay actividades extracurriculares disponibles. Vuelve pronto para ver nuevas opciones.</span>
                    }
                </p>
            </div>
        }

    </div>
</div>

<!-- Modal de Confirmación de Desinscripción -->
<div id="modalDesinscripcion" class="hidden fixed inset-0 bg-black bg-opacity-50 z-50 flex items-center justify-center p-4">
    <div class="bg-white rounded-2xl shadow-2xl max-w-md w-full p-8 transform transition-all">
        <div class="text-center mb-6">
            <div class="w-16 h-16 bg-red-100 rounded-full flex items-center justify-center mx-auto mb-4">
                <svg class="w-8 h-8 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"></path>
                </svg>
            </div>
            <h3 class="text-2xl font-bold text-gray-900 mb-2">¿Estás seguro?</h3>
            <p class="text-gray-600">
                Si te desinscribes, esta actividad dejará de aparecer en tu horario y perderás tu lugar en la misma.
            </p>
        </div>

        <form id="formDesinscripcion" method="post" asp-action="Desinscribirse">
            <input type="hidden" id="actividadIdDesinscribir" name="id" value="">
            <div class="flex gap-3">
                <button type="button"
                        onclick="cerrarModal()"
                        class="flex-1 px-6 py-3 bg-gray-100 hover:bg-gray-200 text-gray-700 rounded-xl font-semibold transition-colors">
                    Cancelar
                </button>
                <button type="submit"
                        class="flex-1 px-6 py-3 bg-red-600 hover:bg-red-700 text-white rounded-xl font-semibold transition-colors">
                    Sí, desinscribirme
                </button>
            </div>
        </form>
    </div>
</div>

<script>
    function confirmarDesinscripcion(id) {
        document.getElementById('actividadIdDesinscribir').value = id;
        document.getElementById('modalDesinscripcion').classList.remove('hidden');
    }

    function cerrarModal() {
        document.getElementById('modalDesinscripcion').classList.add('hidden');
    }

    // Cerrar modal al hacer clic fuera
    document.getElementById('modalDesinscripcion').addEventListener('click', function (e) {
        if (e.target === this) {
            cerrarModal();
        }
    });
</script>