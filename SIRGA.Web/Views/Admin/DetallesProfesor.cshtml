@using SIRGA.Web.ViewComponents
@model SIRGA.Web.Models.Profesor.ProfesorDto

@{
    ViewData["Title"] = "Detalles del Profesor";
    Layout = "~/Views/Shared/_LayoutWithSidebar.cshtml";
    ViewBag.UserName = User.Identity.Name;
    ViewBag.UserRole = "Administrador";
}

@section SidebarMenu {
    <partial name="_AdminSidebarMenu" />
}

<div class="max-w-5xl mx-auto">
    @{
        var headerModel = new DetailHeaderViewModel(
        $"{Model.FirstName} {Model.LastName}",
        "M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z",
        "purple"
        );

        if (!string.IsNullOrEmpty(Model.Specialty))
        {
            headerModel.Badges.Add(new StatusBadge(Model.Specialty, "purple"));
        }

        headerModel.Badges.Add(new StatusBadge(
        Model.IsActive ? "Activo" : "Inactivo",
        Model.IsActive ? "green" : "red"
        ));

        headerModel.ActionButtons.Add(new ActionButton
            {
                Controller = "Profesor",
                Action = "EditarProfesor",
                Text = "Editar",
                IconPath = "M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z",
                ColorClass = "bg-purple-500 hover:bg-purple-600 text-white",
                RouteValues = new Dictionary<string, string> { { "id", Model.Id.ToString() } }
            });

        headerModel.ActionButtons.Add(new ActionButton
            {
                Controller = "Profesor",
                Action = "Profesores",
                Text = "Volver",
                IconPath = "M10 19l-7-7m0 0l7-7m-7 7h18",
                ColorClass = "bg-gray-100 hover:bg-gray-200 text-gray-700"
            });
    }

    @await Component.InvokeAsync("DetailHeader", headerModel)

    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        @{
            var personalInfoCard = new DetailCardViewModel(
            "Información Personal",
            "M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z",
            "purple"
            );

            personalInfoCard.Fields.Add(new DetailField(
            "Nombre Completo",
            $"{Model.FirstName} {Model.LastName}"
            ));

            personalInfoCard.Fields.Add(DetailField.CreateOptional(
            "Género",
            Model.Gender.HasValue
            ? (Model.Gender == 'M' ? "Masculino" : Model.Gender == 'F' ? "Femenino" : "No especificado")
            : null
            ));

            personalInfoCard.Fields.Add(DetailField.CreateOptional(
            "Fecha de Nacimiento",
            Model.DateOfBirth?.ToString("dd/MM/yyyy")
            ));

            personalInfoCard.Fields.Add(new DetailField(
            "Fecha de Ingreso",
            Model.DateOfEntry.ToString("dd/MM/yyyy")
            ));

            if (!string.IsNullOrEmpty(Model.Specialty))
            {
                personalInfoCard.Fields.Add(DetailField.CreateBadge(
                "Especialidad",
                Model.Specialty,
                "purple"
                ));
            }
        }
        @await Component.InvokeAsync("DetailCard", personalInfoCard)

        @{
            var contactCard = new DetailCardViewModel(
            "Información de Contacto",
            "M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z",
            "purple"
            );

            contactCard.Fields.Add(new DetailField("Correo Electrónico", Model.Email));
            contactCard.Fields.Add(DetailField.CreateOptional("Teléfono", Model.PhoneNumber));
            contactCard.Fields.Add(DetailField.CreateOptional("Provincia", Model.Province));
            contactCard.Fields.Add(DetailField.CreateOptional("Sector", Model.Sector));
        }
        @await Component.InvokeAsync("DetailCard", contactCard)

        @{
            var addressCard = new DetailCardViewModel(
            "Dirección",
            "M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z",
            "purple"
            )
            {
                ColumnSpan = 2
            };

            addressCard.Fields.Add(DetailField.CreateOptional("", Model.Address));
        }
        @await Component.InvokeAsync("DetailCard", addressCard)
    </div>

    @* Estado del Perfil - Este podría ser otro componente, pero lo dejo así por ahora *@
    <div class="mt-6 bg-white rounded-2xl shadow-xl p-6 border border-gray-100">
        <h2 class="text-xl font-bold text-gray-900 mb-4 flex items-center">
            <svg class="w-6 h-6 mr-2 text-purple-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
            Estado del Perfil
        </h2>

        <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
            <div class="flex items-center p-4 rounded-lg @(Model.IsActive ? "bg-green-50" : "bg-red-50")">
                <div class="flex-shrink-0">
                    @if (Model.IsActive)
                    {
                        <svg class="w-8 h-8 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                        </svg>
                    }
                    else
                    {
                        <svg class="w-8 h-8 text-red-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 14l2-2m0 0l2-2m-2 2l-2-2m2 2l2 2m7-2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                        </svg>
                    }
                </div>
                <div class="ml-4">
                    <p class="text-sm font-medium text-gray-500">Cuenta</p>
                    <p class="text-lg font-bold @(Model.IsActive ? "text-green-700" : "text-red-700")">
                        @(Model.IsActive ? "Activa" : "Inactiva")
                    </p>
                </div>
            </div>

            <div class="flex items-center p-4 rounded-lg @(Model.MustCompleteProfile == false ? "bg-green-50" : "bg-yellow-50")">
                <div class="flex-shrink-0">
                    @if (Model.MustCompleteProfile == false)
                    {
                        <svg class="w-8 h-8 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                        </svg>
                    }
                    else
                    {
                        <svg class="w-8 h-8 text-yellow-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"></path>
                        </svg>
                    }
                </div>
                <div class="ml-4">
                    <p class="text-sm font-medium text-gray-500">Perfil</p>
                    <p class="text-lg font-bold @(Model.MustCompleteProfile == false ? "text-green-700" : "text-yellow-700")">
                        @(Model.MustCompleteProfile == false ? "Completo" : "Incompleto")
                    </p>
                </div>
            </div>

            <div class="flex items-center p-4 rounded-lg bg-purple-50">
                <div class="flex-shrink-0">
                    <svg class="w-8 h-8 text-purple-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 13.255A23.931 23.931 0 0112 15c-3.183 0-6.22-.62-9-1.745M16 6V4a2 2 0 00-2-2h-4a2 2 0 00-2 2v2m4 6h.01M5 20h14a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                    </svg>
                </div>
                <div class="ml-4">
                    <p class="text-sm font-medium text-gray-500">Rol</p>
                    <p class="text-lg font-bold text-purple-700">Profesor</p>
                </div>
            </div>
        </div>
    </div>
</div>