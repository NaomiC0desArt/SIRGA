@model SIRGA.Web.Models.Profesor.ProfesorDto

@{
    ViewData["Title"] = "Detalles del Profesor";
}

<div class="min-h-screen bg-gray-50 px-3 sm:px-4 lg:px-8 pt-8 pb-12">
    <div class="max-w-5xl mx-auto">

        <!-- Header -->
        <div class="bg-white rounded-2xl shadow-xl p-8 border border-gray-100 mb-8">
            <div class="flex flex-col sm:flex-row justify-between items-start sm:items-center gap-4">
                <div class="flex items-center">
                    <div class="h-16 w-16 bg-gradient-to-r from-purple-500 to-purple-600 rounded-full flex items-center justify-center mr-4 shadow-lg">
                        <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                        </svg>
                    </div>
                    <div>
                        <h1 class="text-3xl font-bold text-gray-900">@Model.FirstName @Model.LastName</h1>
                        <p class="text-gray-600 mt-1">
                            @if (!string.IsNullOrEmpty(Model.Specialty))
                            {
                                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-sm font-medium bg-purple-100 text-purple-800 mr-2">
                                    @Model.Specialty
                                </span>
                            }
                            @if (Model.IsActive)
                            {
                                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-sm font-medium bg-green-100 text-green-800">
                                    Activo
                                </span>
                            }
                            else
                            {
                                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-sm font-medium bg-red-100 text-red-800">
                                    Inactivo
                                </span>
                            }
                        </p>
                    </div>
                </div>

                <div class="flex gap-3">
                    <a asp-action="EditarProfesor" asp-route-id="@Model.Id"
                       class="inline-flex items-center px-4 py-2 bg-purple-500 hover:bg-purple-600 text-white font-semibold rounded-lg shadow-md transition-all duration-200">
                        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
                        </svg>
                        Editar
                    </a>
                    <a asp-action="Profesores"
                       class="inline-flex items-center px-4 py-2 bg-gray-100 hover:bg-gray-200 text-gray-700 font-semibold rounded-lg shadow-md transition-all duration-200">
                        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
                        </svg>
                        Volver
                    </a>
                </div>
            </div>
        </div>

        <!-- Grid de Información -->
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">

            <!-- Información Personal -->
            <div class="bg-white rounded-2xl shadow-xl p-6 border border-gray-100">
                <h2 class="text-xl font-bold text-gray-900 mb-4 flex items-center">
                    <svg class="w-6 h-6 mr-2 text-purple-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                    </svg>
                    Información Personal
                </h2>

                <div class="space-y-4">
                    <div>
                        <label class="text-sm font-medium text-gray-500">Nombre Completo</label>
                        <p class="text-lg text-gray-900">@Model.FirstName @Model.LastName</p>
                    </div>

                    <div>
                        <label class="text-sm font-medium text-gray-500">Género</label>
                        <p class="text-lg text-gray-900">
                            @if (Model.Gender.HasValue)
                            {
                                @(Model.Gender == 'M' ? "Masculino" : Model.Gender == 'F' ? "Femenino" : "No especificado")
                            }
                            else
                            {
                                <span class="text-yellow-600">No completado</span>
                            }
                        </p>
                    </div>

                    <div>
                        <label class="text-sm font-medium text-gray-500">Fecha de Nacimiento</label>
                        <p class="text-lg text-gray-900">
                            @if (Model.DateOfBirth.HasValue)
                            {
                                @Model.DateOfBirth.Value.ToString("dd/MM/yyyy")
                            }
                            else
                            {
                                <span class="text-yellow-600">No completado</span>
                            }
                        </p>
                    </div>

                    <div>
                        <label class="text-sm font-medium text-gray-500">Fecha de Ingreso</label>
                        <p class="text-lg text-gray-900">@Model.DateOfEntry.ToString("dd/MM/yyyy")</p>
                    </div>

                    <div>
                        <label class="text-sm font-medium text-gray-500">Especialidad</label>
                        <p class="text-lg text-gray-900">
                            @if (!string.IsNullOrEmpty(Model.Specialty))
                            {
                                <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-purple-100 text-purple-800">
                                    @Model.Specialty
                                </span>
                            }
                            else
                            {
                                <span class="text-gray-400">Sin especialidad definida</span>
                            }
                        </p>
                    </div>
                </div>
            </div>

            <!-- Información de Contacto -->
            <div class="bg-white rounded-2xl shadow-xl p-6 border border-gray-100">
                <h2 class="text-xl font-bold text-gray-900 mb-4 flex items-center">
                    <svg class="w-6 h-6 mr-2 text-purple-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                    </svg>
                    Información de Contacto
                </h2>

                <div class="space-y-4">
                    <div>
                        <label class="text-sm font-medium text-gray-500">Correo Electrónico</label>
                        <p class="text-lg text-gray-900">@Model.Email</p>
                    </div>

                    <div>
                        <label class="text-sm font-medium text-gray-500">Teléfono</label>
                        <p class="text-lg text-gray-900">
                            @if (!string.IsNullOrEmpty(Model.PhoneNumber))
                            {
                                @Model.PhoneNumber
                            }
                            else
                            {
                                <span class="text-yellow-600">No completado</span>
                            }
                        </p>
                    </div>

                    <div>
                        <label class="text-sm font-medium text-gray-500">Provincia</label>
                        <p class="text-lg text-gray-900">
                            @if (!string.IsNullOrEmpty(Model.Province))
                            {
                                @Model.Province
                            }
                            else
                            {
                                <span class="text-yellow-600">No completado</span>
                            }
                        </p>
                    </div>

                    <div>
                        <label class="text-sm font-medium text-gray-500">Sector</label>
                        <p class="text-lg text-gray-900">
                            @if (!string.IsNullOrEmpty(Model.Sector))
                            {
                                @Model.Sector
                            }
                            else
                            {
                                <span class="text-yellow-600">No completado</span>
                            }
                        </p>
                    </div>
                </div>
            </div>

            <!-- Dirección -->
            <div class="bg-white rounded-2xl shadow-xl p-6 border border-gray-100 md:col-span-2">
                <h2 class="text-xl font-bold text-gray-900 mb-4 flex items-center">
                    <svg class="w-6 h-6 mr-2 text-purple-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                    </svg>
                    Dirección
                </h2>

                <div>
                    <p class="text-lg text-gray-900">
                        @if (!string.IsNullOrEmpty(Model.Address))
                        {
                            @Model.Address
                        }
                        else
                        {
                            <span class="text-yellow-600">No completada</span>
                        }
                    </p>
                </div>
            </div>

        </div>

        <!-- Estado del Perfil -->
        <div class="mt-6 bg-white rounded-2xl shadow-xl p-6 border border-gray-100">
            <h2 class="text-xl font-bold text-gray-900 mb-4 flex items-center">
                <svg class="w-6 h-6 mr-2 text-purple-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
                Estado del Perfil
            </h2>

            <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
                <div class="flex items-center p-4 rounded-lg @(Model.IsActive ? "bg-green-50" : "bg-red-50")">
                    <div class="flex-shrink-0">
                        @if (Model.IsActive)
                        {
                            <svg class="w-8 h-8 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                            </svg>
                        }
                        else
                        {
                            <svg class="w-8 h-8 text-red-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 14l2-2m0 0l2-2m-2 2l-2-2m2 2l2 2m7-2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                            </svg>
                        }
                    </div>
                    <div class="ml-4">
                        <p class="text-sm font-medium text-gray-500">Cuenta</p>
                        <p class="text-lg font-bold @(Model.IsActive ? "text-green-700" : "text-red-700")">
                            @(Model.IsActive ? "Activa" : "Inactiva")
                        </p>
                    </div>
                </div>

                <div class="flex items-center p-4 rounded-lg @(Model.MustCompleteProfile == false ? "bg-green-50" : "bg-yellow-50")">
                    <div class="flex-shrink-0">
                        @if (Model.MustCompleteProfile == false)
                        {
                            <svg class="w-8 h-8 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                            </svg>
                        }
                        else
                        {
                            <svg class="w-8 h-8 text-yellow-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"></path>
                            </svg>
                        }
                    </div>
                    <div class="ml-4">
                        <p class="text-sm font-medium text-gray-500">Perfil</p>
                        <p class="text-lg font-bold @(Model.MustCompleteProfile == false ? "text-green-700" : "text-yellow-700")">
                            @(Model.MustCompleteProfile == false ? "Completo" : "Incompleto")
                        </p>
                    </div>
                </div>

                <div class="flex items-center p-4 rounded-lg bg-purple-50">
                    <div class="flex-shrink-0">
                        <svg class="w-8 h-8 text-purple-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 13.255A23.931 23.931 0 0112 15c-3.183 0-6.22-.62-9-1.745M16 6V4a2 2 0 00-2-2h-4a2 2 0 00-2 2v2m4 6h.01M5 20h14a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                        </svg>
                    </div>
                    <div class="ml-4">
                        <p class="text-sm font-medium text-gray-500">Rol</p>
                        <p class="text-lg font-bold text-purple-700">Profesor</p>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>