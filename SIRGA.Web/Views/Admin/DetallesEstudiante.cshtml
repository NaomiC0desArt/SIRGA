@model SIRGA.Web.Models.Estudiante.EstudianteDto
@using SIRGA.Web.ViewComponents

@{
    ViewData["Title"] = "Detalles del Estudiante";
    Layout = "~/Views/Shared/_LayoutWithSidebar.cshtml";
    ViewBag.UserName = User.Identity.Name;
    ViewBag.UserRole = "Administrador";
}

@section SidebarMenu {
    <partial name="_AdminSidebarMenu" />
}

<div class="max-w-5xl mx-auto">

    <!-- Header con botones usando componente -->
    @await Component.InvokeAsync("PageHeader", new PageHeaderViewModel
{
    Title = $"{Model.FirstName} {Model.LastName}",
    Subtitle = Model.IsActive ? "Activo" : "Inactivo",
    IconPath = "M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z",
    ColorScheme = "blue",
    ActionButtons = new List<ActionButton>
    {
    new ActionButton
    {
    Text = "Editar",
    Controller = "Admin",
    Action = "EditarEstudiante",
    IconPath = "M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z",
    ColorClass = "bg-blue-500 hover:bg-blue-600 text-white",
    RouteValues = new Dictionary<string, string> { { "id", Model.Id.ToString() } }
    },
    new ActionButton
    {
    Text = "Volver",
    Controller = "Admin",
    Action = "Estudiantes",
    IconPath = "M10 19l-7-7m0 0l7-7m-7 7h18",
    ColorClass = "bg-gray-100 hover:bg-gray-200 text-gray-700"
    }
    }
})

    <!-- Grid de Información usando InfoCard -->
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">

        <!-- Información Personal -->
        @await Component.InvokeAsync("InfoCard", new InfoCardViewModel
   {
       Title = "Información Personal",
       IconPath = "M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z",
       IconColor = "blue",
       Fields = new List<InfoField>
        {
        new InfoField
        {
        Label = "Nombre Completo",
        Value = $"{Model.FirstName} {Model.LastName}"
        },
        new InfoField
        {
        Label = "Género",
        Value = Model.Gender.HasValue
        ? (Model.Gender == 'M' ? "Masculino" : Model.Gender == 'F' ? "Femenino" : "No especificado")
        : null,
        IsEmpty = !Model.Gender.HasValue
        },
        new InfoField
        {
        Label = "Fecha de Nacimiento",
        Value = Model.DateOfBirth?.ToString("dd/MM/yyyy"),
        IsEmpty = !Model.DateOfBirth.HasValue
        },
        new InfoField
        {
        Label = "Fecha de Ingreso",
        Value = Model.DateOfEntry.ToString("dd/MM/yyyy")
        }
        }
   })

        <!-- Información de Contacto -->
        @await Component.InvokeAsync("InfoCard", new InfoCardViewModel
   {
       Title = "Información de Contacto",
       IconPath = "M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z",
       IconColor = "blue",
       Fields = new List<InfoField>
        {
        new InfoField
        {
        Label = "Correo Electrónico",
        Value = Model.Email
        },
        new InfoField
        {
        Label = "Teléfono",
        Value = Model.PhoneNumber,
        IsEmpty = string.IsNullOrEmpty(Model.PhoneNumber)
        },
        new InfoField
        {
        Label = "Provincia",
        Value = Model.Province,
        IsEmpty = string.IsNullOrEmpty(Model.Province)
        },
        new InfoField
        {
        Label = "Sector",
        Value = Model.Sector,
        IsEmpty = string.IsNullOrEmpty(Model.Sector)
        }
        }
   })

        <!-- Dirección -->
        @await Component.InvokeAsync("InfoCard", new InfoCardViewModel
   {
       Title = "Dirección",
       IconPath = "M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z M15 11a3 3 0 11-6 0 3 3 0 016 0z",
       IconColor = "blue",
       Fields = new List<InfoField>
        {
        new InfoField
        {
        Label = "",
        Value = Model.Address,
        IsEmpty = string.IsNullOrEmpty(Model.Address),
        EmptyMessage = "No completada"
        }
        }
   })

        <!-- Contacto de Emergencia -->
        @await Component.InvokeAsync("InfoCard", new InfoCardViewModel
   {
       Title = "Contacto de Emergencia",
       IconPath = "M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z",
       IconColor = "red",
       Fields = new List<InfoField>
        {
        new InfoField
        {
        Label = "Nombre",
        Value = Model.EmergencyContactName,
        IsEmpty = string.IsNullOrEmpty(Model.EmergencyContactName)
        },
        new InfoField
        {
        Label = "Teléfono",
        Value = Model.EmergencyContactPhone,
        IsEmpty = string.IsNullOrEmpty(Model.EmergencyContactPhone)
        }
        }
   })

    </div>

    <!-- Estado del Perfil -->
    <div class="mt-6 bg-white rounded-2xl shadow-xl p-6 border border-gray-100">
        <h2 class="text-xl font-bold text-gray-900 mb-4 flex items-center">
            <svg class="w-6 h-6 mr-2 text-blue-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
            Estado del Perfil
        </h2>

        <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
            <!-- Las tarjetas de estado se mantienen como estaban porque son específicas -->
            <div class="flex items-center p-4 rounded-lg @(Model.IsActive ? "bg-green-50" : "bg-red-50")">
                <div class="flex-shrink-0">
                    @if (Model.IsActive)
                    {
                        <svg class="w-8 h-8 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                        </svg>
                    }
                    else
                    {
                        <svg class="w-8 h-8 text-red-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 14l2-2m0 0l2-2m-2 2l-2-2m2 2l2 2m7-2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                        </svg>
                    }
                </div>
                <div class="ml-4">
                    <p class="text-sm font-medium text-gray-500">Cuenta</p>
                    <p class="text-lg font-bold @(Model.IsActive ? "text-green-700" : "text-red-700")">
                        @(Model.IsActive ? "Activa" : "Inactiva")
                    </p>
                </div>
            </div>

            <div class="flex items-center p-4 rounded-lg @(Model.MustCompleteProfile == false ? "bg-green-50" : "bg-yellow-50")">
                <div class="flex-shrink-0">
                    @if (Model.MustCompleteProfile == false)
                    {
                        <svg class="w-8 h-8 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                        </svg>
                    }
                    else
                    {
                        <svg class="w-8 h-8 text-yellow-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"></path>
                        </svg>
                    }
                </div>
                <div class="ml-4">
                    <p class="text-sm font-medium text-gray-500">Perfil</p>
                    <p class="text-lg font-bold @(Model.MustCompleteProfile == false ? "text-green-700" : "text-yellow-700")">
                        @(Model.MustCompleteProfile == false ? "Completo" : "Incompleto")
                    </p>
                </div>
            </div>

            <div class="flex items-center p-4 rounded-lg bg-blue-50">
                <div class="flex-shrink-0">
                    <svg class="w-8 h-8 text-blue-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"></path>
                    </svg>
                </div>
                <div class="ml-4">
                    <p class="text-sm font-medium text-gray-500">Rol</p>
                    <p class="text-lg font-bold text-blue-700">Estudiante</p>
                </div>
            </div>
        </div>
    </div>

</div>