@model AdminDashboardViewModel
@using SIRGA.Web.ViewComponents

@{
    ViewData["Title"] = "Panel de Administración";
    Layout = "~/Views/Shared/_LayoutWithSidebar.cshtml";
    ViewBag.UserName = Model.UserName;
    ViewBag.UserRole = "Administrador";
}

@section SidebarMenu {
    <partial name="_AdminSidebarMenu" />
}


        <!-- Encabezado usando View Component -->
        @await Component.InvokeAsync("DashboardHeader", new DashboardHeaderViewModel
   {
       Title = "Panel de Administración",
       UserName = Model.UserName,
       ColorScheme = "blue",
       IconPath = "M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z",
       ShowDate = false
   })

        <!-- Notificaciones -->
        <partial name="_Notifications" />

        <!-- SECCIÓN 1: ESTADÍSTICAS DE USUARIOS -->
        <div class="bg-white rounded-2xl shadow-xl p-6 border border-gray-100 mb-6">
            <div class="flex items-center justify-between mb-4">
                <h2 class="text-xl font-bold text-gray-900 flex items-center">
                    <svg class="w-6 h-6 mr-3 text-blue-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
                    </svg>
                    Estadísticas de Usuarios
                </h2>
                <span class="text-sm text-gray-500">@(Model.TotalEstudiantes + Model.TotalProfesores) usuarios totales</span>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
                @await Component.InvokeAsync("StatsCard", new StatsCardViewModel
           {
               Title = "Total Estudiantes",
               Value = Model.TotalEstudiantes.ToString(),
               ColorScheme = "blue",
               IconPath = "M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z"
           })

                @await Component.InvokeAsync("StatsCard", new StatsCardViewModel
           {
               Title = "Estudiantes Activos",
               Value = Model.EstudiantesActivos.ToString(),
               ColorScheme = "green",
               IconPath = "M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"
           })

                @await Component.InvokeAsync("StatsCard", new StatsCardViewModel
           {
               Title = "Total Profesores",
               Value = Model.TotalProfesores.ToString(),
               ColorScheme = "purple",
               IconPath = "M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"
           })

                @await Component.InvokeAsync("StatsCard", new StatsCardViewModel
           {
               Title = "Profesores Activos",
               Value = Model.ProfesoresActivos.ToString(),
               ColorScheme = "orange",
               IconPath = "M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"
           })
            </div>
        </div>

        <!-- Menú de Administración -->
        <div class="bg-white rounded-2xl shadow-xl p-8 border border-gray-100">
            <h2 class="text-2xl font-bold text-gray-900 mb-6 flex items-center">
                <svg class="w-6 h-6 mr-3 text-blue-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 10h16M4 14h16M4 18h16"></path>
                </svg>
                Gestión Académica
            </h2>

            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                @await Component.InvokeAsync("NavigationCard", new NavigationCardViewModel
           {
               Title = "Gestión de Estudiantes",
               Description = "Crear, editar y administrar estudiantes",
               Controller = "Admin",
               Action = "Estudiantes",
               ColorScheme = "blue",
               IconPath = "M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z"
           })

                @await Component.InvokeAsync("NavigationCard", new NavigationCardViewModel
           {
               Title = "Gestión de Profesores",
               Description = "Crear, editar y administrar profesores",
               Controller = "Admin",
               Action = "Profesores",
               ColorScheme = "purple",
               IconPath = "M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"
           })

                @await Component.InvokeAsync("NavigationCard", new NavigationCardViewModel
           {
               Title = "Asignaturas",
               Description = "Gestionar asignaturas",
               Controller = "Asignatura",
               Action = "Index",
               ColorScheme = "green",
               IconPath = "M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"
           })

                @await Component.InvokeAsync("NavigationCard", new NavigationCardViewModel
           {
               Title = "Grados",
               Description = "Gestionar grados y secciones",
               Controller = "Grado",
               Action = "Index",
               ColorScheme = "indigo",
               IconPath = "M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"
           })

                @await Component.InvokeAsync("NavigationCard", new NavigationCardViewModel
           {
               Title = "Cursos Académicos",
               Description = "Gestionar cursos por año escolar",
               Controller = "CursoAcademico",
               Action = "Index",
               ColorScheme = "teal",
               IconPath = "M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"
           })

                @await Component.InvokeAsync("NavigationCard", new NavigationCardViewModel
           {
               Title = "Clases Programadas",
               Description = "Gestionar las clases y sus horarios",
               Controller = "ClaseProgramada",
               Action = "Index",
               ColorScheme = "purple",
               IconPath = "M6 2c-1.10457 0-2 .89543-2 2v4c0 .55228.44772 1 1 1s1-.44772 1-1V4h12v7h-2c-.5523 0-1 .4477-1 1v2h-1c-.5523 0-1 .4477-1 1s.4477 1 1 1h5c.5523 0 1-.4477 1-1V3.85714C20 2.98529 19.3667 2 18.268 2H6Z M6 11.5C6 9.567 7.567 8 9.5 8S13 9.567 13 11.5 11.433 15 9.5 15 6 13.433 6 11.5ZM4 20c0-2.2091 1.79086-4 4-4h3c2.2091 0 4 1.7909 4 4 0 1.1046-.8954 2-2 2H6c-1.10457 0-2-.8954-2-2Z"
           })

                @await Component.InvokeAsync("NavigationCard", new NavigationCardViewModel
           {
               Title = "Inscripciones",
               Description = "Manejar inscripciones de estudiantes",
               Controller = "Inscripcion",
               Action = "Index",
               ColorScheme = "pink",
               IconPath = "M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"
           })

                @await Component.InvokeAsync("NavigationCard", new NavigationCardViewModel
           {
               Title = "Actividades Extracurriculares",
               Description = "Crear un mejor ambiente para los estudiantes",
               Controller = "ActividadExtracurricular",
               Action = "Index",
               ColorScheme = "pink",
               IconPath = "M14.828 14.828a4 4 0 01-5.656 0M9 10h.01M15 10h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"
           })

                @await Component.InvokeAsync("NavigationCard", new NavigationCardViewModel
            {
                Title = "Aulas",
                Description = "Gestionar espacios físicos del centro",
                Controller = "Aula",
                Action = "Index",
                ColorScheme = "cyan",
                IconPath = "M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"
            })
            </div>
        </div>

 
