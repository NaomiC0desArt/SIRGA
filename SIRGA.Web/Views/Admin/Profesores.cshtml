@model SIRGA.Web.Helpers.PaginatedList<SIRGA.Web.Models.Profesor.ProfesorDto>

@{
    ViewData["Title"] = "Gestión de Profesores";
    Layout = "~/Views/Shared/_LayoutWithSidebar.cshtml";
    ViewBag.UserName = User.Identity.Name;
    ViewBag.UserRole = "Administrador";
}

@section SidebarMenu {
    <partial name="_AdminSidebarMenu" />
}

    <div class="max-w-7xl mx-auto">

        <!-- Header -->
        <div class="bg-white rounded-2xl shadow-xl p-8 border border-gray-100 mb-8">
            <div class="flex flex-col sm:flex-row justify-between items-start sm:items-center gap-4">
                <div class="flex items-center">
                    <div class="h-12 w-12 bg-gradient-to-r from-purple-400 to-purple-600 rounded-full flex items-center justify-center mr-4 shadow-lg">
                        <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z"></path>
                        </svg>
                    </div>
                    <div>
                        <h1 class="text-3xl font-bold text-gray-900">Gestión de Profesores</h1>
                        <p class="text-gray-600 mt-1">Administra los profesores del sistema</p>
                    </div>
                </div>

                <div class="flex gap-3">
                    <a asp-action="CrearProfesor"
                       class="inline-flex items-center px-6 py-3 bg-gradient-to-r from-purple-500 to-purple-600 hover:from-purple-600 hover:to-purple-700 text-white font-semibold rounded-lg shadow-lg hover:shadow-xl transform hover:scale-105 transition-all duration-200">
                        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6" />
                        </svg>
                        Nuevo Profesor
                    </a>

                    <a asp-action="Index"
                       class="inline-flex items-center px-6 py-3 bg-gray-100 hover:bg-gray-200 text-gray-700 font-semibold rounded-lg shadow-md hover:shadow-lg transition-all duration-200">
                        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
                        </svg>
                        Volver al Panel
                    </a>
                </div>
            </div>
        </div>

        <!-- Notificaciones -->
        <partial name="_Notifications" />

        <div class="bg-white rounded-2xl shadow-xl p-6 border border-gray-100 mb-6">
            <form method="get" asp-action="Profesores" class="space-y-4">
                <div class="grid grid-cols-1 md:grid-cols-5 gap-4">
                    
                    <!-- Búsqueda -->
                    <div class="md:col-span-2">
                        <label class="block text-sm font-medium text-gray-700 mb-2">
                            Buscar Profesor
                        </label>
                        <div class="relative">
                            <input type="text" 
                                   name="searchTerm" 
                                   value="@ViewBag.SearchTerm"
                                   placeholder="Nombre, apellido, email o especialidad..."
                                   class="w-full pl-10 pr-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500">
                            <svg class="w-5 h-5 text-gray-400 absolute left-3 top-2.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
                            </svg>
                        </div>
                    </div>

                    <!-- Filtro por Estado -->
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-2">
                            Estado
                        </label>
                        <select name="status" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500">
                            <option value="">Todos</option>
                            <option value="activo" selected="@(ViewBag.Status == "activo")">Activos</option>
                            <option value="inactivo" selected="@(ViewBag.Status == "inactivo")">Inactivos</option>
                            <option value="perfil-completo" selected="@(ViewBag.Status == "perfil-completo")">Perfil Completo</option>
                            <option value="perfil-incompleto" selected="@(ViewBag.Status == "perfil-incompleto")">Perfil Incompleto</option>
                        </select>
                    </div>

                    <!-- Filtro por Especialidad -->
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-2">
                            Especialidad
                        </label>
                        <input type="text" 
                               name="specialty" 
                               value="@ViewBag.Specialty"
                               placeholder="Especialidad..."
                               class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500">
                    </div>

                    <!-- Ordenar por -->
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-2">
                            Ordenar por
                        </label>
                        <select name="sortBy" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500">
                            <option value="nombre" selected="@(ViewBag.SortBy == "nombre")">Nombre</option>
                            <option value="apellido" selected="@(ViewBag.SortBy == "apellido")">Apellido</option>
                            <option value="email" selected="@(ViewBag.SortBy == "email")">Email</option>
                            <option value="especialidad" selected="@(ViewBag.SortBy == "especialidad")">Especialidad</option>
                            <option value="fecha-desc" selected="@(ViewBag.SortBy == "fecha-desc")">Más reciente</option>
                        </select>
                    </div>
                </div>

                <div class="flex justify-between items-center pt-4 border-t">
                    <!-- Registros por página -->
                    <div class="flex items-center gap-2">
                        <label class="text-sm text-gray-600">Mostrar:</label>
                        <select name="pageSize" class="px-3 py-1 border border-gray-300 rounded-lg text-sm" onchange="this.form.submit()">
                            <option value="10" selected="@(ViewBag.PageSize == 10)">10</option>
                            <option value="25" selected="@(ViewBag.PageSize == 25)">25</option>
                            <option value="50" selected="@(ViewBag.PageSize == 50)">50</option>
                            <option value="100" selected="@(ViewBag.PageSize == 100)">100</option>
                        </select>
                        <span class="text-sm text-gray-600">por página</span>
                    </div>

                    <div class="flex gap-2">
                        <a asp-action="Profesores" 
                           class="px-4 py-2 bg-gray-100 hover:bg-gray-200 text-gray-700 rounded-lg transition-colors text-sm">
                            Limpiar Filtros
                        </a>
                        <button type="submit" 
                                class="px-6 py-2 bg-blue-500 hover:bg-blue-600 text-white rounded-lg transition-colors text-sm font-medium">
                            Aplicar Filtros
                        </button>
                    </div>
                </div>
            </form>
        </div>

        <div class="bg-white rounded-2xl shadow-xl border border-gray-100 overflow-hidden">
            <div class="px-8 py-6 border-b border-gray-200">
                <div class="flex flex-col sm:flex-row justify-between items-start sm:items-center gap-4">
                    <h2 class="text-2xl font-bold text-gray-900 flex items-center">
                        <svg class="w-6 h-6 mr-3 text-purple-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 10h16M4 14h16M4 18h16" />
                        </svg>
                        Lista de Profesores
                    </h2>

                    <div class="text-sm text-gray-500">
                        Mostrando <strong>@((Model.PageIndex - 1) * Model.PageSize + 1)</strong> 
                        - <strong>@Math.Min(Model.PageIndex * Model.PageSize, Model.TotalCount)</strong> 
                        de <strong>@Model.TotalCount</strong> profesores
                    </div>
                </div>
            </div>

            @if (Model.Items != null && Model.Items.Any())
            {
                <div class="overflow-x-auto">
                    <table class="min-w-full divide-y divide-gray-200">
                        <thead class="bg-gray-50">
                            <tr>
                                <th class="px-6 py-4 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Especialidad</th>
                                <th class="px-6 py-4 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Nombre</th>
                                <th class="px-6 py-4 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Apellido</th>
                                <th class="px-6 py-4 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Email</th>
                                <th class="px-6 py-4 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Perfil</th>
                                <th class="px-6 py-4 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Estado</th>
                                <th class="px-6 py-4 text-center text-xs font-medium text-gray-500 uppercase tracking-wider">Acciones</th>
                            </tr>
                        </thead>
                        <tbody class="bg-white divide-y divide-gray-200">
                            @foreach (var profesor in Model.Items)
                            {
                                <tr class="hover:bg-gray-50 transition-colors duration-150">
                                    <td class="px-6 py-4 whitespace-nowrap">
                                        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-purple-100 text-purple-800">
                                            @profesor.Specialty
                                        </span>
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap">
                                        <div class="text-sm font-medium text-gray-900">@profesor.FirstName</div>
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap">
                                        <div class="text-sm text-gray-900">@profesor.LastName</div>
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap">
                                        <div class="text-sm text-gray-500">@profesor.Email</div>
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap">
                                        @if (profesor.MustCompleteProfile == true)
                                        {
                                            <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-medium bg-yellow-100 text-yellow-800">
                                                <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"></path>
                                                </svg>
                                                Incompleto
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-medium bg-green-100 text-green-800">
                                                <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                                                </svg>
                                                Completo
                                            </span>
                                        }
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap">
                                        @if (profesor.IsActive)
                                        {
                                            <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-medium bg-green-100 text-green-800">
                                                Activo
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-medium bg-red-100 text-red-800">
                                                Inactivo
                                            </span>
                                        }
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap text-center">
                                        <div class="flex justify-center gap-2">
                                            <!-- Ver Detalles -->
                                            <a asp-action="DetallesProfesor" asp-route-id="@profesor.Id"
                                               class="inline-flex items-center px-3 py-2 bg-purple-500 hover:bg-purple-600 text-white text-xs font-medium rounded-lg shadow-sm hover:shadow-md transition-all duration-200"
                                               title="Ver detalles">
                                                <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
                                                </svg>
                                                Ver
                                            </a>

                                            <!-- Editar -->
                                            <a asp-action="EditarProfesor" asp-route-id="@profesor.Id"
                                               class="inline-flex items-center px-3 py-2 bg-lime-500 hover:bg-lime-600 text-white text-xs font-medium rounded-lg shadow-sm hover:shadow-md transition-all duration-200"
                                               title="Editar">
                                                <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
                                                </svg>
                                                Editar
                                            </a>
                                            <!-- Toggle Activar/Desactivar -->
                                            @if (profesor.IsActive)
                                            {
                                                <button type="button"
                                                        onclick="toggleEstado(@profesor.Id, '@profesor.FirstName @profesor.LastName', false)"
                                                        class="inline-flex items-center px-3 py-2 bg-amber-500 hover:bg-amber-600 text-white text-xs font-medium rounded-lg shadow-sm hover:shadow-md transition-all duration-200"
                                                        title="Desactivar profesor">
                                                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18.364 18.364A9 9 0 005.636 5.636m12.728 12.728A9 9 0 015.636 5.636m12.728 12.728L5.636 5.636"></path>
                                                    </svg>
                                                </button>
                                            }
                                            else
                                            {
                                                <button type="button"
                                                        onclick="toggleEstado(@profesor.Id, '@profesor.FirstName @profesor.LastName', true)"
                                                        class="inline-flex items-center px-3 py-2 bg-green-500 hover:bg-green-600 text-white text-xs font-medium rounded-lg shadow-sm hover:shadow-md transition-all duration-200"
                                                        title="Activar profesor">
                                                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                                                    </svg>
                                                </button>
                                            }

                                            <!-- Eliminar -->
                                            <button type="button"
                                                    onclick="confirmarEliminar(@profesor.Id, '@profesor.FirstName @profesor.LastName')"
                                                    class="inline-flex items-center px-3 py-2 bg-red-500 hover:bg-red-600 text-white text-xs font-medium rounded-lg shadow-sm hover:shadow-md transition-all duration-200"
                                                    title="Eliminar permanentemente">
                                                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                                                </svg>
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

            <!-- PAGINACIÓN -->
            @if (Model.TotalPages > 1)
            {
                <div class="bg-gray-50 px-8 py-4 border-t border-gray-200">
                    <div class="flex flex-col sm:flex-row justify-between items-center gap-4">
                        <div class="text-sm text-gray-600">
                            Página <strong>@Model.PageIndex</strong> de <strong>@Model.TotalPages</strong>
                        </div>
                        
                        <nav class="flex gap-2">
                            <a asp-action="Profesores" 
                               asp-route-pageNumber="1"
                               asp-route-searchTerm="@ViewBag.SearchTerm"
                               asp-route-status="@ViewBag.Status"
                               asp-route-specialty="@ViewBag.Specialty"
                               asp-route-sortBy="@ViewBag.SortBy"
                               asp-route-pageSize="@ViewBag.PageSize"
                               class="px-3 py-2 border border-gray-300 rounded-lg @(Model.PageIndex == 1 ? "bg-gray-100 text-gray-400 cursor-not-allowed" : "bg-white hover:bg-gray-50 text-gray-700")">
                                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 19l-7-7 7-7m8 14l-7-7 7-7"></path>
                                </svg>
                            </a>

                            <a asp-action="Profesores" 
                               asp-route-pageNumber="@(Model.PageIndex - 1)"
                               asp-route-searchTerm="@ViewBag.SearchTerm"
                               asp-route-status="@ViewBag.Status"
                               asp-route-specialty="@ViewBag.Specialty"
                               asp-route-sortBy="@ViewBag.SortBy"
                               asp-route-pageSize="@ViewBag.PageSize"
                               class="px-3 py-2 border border-gray-300 rounded-lg @(Model.PageIndex == 1 ? "bg-gray-100 text-gray-400 cursor-not-allowed" : "bg-white hover:bg-gray-50 text-gray-700")">
                                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
                                </svg>
                            </a>

                            @for (int i = Math.Max(1, Model.PageIndex - 2); i <= Math.Min(Model.TotalPages, Model.PageIndex + 2); i++)
                            {
                                <a asp-action="Profesores" 
                                   asp-route-pageNumber="@i"
                                   asp-route-searchTerm="@ViewBag.SearchTerm"
                                   asp-route-status="@ViewBag.Status"
                                   asp-route-specialty="@ViewBag.Specialty"
                                   asp-route-sortBy="@ViewBag.SortBy"
                                   asp-route-pageSize="@ViewBag.PageSize"
                                   class="px-4 py-2 border rounded-lg @(i == Model.PageIndex ? "bg-blue-500 text-white border-blue-500" : "bg-white text-gray-700 border-gray-300 hover:bg-gray-50")">
                                    @i
                                </a>
                            }

                            <a asp-action="Profesores" 
                               asp-route-pageNumber="@(Model.PageIndex + 1)"
                               asp-route-searchTerm="@ViewBag.SearchTerm"
                               asp-route-status="@ViewBag.Status"
                               asp-route-specialty="@ViewBag.Specialty"
                               asp-route-sortBy="@ViewBag.SortBy"
                               asp-route-pageSize="@ViewBag.PageSize"
                               class="px-3 py-2 border border-gray-300 rounded-lg @(Model.PageIndex == Model.TotalPages ? "bg-gray-100 text-gray-400 cursor-not-allowed" : "bg-white hover:bg-gray-50 text-gray-700")">
                                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                                </svg>
                            </a>

                            <a asp-action="Profesores" 
                               asp-route-pageNumber="@Model.TotalPages"
                               asp-route-searchTerm="@ViewBag.SearchTerm"
                               asp-route-status="@ViewBag.Status"
                               asp-route-specialty="@ViewBag.Specialty"
                               asp-route-sortBy="@ViewBag.SortBy"
                               asp-route-pageSize="@ViewBag.PageSize"
                               class="px-3 py-2 border border-gray-300 rounded-lg @(Model.PageIndex == Model.TotalPages ? "bg-gray-100 text-gray-400 cursor-not-allowed" : "bg-white hover:bg-gray-50 text-gray-700")">
                                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 5l7 7-7 7M5 5l7 7-7 7"></path>
                                </svg>
                            </a>
                        </nav>
                    </div>
                </div>
                }
            }
            else
            {
                <div class="text-center py-16">
                    <div class="mx-auto h-24 w-24 bg-gray-100 rounded-full flex items-center justify-center mb-6">
                        <svg class="w-12 h-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                  d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z">
                            </path>
                        </svg>
                    </div>
                    <h3 class="text-lg font-medium text-gray-900 mb-2">
                        @if (!string.IsNullOrEmpty(ViewBag.SearchTerm) || !string.IsNullOrEmpty(ViewBag.Status))
                        {
                            <span>No se encontraron profesores con los filtros aplicados</span>
                        }
                        else
                        {
                            <span>No hay profesores registrados</span>
                        }
                    </h3>
                    <p class="text-gray-500 mb-6">
                        @if (!string.IsNullOrEmpty(ViewBag.SearchTerm) || !string.IsNullOrEmpty(ViewBag.Status))
                        {
                            <span>Intenta cambiar los filtros de búsqueda</span>
                        }
                        else
                        {
                            <span>Presiona el botón "Crear Profesor" para agregar uno</span>
                        }
                    </p>
                    <div class="flex justify-center gap-3">
                        @if (!string.IsNullOrEmpty(ViewBag.SearchTerm) || !string.IsNullOrEmpty(ViewBag.Status))
                        {
                            <a asp-action="Profesores"
                               class="inline-flex items-center px-6 py-3 bg-gray-100 hover:bg-gray-200 text-gray-700 font-semibold rounded-lg shadow-md">
                                Limpiar Filtros
                            </a>
                        }
                        <a asp-action="CrearProfesor"
                           class="inline-flex items-center px-6 py-3 bg-gradient-to-r from-blue-500 to-blue-600 hover:from-blue-600 hover:to-blue-700 text-white font-semibold rounded-lg shadow-lg">
                            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6" />
                            </svg>
                            Crear Primer Profesor
                        </a>
                    </div>
                </div>

            }
        </div>
    </div>


<!-- Formularios ocultos -->
<form id="formActivar" asp-action="ActivarProfesor" method="post" style="display:none;">
    <input type="hidden" id="activarId" name="id" />
</form>

<form id="formDesactivar" asp-action="DesactivarProfesor" method="post" style="display:none;">
    <input type="hidden" id="desactivarId" name="id" />
</form>

<form id="formEliminar" asp-action="EliminarProfesor" method="post" style="display:none;">
    <input type="hidden" id="eliminarId" name="id" />
</form>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        function toggleEstado(id, nombre, activar) {
            const titulo = activar ? '¿Activar profesor?' : '¿Desactivar profesor?';
            const texto = activar
                ? `¿Estás seguro de activar a <strong>${nombre}</strong>?`
                : `¿Estás seguro de desactivar a <strong>${nombre}</strong>?`;
            const icono = activar ? 'question' : 'warning';
            const btnColor = activar ? '#10b981' : '#f59e0b';
            const btnTexto = activar ? 'Activar' : 'Desactivar';

            Swal.fire({
                title: titulo,
                html: texto,
                icon: icono,
                showCancelButton: true,
                confirmButtonColor: btnColor,
                cancelButtonColor: '#6b7280',
                confirmButtonText: btnTexto,
                cancelButtonText: 'Cancelar'
            }).then((result) => {
                if (result.isConfirmed) {
                    if (activar) {
                        document.getElementById('activarId').value = id;
                        document.getElementById('formActivar').submit();
                    } else {
                        document.getElementById('desactivarId').value = id;
                        document.getElementById('formDesactivar').submit();
                    }
                }
            });
        }

        function confirmarEliminar(id, nombre) {
            Swal.fire({
                title: '¡Atención!',
                html: `<div class="text-left">
                    <p>Estás a punto de eliminar a: <strong>${nombre}</strong></p>
                    <p class="text-red-600 mt-2">Esta acción NO se puede deshacer.</p>
                </div>`,
                icon: 'error',
                showCancelButton: true,
                confirmButtonColor: '#dc2626',
                cancelButtonColor: '#6b7280',
                confirmButtonText: 'Eliminar',
                cancelButtonText: 'Cancelar'
            }).then((result) => {
                if (result.isConfirmed) {
                    document.getElementById('eliminarId').value = id;
                    document.getElementById('formEliminar').submit();
                }
            });
        }
    </script>
}
