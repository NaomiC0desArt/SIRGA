@model SIRGA.Web.Models.ClaseProgramada.ClaseProgramadaDto

@{
    ViewData["Title"] = "Detalles de Clase Programada";
}

<div class="min-h-screen bg-gray-50 px-3 sm:px-4 lg:px-8 pt-8 pb-12">
    <div class="max-w-5xl mx-auto">

        <!-- Header -->
        <div class="bg-white rounded-2xl shadow-xl p-8 border border-gray-100 mb-8">
            <div class="flex flex-col sm:flex-row justify-between items-start sm:items-center gap-4">
                <div class="flex items-center">
                    <div class="h-16 w-16 bg-gradient-to-r from-purple-500 to-purple-600 rounded-full flex items-center justify-center mr-4 shadow-lg">
                        <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                        </svg>
                    </div>
                    <div>
                        <h1 class="text-3xl font-bold text-gray-900">@Model.AsignaturaNombre</h1>
                        <p class="text-gray-600 mt-1">
                            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-sm font-medium bg-purple-100 text-purple-800">
                                @Model.WeekDay
                            </span>
                        </p>
                    </div>
                </div>

                <div class="flex gap-3">
                    <a asp-action="Editar" asp-route-id="@Model.Id"
                       class="inline-flex items-center px-4 py-2 bg-purple-500 hover:bg-purple-600 text-white font-semibold rounded-lg shadow-md transition-all duration-200">
                        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
                        </svg>
                        Editar
                    </a>
                    <a asp-action="Index"
                       class="inline-flex items-center px-4 py-2 bg-gray-100 hover:bg-gray-200 text-gray-700 font-semibold rounded-lg shadow-md transition-all duration-200">
                        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
                        </svg>
                        Volver
                    </a>
                </div>
            </div>
        </div>

        <!-- Grid de Información -->
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">

            <!-- Información de Horario -->
            <div class="bg-white rounded-2xl shadow-xl p-6 border border-gray-100">
                <h2 class="text-xl font-bold text-gray-900 mb-4 flex items-center">
                    <svg class="w-6 h-6 mr-2 text-purple-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                    </svg>
                    Información de Horario
                </h2>

                <div class="space-y-4">
                    <div>
                        <label class="text-sm font-medium text-gray-500">Día de la Semana</label>
                        <p class="text-lg text-gray-900">@Model.WeekDay</p>
                    </div>

                    <div>
                        <label class="text-sm font-medium text-gray-500">Hora de Inicio</label>
                        <p class="text-lg text-gray-900">@Model.StartTime.ToString(@"hh\:mm tt")</p>
                    </div>

                    <div>
                        <label class="text-sm font-medium text-gray-500">Hora de Finalización</label>
                        <p class="text-lg text-gray-900">@Model.EndTime.ToString(@"hh\:mm tt")</p>
                    </div>

                    <div>
                        <label class="text-sm font-medium text-gray-500">Duración</label>
                        <p class="text-lg text-gray-900">
                            @{
                                var duracion = Model.EndTime - Model.StartTime;
                                var horas = (int)duracion.TotalHours;
                                var minutos = duracion.Minutes;
                            }
                            @if (horas > 0)
                            {
                                <span>@horas hora@(horas > 1 ? "s" : "")</span>
                            }
                            @if (minutos > 0)
                            {
                                <span>@minutos minuto@(minutos > 1 ? "s" : "")</span>
                            }
                        </p>
                    </div>
                </div>
            </div>

            <!-- Información de Ubicación -->
            <div class="bg-white rounded-2xl shadow-xl p-6 border border-gray-100">
                <h2 class="text-xl font-bold text-gray-900 mb-4 flex items-center">
                    <svg class="w-6 h-6 mr-2 text-purple-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                    </svg>
                    Ubicación
                </h2>

                <div class="space-y-4">
                    <div>
                        <label class="text-sm font-medium text-gray-500">Salón / Aula</label>
                        <p class="text-lg text-gray-900">@Model.Location</p>
                    </div>

                    <div class="bg-purple-50 border-l-4 border-purple-400 p-4 rounded">
                        <div class="flex">
                            <div class="flex-shrink-0">
                                <svg class="w-5 h-5 text-purple-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                                </svg>
                            </div>
                            <div class="ml-3">
                                <p class="text-sm text-purple-700">
                                    Asegúrese de estar en el aula indicada antes del inicio de la clase.
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Información de Asignatura -->
            <div class="bg-white rounded-2xl shadow-xl p-6 border border-gray-100">
                <h2 class="text-xl font-bold text-gray-900 mb-4 flex items-center">
                    <svg class="w-6 h-6 mr-2 text-purple-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"></path>
                    </svg>
                    Información de Asignatura
                </h2>

                <div class="space-y-4">
                    <div>
                        <label class="text-sm font-medium text-gray-500">Asignatura</label>
                        <p class="text-lg text-gray-900 font-semibold">@Model.AsignaturaNombre</p>
                    </div>

                    <div>
                        <label class="text-sm font-medium text-gray-500">ID de Asignatura</label>
                        <p class="text-lg text-gray-900">@Model.IdAsignatura</p>
                    </div>

                    <div>
                        <label class="text-sm font-medium text-gray-500">Curso Académico</label>
                        <p class="text-lg text-gray-900">@Model.CursoAcademicoNombre</p>
                    </div>
                </div>
            </div>

            <!-- Información del Profesor -->
            <div class="bg-white rounded-2xl shadow-xl p-6 border border-gray-100">
                <h2 class="text-xl font-bold text-gray-900 mb-4 flex items-center">
                    <svg class="w-6 h-6 mr-2 text-purple-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                    </svg>
                    Profesor Asignado
                </h2>

                <div class="space-y-4">
                    <div>
                        <label class="text-sm font-medium text-gray-500">Nombre del Profesor</label>
                        <p class="text-lg text-gray-900 font-semibold">@Model.ProfesorNombre</p>
                    </div>

                    <div>
                        <label class="text-sm font-medium text-gray-500">ID de Profesor</label>
                        <p class="text-lg text-gray-900">@Model.IdProfesor</p>
                    </div>

                    <div class="pt-4">
                        <a asp-controller="Admin" asp-action="DetallesProfesor" asp-route-id="@Model.IdProfesor"
                           class="inline-flex items-center text-purple-600 hover:text-purple-800 font-medium">
                            Ver perfil completo del profesor
                            <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                            </svg>
                        </a>
                    </div>
                </div>
            </div>

        </div>

        <!-- Resumen de la Clase -->
        <div class="mt-6 bg-white rounded-2xl shadow-xl p-6 border border-gray-100">
            <h2 class="text-xl font-bold text-gray-900 mb-4 flex items-center">
                <svg class="w-6 h-6 mr-2 text-purple-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"></path>
                </svg>
                Resumen de la Clase
            </h2>

            <div class="bg-gradient-to-r from-purple-50 to-purple-100 rounded-lg p-6 border border-purple-200">
                <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
                    <div class="text-center">
                        <div class="text-sm font-medium text-purple-600 mb-1">Asignatura</div>
                        <div class="text-lg font-bold text-purple-900">@Model.AsignaturaNombre</div>
                    </div>
                    <div class="text-center">
                        <div class="text-sm font-medium text-purple-600 mb-1">Horario</div>
                        <div class="text-lg font-bold text-purple-900">
                            @Model.WeekDay - @Model.StartTime.ToString(@"hh\:mm") a @Model.EndTime.ToString(@"hh\:mm")
                        </div>
                    </div>
                    <div class="text-center">
                        <div class="text-sm font-medium text-purple-600 mb-1">Ubicación</div>
                        <div class="text-lg font-bold text-purple-900">@Model.Location</div>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>