@model SIRGA.Web.Models.ActividadExtracurricular.ActividadDetalleViewModel

@{
    ViewData["Title"] = "Detalles de la Actividad";
    Layout = "~/Views/Shared/_LayoutWithSidebar.cshtml";
    ViewBag.UserName = User.Identity.Name;
    ViewBag.UserRole = "Administrador";
}

@section SidebarMenu {
    <partial name="_AdminSidebarMenu" />
}

    <div class="max-w-6xl mx-auto">

        <!-- Encabezado -->
        <div class="bg-white rounded-2xl shadow-xl p-8 border border-gray-100 mb-8">
            <div class="flex items-center justify-between flex-wrap gap-4">
                <div class="flex items-center">
                    <div class="h-14 w-14 rounded-full flex items-center justify-center mr-4 shadow-lg"
                         style="background: @Model.ColorTarjeta;">
                        <svg class="w-7 h-7 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                        </svg>
                    </div>
                    <div>
                        <h1 class="text-3xl font-bold text-gray-900">@Model.Nombre</h1>
                        <p class="text-gray-600 mt-1">
                            <span class="px-3 py-1 bg-gray-100 text-gray-700 text-sm rounded-full">@Model.Categoria</span>
                            @if (Model.EstaActiva)
                            {
                                <span class="ml-2 px-3 py-1 bg-green-100 text-green-700 text-sm rounded-full">Activa</span>
                            }
                            else
                            {
                                <span class="ml-2 px-3 py-1 bg-red-100 text-red-700 text-sm rounded-full">Inactiva</span>
                            }
                        </p>
                    </div>
                </div>
                <div class="flex gap-2">
                    <a asp-action="Editar" asp-route-id="@Model.Id"
                       class="px-4 py-2 bg-yellow-100 hover:bg-yellow-200 text-yellow-700 rounded-lg transition-colors font-medium">
                        <svg class="w-5 h-5 inline-block mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
                        </svg>
                        Editar
                    </a>
                    <a asp-action="Index" class="px-4 py-2 bg-gray-100 hover:bg-gray-200 text-gray-700 rounded-lg transition-colors font-medium">
                        Volver
                    </a>
                </div>
            </div>
        </div>

        <!-- Alertas -->
        <partial name="_Alerts" />

        <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">

            <!-- Columna Principal -->
            <div class="lg:col-span-2 space-y-8">

                <!-- Imagen -->
                @if (!string.IsNullOrEmpty(Model.RutaImagen))
                {
                    <div class="bg-white rounded-2xl shadow-xl overflow-hidden border border-gray-100">
                        <img src="@Model.RutaImagen" alt="@Model.Nombre" class="w-full h-64 object-cover">
                    </div>
                }

                <!-- Información Detallada -->
                <div class="bg-white rounded-2xl shadow-xl p-8 border border-gray-100">
                    <h2 class="text-2xl font-bold text-gray-900 mb-6 flex items-center">
                        <svg class="w-6 h-6 mr-3 text-blue-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                        </svg>
                        Información de la Actividad
                    </h2>

                    <div class="space-y-6">
                        <!-- Descripción -->
                        <div>
                            <h3 class="text-sm font-semibold text-gray-500 uppercase tracking-wide mb-2">Descripción</h3>
                            <p class="text-gray-700 leading-relaxed">@Model.Descripcion</p>
                        </div>

                        <!-- Requisitos -->
                        @if (!string.IsNullOrEmpty(Model.Requisitos))
                        {
                            <div>
                                <h3 class="text-sm font-semibold text-gray-500 uppercase tracking-wide mb-2">Requisitos</h3>
                                <p class="text-gray-700 leading-relaxed">@Model.Requisitos</p>
                            </div>
                        }

                        <!-- Horario -->
                        <div>
                            <h3 class="text-sm font-semibold text-gray-500 uppercase tracking-wide mb-3">Horario</h3>
                            <div class="flex items-center bg-blue-50 p-4 rounded-lg border border-blue-200">
                                <svg class="w-6 h-6 text-blue-600 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                                </svg>
                                <div>
                                    <p class="font-semibold text-gray-900">@Model.DiaSemana</p>
                                    <p class="text-sm text-gray-600">@Model.HoraInicioFormateada - @Model.HoraFinFormateada</p>
                                </div>
                            </div>
                        </div>

                        <!-- Ubicación -->
                        @if (!string.IsNullOrEmpty(Model.Ubicacion))
                        {
                            <div>
                                <h3 class="text-sm font-semibold text-gray-500 uppercase tracking-wide mb-3">Ubicación</h3>
                                <div class="flex items-center bg-green-50 p-4 rounded-lg border border-green-200">
                                    <svg class="w-6 h-6 text-green-600 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                                    </svg>
                                    <p class="text-gray-900 font-medium">@Model.Ubicacion</p>
                                </div>
                            </div>
                        }

                        <!-- Profesor -->
                        <div>
                            <h3 class="text-sm font-semibold text-gray-500 uppercase tracking-wide mb-3">Profesor Encargado</h3>
                            <div class="flex items-center bg-purple-50 p-4 rounded-lg border border-purple-200">
                                <div class="w-12 h-12 bg-purple-600 rounded-full flex items-center justify-center mr-3">
                                    <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                                    </svg>
                                </div>
                                <p class="text-gray-900 font-medium">@Model.NombreProfesor</p>
                            </div>
                        </div>
                    </div>
                </div>

            </div>

            <!-- Columna Lateral -->
            <div class="space-y-6">

                <!-- Estadísticas -->
                <div class="bg-white rounded-2xl shadow-xl p-6 border border-gray-100">
                    <h3 class="text-lg font-bold text-gray-900 mb-4">Estadísticas</h3>

                    <div class="space-y-4">
                        <div class="flex items-center justify-between p-4 bg-gradient-to-r from-blue-50 to-blue-100 rounded-lg">
                            <div class="flex items-center">
                                <svg class="w-8 h-8 text-blue-600 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
                                </svg>
                                <span class="text-gray-700">Estudiantes</span>
                            </div>
                            <span class="text-2xl font-bold text-blue-600">@Model.TotalInscritos</span>
                        </div>

                        <div class="flex items-center justify-between p-4 bg-gradient-to-r from-purple-50 to-purple-100 rounded-lg">
                            <div class="flex items-center">
                                <div class="w-8 h-8 rounded-lg mr-3" style="background: @Model.ColorTarjeta;"></div>
                                <span class="text-gray-700">Color</span>
                            </div>
                            <span class="text-sm font-mono text-gray-600">@Model.ColorTarjeta</span>
                        </div>
                    </div>
                </div>

                <!-- Acciones Rápidas -->
                <div class="bg-white rounded-2xl shadow-xl p-6 border border-gray-100">
                    <h3 class="text-lg font-bold text-gray-900 mb-4">Acciones</h3>

                    <div class="space-y-3">
                        <a asp-action="GestionarInscritos" asp-route-id="@Model.Id"
                           class="block w-full px-4 py-3 bg-blue-100 hover:bg-blue-200 text-blue-700 text-center rounded-lg transition-colors font-medium">
                            <svg class="w-5 h-5 inline-block mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z"></path>
                            </svg>
                            Gestionar Inscritos
                        </a>

                        <a asp-action="Editar" asp-route-id="@Model.Id"
                           class="block w-full px-4 py-3 bg-yellow-100 hover:bg-yellow-200 text-yellow-700 text-center rounded-lg transition-colors font-medium">
                            <svg class="w-5 h-5 inline-block mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
                            </svg>
                            Editar Actividad
                        </a>

                        <form asp-action="Eliminar" asp-route-id="@Model.Id" method="post"
                              onsubmit="return confirm('¿Estás seguro de eliminar esta actividad? Esta acción no se puede deshacer.');">
                            <button type="submit"
                                    class="w-full px-4 py-3 bg-red-100 hover:bg-red-200 text-red-700 rounded-lg transition-colors font-medium">
                                <svg class="w-5 h-5 inline-block mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                                </svg>
                                Eliminar Actividad
                            </button>
                        </form>
                    </div>
                </div>

            </div>

        </div>

        <!-- Lista de Estudiantes Inscritos -->
        @if (Model.EstudiantesInscritos != null && Model.EstudiantesInscritos.Any())
        {
            <div class="bg-white rounded-2xl shadow-xl p-8 border border-gray-100 mt-8">
                <div class="flex items-center justify-between mb-6">
                    <h2 class="text-2xl font-bold text-gray-900 flex items-center">
                        <svg class="w-6 h-6 mr-3 text-blue-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
                        </svg>
                        Estudiantes Inscritos (@Model.TotalInscritos)
                    </h2>
                    <a asp-action="GestionarInscritos" asp-route-id="@Model.Id"
                       class="px-4 py-2 bg-blue-600 hover:bg-blue-700 text-white rounded-lg transition-colors font-medium">
                        Gestionar Inscripciones
                    </a>
                </div>

                <div class="overflow-x-auto">
                    <table class="min-w-full divide-y divide-gray-200">
                        <thead class="bg-gray-50">
                            <tr>
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Estudiante</th>
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Matrícula</th>
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Fecha Inscripción</th>
                            </tr>
                        </thead>
                        <tbody class="bg-white divide-y divide-gray-200">
                            @foreach (var estudiante in Model.EstudiantesInscritos.OrderBy(e => e.NombreCompleto))
                            {
                                <tr class="hover:bg-gray-50">
                                    <td class="px-6 py-4 whitespace-nowrap">
                                        <div class="flex items-center">
                                            <div class="w-10 h-10 bg-gradient-to-r from-blue-500 to-purple-500 rounded-full flex items-center justify-center mr-3">
                                                <span class="text-white font-semibold text-sm">
                                                    @estudiante.NombreCompleto.Substring(0, 1)
                                                </span>
                                            </div>
                                            <div class="text-sm font-medium text-gray-900">@estudiante.NombreCompleto</div>
                                        </div>
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-600">@estudiante.Matricula</td>
                                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">@estudiante.FechaInscripcion.ToString("dd/MM/yyyy")</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        }
        else
        {
            <div class="bg-white rounded-2xl shadow-xl p-12 border border-gray-100 mt-8 text-center">
                <svg class="w-16 h-16 mx-auto text-gray-400 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
                </svg>
                <h3 class="text-xl font-semibold text-gray-700 mb-2">No hay estudiantes inscritos</h3>
                <p class="text-gray-500 mb-4">Esta actividad aún no tiene estudiantes inscritos.</p>
                <a asp-action="GestionarInscritos" asp-route-id="@Model.Id"
                   class="inline-block px-6 py-3 bg-blue-600 hover:bg-blue-700 text-white rounded-lg transition-colors font-medium">
                    Inscribir Estudiantes
                </a>
            </div>
        }

    </div>
