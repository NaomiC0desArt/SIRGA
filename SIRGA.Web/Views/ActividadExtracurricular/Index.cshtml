@using SIRGA.Web.Helpers

@model PaginatedList<SIRGA.Web.Models.ActividadExtracurricular.ActividadViewModel>

@{
    ViewData["Title"] = "Gestión de Actividades Extracurriculares";
    Layout = "~/Views/Shared/_LayoutWithSidebar.cshtml";
    ViewBag.UserName = User.Identity.Name;
    ViewBag.UserRole = "Administrador";
}
@section SidebarMenu {
    <partial name="_AdminSidebarMenu" />
}

    <div class="max-w-7xl mx-auto">

        <!-- Encabezado -->
        <div class="bg-white rounded-2xl shadow-xl p-8 border border-gray-100 mb-8">
            <div class="flex items-center justify-between flex-wrap gap-4">
                <div class="flex items-center">
                    <div class="h-16 w-16 bg-gradient-to-r from-purple-500 to-purple-600 rounded-full flex items-center justify-center mr-4 shadow-lg">
                        <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"></path>
                        </svg>
                    </div>
                    <div>
                        <h1 class="text-3xl font-bold text-gray-900">Actividades Extracurriculares</h1>
                        <p class="text-gray-600 mt-1">Gestiona las actividades disponibles para estudiantes</p>
                    </div>
                </div>
                <a asp-action="Crear" class="px-6 py-3 bg-gradient-to-r from-purple-500 to-purple-600 hover:from-purple-600 hover:to-purple-700 text-white font-semibold rounded-lg shadow-lg transition-all duration-200 flex items-center">
                    <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
                    </svg>
                    Nueva Actividad
                </a>

                <a asp-controller="Admin" asp-action="Index"
                   class="inline-flex items-center px-6 py-3 bg-gray-100 hover:bg-gray-200 text-gray-700 font-semibold rounded-lg shadow-md hover:shadow-lg transition-all duration-200">
                    <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
                    </svg>
                    Volver al Panel
                </a>
            </div>
        </div>

        <!-- Alertas -->
        <partial name="_Alerts" />

        <!-- Filtros y Búsqueda -->
        <div class="bg-white rounded-xl shadow-lg p-6 border border-gray-100 mb-6">
            <form method="get" asp-action="Index">
                <div class="grid grid-cols-1 md:grid-cols-4 gap-4">

                    <!-- Búsqueda -->
                    <div class="md:col-span-2">
                        <label class="block text-sm font-medium text-gray-700 mb-2">Buscar</label>
                        <div class="relative">
                            <input type="text"
                                   name="searchTerm"
                                   value="@ViewBag.SearchTerm"
                                   placeholder="Nombre, descripción o profesor..."
                                   class="w-full pl-10 pr-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-purple-500 focus:border-transparent">
                            <svg class="w-5 h-5 text-gray-400 absolute left-3 top-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
                            </svg>
                        </div>
                    </div>

                    <!-- Categoría -->
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-2">Categoría</label>
                        <select name="categoria" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-purple-500 focus:border-transparent">
                            <option value="">Todas</option>
                            <option value="Curso" selected="@(ViewBag.Categoria == "Curso")">Curso</option>
                            <option value="Actividad/Voluntariado" selected="@(ViewBag.Categoria == "Actividad/Voluntariado")">Actividad/Voluntariado</option>
                            <option value="Club" selected="@(ViewBag.Categoria == "Club")">Club</option>
                        </select>
                    </div>

                    <!-- Ordenar -->
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-2">Ordenar por</label>
                        <select name="sortBy" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-purple-500 focus:border-transparent">
                            <option value="nombre" selected="@(ViewBag.SortBy == "nombre")">Nombre</option>
                            <option value="categoria" selected="@(ViewBag.SortBy == "categoria")">Categoría</option>
                            <option value="inscritos" selected="@(ViewBag.SortBy == "inscritos")">Más Inscritos</option>
                            <option value="dia" selected="@(ViewBag.SortBy == "dia")">Día</option>
                        </select>
                    </div>
                </div>

                <div class="flex justify-end mt-4 gap-2">
                    <a asp-action="Index" class="px-4 py-2 bg-gray-100 hover:bg-gray-200 text-gray-700 rounded-lg transition-colors">
                        Limpiar
                    </a>
                    <button type="submit" class="px-6 py-2 bg-purple-600 hover:bg-purple-700 text-white font-semibold rounded-lg transition-colors">
                        Filtrar
                    </button>
                </div>
            </form>
        </div>

        @if (Model != null && Model.Items.Any())
        {
            <!-- Grid de Actividades -->
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 mb-8">
                @foreach (var actividad in Model.Items)
                {
                    <div class="bg-white rounded-xl shadow-lg overflow-hidden border border-gray-100 hover:shadow-xl transition-shadow duration-300">

                        <!-- Header con color -->
                        <div class="h-32 relative" style="background: linear-gradient(135deg, @actividad.ColorTarjeta 0%, @actividad.ColorTarjeta 100%);">
                            @if (!string.IsNullOrEmpty(actividad.RutaImagen))
                            {
                                <img src="@actividad.RutaImagen" alt="@actividad.Nombre" class="w-full h-full object-cover opacity-70">
                            }
                            <div class="absolute top-4 right-4">
                                @if (actividad.EstaActiva)
                                {
                                    <span class="px-3 py-1 bg-green-500 text-white text-xs font-semibold rounded-full">Activa</span>
                                }
                                else
                                {
                                    <span class="px-3 py-1 bg-red-500 text-white text-xs font-semibold rounded-full">Inactiva</span>
                                }
                            </div>
                            <div class="absolute bottom-4 left-4">
                                <span class="px-3 py-1 bg-white bg-opacity-90 text-gray-800 text-xs font-semibold rounded-full">
                                    @actividad.Categoria
                                </span>
                            </div>
                        </div>

                        <!-- Contenido -->
                        <div class="p-6">
                            <h3 class="text-xl font-bold text-gray-900 mb-2 line-clamp-2">@actividad.Nombre</h3>
                            <p class="text-sm text-gray-600 mb-4 line-clamp-3">@actividad.Descripcion</p>

                            <!-- Info -->
                            <div class="space-y-2 mb-4">
                                <div class="flex items-center text-sm text-gray-600">
                                    <svg class="w-4 h-4 mr-2 text-blue-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                                    </svg>
                                    @actividad.DiaSemana - @actividad.HoraInicioFormateada a @actividad.HoraFinFormateada
                                </div>
                                <div class="flex items-center text-sm text-gray-600">
                                    <svg class="w-4 h-4 mr-2 text-purple-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                                    </svg>
                                    @actividad.NombreProfesor
                                </div>
                                <div class="flex items-center text-sm text-gray-600">
                                    <svg class="w-4 h-4 mr-2 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
                                    </svg>
                                    @actividad.TotalInscritos estudiante(s)
                                </div>
                            </div>

                            <!-- Acciones -->
                            <div class="flex gap-2">
                                <a asp-action="Detalles" asp-route-id="@actividad.Id"
                                   class="flex-1 px-4 py-2 bg-purple-100 hover:bg-purple-200 text-purple-700 text-center rounded-lg transition-colors text-sm font-medium">
                                    Ver Detalles
                                </a>
                                <a asp-action="GestionarInscritos" asp-route-id="@actividad.Id"
                                   class="flex-1 px-4 py-2 bg-blue-100 hover:bg-blue-200 text-blue-700 text-center rounded-lg transition-colors text-sm font-medium">
                                    Inscritos (@actividad.TotalInscritos)
                                </a>
                            </div>

                            <div class="flex gap-2 mt-2">
                                <a asp-action="Editar" asp-route-id="@actividad.Id"
                                   class="flex-1 px-4 py-2 bg-yellow-100 hover:bg-yellow-200 text-yellow-700 text-center rounded-lg transition-colors text-sm font-medium">
                                    <svg class="w-4 h-4 inline-block mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
                                    </svg>
                                    Editar
                                </a>
                                <form asp-action="Eliminar" asp-route-id="@actividad.Id" method="post"
                                      onsubmit="return confirm('¿Estás seguro de eliminar esta actividad?');"
                                      class="flex-1">
                                    <button type="submit"
                                            class="w-full px-4 py-2 bg-red-100 hover:bg-red-200 text-red-700 rounded-lg transition-colors text-sm font-medium">
                                        <svg class="w-4 h-4 inline-block mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                                        </svg>
                                        Eliminar
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>
                }
            </div>

            <!-- Paginación -->
            @if (Model.TotalPages > 1)
            {
                <div class="flex justify-center items-center gap-2">
                    @if (Model.HasPreviousPage)
                    {
                        <a asp-action="Index"
                           asp-route-pageNumber="@(Model.PageIndex - 1)"
                           asp-route-searchTerm="@ViewBag.SearchTerm"
                           asp-route-categoria="@ViewBag.Categoria"
                           asp-route-sortBy="@ViewBag.SortBy"
                           class="px-4 py-2 bg-white border border-gray-300 rounded-lg hover:bg-gray-50">
                            Anterior
                        </a>
                    }

                    <span class="px-4 py-2 text-gray-700">
                        Página @Model.PageIndex de @Model.TotalPages
                    </span>

                    @if (Model.HasNextPage)
                    {
                        <a asp-action="Index"
                           asp-route-pageNumber="@(Model.PageIndex + 1)"
                           asp-route-searchTerm="@ViewBag.SearchTerm"
                           asp-route-categoria="@ViewBag.Categoria"
                           asp-route-sortBy="@ViewBag.SortBy"
                           class="px-4 py-2 bg-white border border-gray-300 rounded-lg hover:bg-gray-50">
                            Siguiente
                        </a>
                    }
                </div>
            }
        }
        else
        {
            <!-- Sin actividades -->
            <div class="bg-white rounded-2xl shadow-xl p-12 border border-gray-100 text-center">
                <svg class="w-20 h-20 mx-auto text-gray-400 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"></path>
                </svg>
                <h3 class="text-xl font-semibold text-gray-700 mb-2">
                    No hay actividades disponibles
                </h3>
                <p class="text-gray-500 mb-4">
                    Comienza creando tu primera actividad extracurricular.
                </p>
                <a asp-action="Crear" class="inline-block px-6 py-3 bg-purple-600 hover:bg-purple-700 text-white font-semibold rounded-lg transition-colors">
                    Crear Actividad
                </a>
            </div>
        }

    </div>
