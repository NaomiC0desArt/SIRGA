@model SIRGA.Web.Models.ActividadExtracurricular.ActividadDetalleViewModel

@{
    ViewData["Title"] = "Gestionar Inscritos";
    var actividad = ViewBag.Actividad;
}

<div class="min-h-screen bg-gray-50 px-3 sm:px-4 lg:px-8 pt-8 pb-12">
    <div class="max-w-6xl mx-auto">

        <!-- Encabezado -->
        <div class="bg-white rounded-2xl shadow-xl p-8 border border-gray-100 mb-8">
            <div class="flex items-center justify-between flex-wrap gap-4">
                <div class="flex items-center">
                    <div class="h-14 w-14 bg-gradient-to-r from-blue-500 to-blue-600 rounded-full flex items-center justify-center mr-4 shadow-lg">
                        <svg class="w-7 h-7 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
                        </svg>
                    </div>
                    <div>
                        <h1 class="text-3xl font-bold text-gray-900">Gestionar Inscripciones</h1>
                        <p class="text-gray-600 mt-1">@Model.Nombre (@Model.TotalInscritos estudiante(s) inscrito(s))</p>
                    </div>
                </div>
                <div class="flex gap-2">
                    <a asp-action="Detalles" asp-route-id="@Model.Id"
                       class="px-4 py-2 bg-gray-100 hover:bg-gray-200 text-gray-700 rounded-lg transition-colors font-medium">
                        Ver Detalles
                    </a>
                    <a asp-action="Index" class="px-4 py-2 bg-gray-100 hover:bg-gray-200 text-gray-700 rounded-lg transition-colors font-medium">
                        Volver
                    </a>
                </div>
            </div>
        </div>

        <!-- Alertas -->
        <partial name="_Alerts" />

        <!-- Inscribir Nuevo Estudiante -->
        <div class="bg-white rounded-2xl shadow-xl p-8 border border-gray-100 mb-8">
            <h2 class="text-2xl font-bold text-gray-900 mb-6 flex items-center">
                <svg class="w-6 h-6 mr-3 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18 9v3m0 0v3m0-3h3m-3 0h-3m-2-5a4 4 0 11-8 0 4 4 0 018 0zM3 20a6 6 0 0112 0v1H3v-1z"></path>
                </svg>
                Inscribir Nuevo Estudiante
            </h2>

            <form asp-action="InscribirEstudiante" method="post" class="flex gap-4">
                <input type="hidden" name="idActividad" value="@Model.Id" />

                <div class="flex-1">
                    <label class="block text-sm font-medium text-gray-700 mb-2">Seleccionar Estudiante</label>
                    <select name="idEstudiante" id="estudianteSelect"
                            class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                            required>
                        <option value="">-- Seleccionar Estudiante --</option>
                        @foreach (var estudiante in ViewBag.EstudiantesDisponibles as List<SelectListItem>)
                        {
                            <option value="@estudiante.Value">@estudiante.Text</option>
                        }
                    </select>
                </div>

                <div class="flex items-end">
                    <button type="submit"
                            class="px-8 py-3 bg-gradient-to-r from-green-600 to-green-700 hover:from-green-700 hover:to-green-800 text-white font-semibold rounded-lg shadow-lg transition-all duration-200">
                        <svg class="w-5 h-5 inline-block mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
                        </svg>
                        Inscribir
                    </button>
                </div>
            </form>

            @if (!(ViewBag.EstudiantesDisponibles as List<SelectListItem>).Any())
            {
                <div class="mt-4 p-4 bg-yellow-50 border border-yellow-200 rounded-lg">
                    <p class="text-yellow-800 text-sm flex items-center">
                        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"></path>
                        </svg>
                        Todos los estudiantes activos ya están inscritos en esta actividad.
                    </p>
                </div>
            }
        </div>

        <!-- Lista de Estudiantes Inscritos -->
        @if (Model.EstudiantesInscritos != null && Model.EstudiantesInscritos.Any())
        {
            <div class="bg-white rounded-2xl shadow-xl p-8 border border-gray-100">
                <h2 class="text-2xl font-bold text-gray-900 mb-6 flex items-center">
                    <svg class="w-6 h-6 mr-3 text-blue-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
                    </svg>
                    Estudiantes Inscritos (@Model.TotalInscritos)
                </h2>

                <!-- Campo de búsqueda -->
                <div class="mb-6">
                    <div class="relative">
                        <input type="text"
                               id="searchBox"
                               placeholder="Buscar por nombre o matrícula..."
                               class="w-full pl-10 pr-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent">
                        <svg class="w-5 h-5 text-gray-400 absolute left-3 top-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
                        </svg>
                    </div>
                </div>

                <div class="overflow-x-auto">
                    <table class="min-w-full divide-y divide-gray-200">
                        <thead class="bg-gray-50">
                            <tr>
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Estudiante</th>
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Matrícula</th>
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Fecha Inscripción</th>
                                <th class="px-6 py-3 text-center text-xs font-medium text-gray-500 uppercase tracking-wider">Acciones</th>
                            </tr>
                        </thead>
                        <tbody class="bg-white divide-y divide-gray-200" id="studentTableBody">
                            @foreach (var estudiante in Model.EstudiantesInscritos.OrderBy(e => e.NombreCompleto))
                            {
                                <tr class="hover:bg-gray-50 student-row" data-search="@estudiante.NombreCompleto.ToLower() @estudiante.Matricula.ToLower()">
                                    <td class="px-6 py-4 whitespace-nowrap">
                                        <div class="flex items-center">
                                            <div class="w-10 h-10 bg-gradient-to-r from-blue-500 to-purple-500 rounded-full flex items-center justify-center mr-3">
                                                <span class="text-white font-semibold text-sm">
                                                    @estudiante.NombreCompleto.Substring(0, 1)
                                                </span>
                                            </div>
                                            <div class="text-sm font-medium text-gray-900">@estudiante.NombreCompleto</div>
                                        </div>
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap">
                                        <span class="px-3 py-1 bg-gray-100 text-gray-800 text-sm font-mono rounded-full">
                                            @estudiante.Matricula
                                        </span>
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-600">
                                        @estudiante.FechaInscripcion.ToString("dd/MM/yyyy")
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap text-center">
                                        <form asp-action="DesinscribirEstudiante" method="post"
                                              onsubmit="return confirm('¿Estás seguro de desinscribir a este estudiante?');">
                                            <input type="hidden" name="idActividad" value="@Model.Id" />
                                            <input type="hidden" name="idEstudiante" value="@estudiante.IdEstudiante" />
                                            <button type="submit"
                                                    class="px-4 py-2 bg-red-100 hover:bg-red-200 text-red-700 rounded-lg transition-colors text-sm font-medium">
                                                <svg class="w-4 h-4 inline-block mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                                                </svg>
                                                Desinscribir
                                            </button>
                                        </form>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <div id="noResultsMessage" class="hidden text-center py-8">
                    <svg class="w-16 h-16 mx-auto text-gray-400 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
                    </svg>
                    <p class="text-gray-500">No se encontraron estudiantes con ese criterio de búsqueda.</p>
                </div>
            </div>
        }
        else
        {
            <div class="bg-white rounded-2xl shadow-xl p-12 border border-gray-100 text-center">
                <svg class="w-20 h-20 mx-auto text-gray-400 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
                </svg>
                <h3 class="text-xl font-semibold text-gray-700 mb-2">No hay estudiantes inscritos</h3>
                <p class="text-gray-500">Utiliza el formulario de arriba para inscribir estudiantes en esta actividad.</p>
            </div>
        }

    </div>
</div>

<script>
    // Búsqueda en tiempo real
    document.getElementById('searchBox')?.addEventListener('input', function(e) {
        const searchTerm = e.target.value.toLowerCase();
        const rows = document.querySelectorAll('.student-row');
        let visibleCount = 0;

        rows.forEach(row => {
            const searchData = row.getAttribute('data-search');
            if (searchData.includes(searchTerm)) {
                row.style.display = '';
                visibleCount++;
            } else {
                row.style.display = 'none';
            }
        });

        // Mostrar mensaje si no hay resultados
        const noResults = document.getElementById('noResultsMessage');
        const tableBody = document.getElementById('studentTableBody');
        if (visibleCount === 0 && rows.length > 0) {
            noResults.classList.remove('hidden');
            tableBody.style.display = 'none';
        } else {
            noResults.classList.add('hidden');
            tableBody.style.display = '';
        }
    });
</script>