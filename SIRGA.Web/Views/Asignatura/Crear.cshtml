@model SIRGA.Web.Models.Asignatura.CreateAsignaturaDto

@{
    ViewData["Title"] = "Crear Asignatura";
    Layout = "~/Views/Shared/_LayoutWithSidebar.cshtml";
    ViewBag.UserName = User.Identity.Name;
    ViewBag.UserRole = "Administrador";
}

@section SidebarMenu {
    <partial name="_AdminSidebarMenu" />
}

    <div class="max-w-2xl mx-auto">

        <!-- Header -->
        <div class="bg-white rounded-2xl shadow-xl p-8 border border-gray-100 mb-8">
            <div class="flex items-center">
                <div class="h-12 w-12 bg-gradient-to-r from-green-500 to-green-600 rounded-full flex items-center justify-center mr-4 shadow-lg">
                    <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
                    </svg>
                </div>
                <div>
                    <h1 class="text-3xl font-bold text-gray-900">Crear Nueva Asignatura</h1>
                    <p class="text-gray-600 mt-1">Complete la información de la asignatura</p>
                </div>
            </div>
        </div>

        <!-- Formulario -->
        <div class="bg-white rounded-2xl shadow-xl p-8 border border-gray-100">
            <form asp-action="Crear" method="post" class="space-y-6">
                @Html.AntiForgeryToken()
                <div asp-validation-summary="ModelOnly" class="text-sm text-red-500 bg-red-50 border border-red-200 rounded-lg p-4"></div>

                <!-- Información -->
                <div class="bg-green-50 border border-green-200 rounded-lg p-4 mb-6">
                    <div class="flex items-start">
                        <svg class="w-5 h-5 text-green-500 mt-0.5 mr-3 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                        </svg>
                        <div class="text-sm text-green-700">
                            <p class="font-semibold mb-1">Sobre las asignaturas:</p>
                            <ul class="list-disc list-inside space-y-1">
                                <li>El código se generará automáticamente según el nombre</li>
                                <li>El nombre debe ser descriptivo y único</li>
                                <li>La descripción ayudará a estudiantes y profesores a identificar el contenido</li>
                            </ul>
                        </div>
                    </div>
                </div>

                <!-- Nombre -->
                <div>
                    <label asp-for="Nombre" class="block text-md font-medium text-gray-700 mb-2">
                        <span class="flex items-center">
                            <svg class="w-5 h-5 mr-2 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"></path>
                            </svg>
                            Nombre de la Asignatura <span class="text-red-500">*</span>
                        </span>
                    </label>
                    <input asp-for="Nombre"
                           class="w-full px-4 py-3 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-green-500 focus:border-green-500 transition-all duration-200"
                           placeholder="Ej: Matemáticas Avanzadas" />
                    <span asp-validation-for="Nombre" class="text-sm text-red-500 mt-1"></span>
                </div>

                <!-- Tipo de Asignatura -->
                <div>
                    <label asp-for="TipoAsignatura" class="block text-md font-medium text-gray-700 mb-2">
                        <span class="flex items-center">
                            <svg class="w-5 h-5 mr-2 text-purple-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                      d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                            </svg>
                            Tipo de Asignatura <span class="text-red-500">*</span>
                        </span>
                    </label>

                    <select asp-for="TipoAsignatura"
                            class="w-full px-4 py-3 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-purple-500 focus:border-purple-500 transition-all duration-200">
                        <option value="">Seleccione el tipo de asignatura...</option>
                        <option value="Teorica">Teórica</option>
                        <option value="Practica">Práctica</option>
                        <option value="TeoricoPractica">Teórico-Práctica</option>
                    </select>

                    <span asp-validation-for="TipoAsignatura" class="text-sm text-red-500 mt-1"></span>
                </div>

                <!-- Descripción -->
                <div>
                    <label asp-for="Descripcion" class="block text-md font-medium text-gray-700 mb-2">
                        <span class="flex items-center justify-between">
                            <span class="flex items-center">
                                <svg class="w-5 h-5 mr-2 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                                </svg>
                                Descripción <span class="text-red-500">*</span>
                            </span>
                            <span id="charCount" class="text-sm text-gray-500">0/125</span>
                        </span>
                    </label>
                    <textarea asp-for="Descripcion" rows="5" id="descripcionTextarea" maxlength="125"
                              class="w-full px-4 py-3 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-green-500 focus:border-green-500 transition-all duration-200"
                              placeholder="Describe el contenido, objetivos y alcance de esta asignatura..."></textarea>
                    <span asp-validation-for="Descripcion" class="text-sm text-red-500 mt-1"></span>
                    <p class="mt-2 text-sm text-gray-500">
                        <svg class="w-4 h-4 inline mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                        </svg>
                        Máximo 125 caracteres
                    </p>
                </div>

                <!-- Botones -->
                <div class="flex justify-end gap-4 pt-6 border-t border-gray-200">
                    <a asp-action="Index"
                       class="px-6 py-3 bg-gray-100 hover:bg-gray-200 text-gray-700 font-semibold rounded-lg shadow-md transition-all duration-200">
                        Cancelar
                    </a>
                    <button type="submit"
                            class="px-6 py-3 bg-gradient-to-r from-green-500 to-green-600 hover:from-green-600 hover:to-green-700 text-white font-semibold rounded-lg shadow-lg hover:shadow-xl transform hover:scale-105 transition-all duration-200">
                        <span class="flex items-center">
                            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                            </svg>
                            Crear Asignatura
                        </span>
                    </button>
                </div>
            </form>
        </div>

    </div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const textarea = document.getElementById('descripcionTextarea');
            const charCount = document.getElementById('charCount');

            function updateCharCount() {
                const length = textarea.value.length;
                charCount.textContent = `${length}/125`;

                charCount.classList.remove('text-gray-500', 'text-orange-600', 'text-red-600', 'font-semibold', 'font-bold');
                
                if (length >= 125) {
                    charCount.classList.add('text-red-600', 'font-bold');
                } else if (length > 100) {
                    charCount.classList.add('text-orange-600', 'font-semibold');
                } else {
                    charCount.classList.add('text-gray-500');
                }
            }

            textarea.addEventListener('input', updateCharCount);
            updateCharCount();
        });
    </script>
}