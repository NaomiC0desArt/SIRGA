@model SIRGA.Web.Models.Profesor.CompleteTeacherProfileDto

@{
    ViewData["Title"] = "Completar Perfil - Profesor";
    Layout = "_Layout";
}

<!-- Modal de Bienvenida (aparece automáticamente) -->
<div id="welcomeModal" class="fixed inset-0 z-50 overflow-y-auto flex items-center justify-center">
    <div class="flex items-center justify-center min-h-screen px-4 pt-4 pb-20 text-center sm:p-0">
        <!-- Fondo oscuro -->
        <div class="fixed inset-0 transition-opacity bg-gray-900 bg-opacity-75" aria-hidden="true"></div>

        <!-- Modal centrado -->
        <div class="inline-block overflow-hidden text-left align-bottom transition-all transform bg-white rounded-2xl shadow-2xl sm:my-8 sm:align-middle sm:max-w-lg sm:w-full">
            <!-- Encabezado -->
            <div class="px-8 pt-8 pb-4">
                <div class="flex items-center justify-center w-16 h-16 mx-auto mb-4 bg-gradient-to-r from-purple-500 to-purple-600 rounded-full shadow-lg">
                    <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"></path>
                    </svg>
                </div>
                <h3 class="text-2xl font-bold text-center text-gray-900 mb-2">
                    ¡Bienvenido Profesor!
                </h3>
                <p class="text-center text-gray-600 mb-4">
                    Para comenzar a usar el sistema, necesitamos que completes tu perfil con algunos datos adicionales.
                </p>
            </div>

            <!-- Contenido -->
            <div class="px-8 pb-4">
                <div class="bg-purple-50 border border-purple-200 rounded-lg p-4">
                    <div class="flex items-start">
                        <svg class="w-5 h-5 text-purple-500 mt-0.5 mr-3 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                        </svg>
                        <div class="text-sm text-purple-700">
                            <p class="font-semibold mb-2">Información que necesitamos:</p>
                            <ul class="list-disc list-inside space-y-1">
                                <li>Datos personales básicos</li>
                                <li>Información de contacto</li>
                                <li>Especialidad académica</li>
                                <li>Nueva contraseña segura</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Botón -->
            <div class="px-8 py-6 bg-gray-50 rounded-b-2xl">
                <button onclick="closeWelcomeModal()"
                        class="w-full px-6 py-3 text-lg font-semibold text-white bg-gradient-to-r from-purple-500 to-purple-600 hover:from-purple-600 hover:to-purple-700 rounded-lg shadow-lg hover:shadow-xl transform hover:scale-105 transition-all duration-200">
                    <span class="flex items-center justify-center">
                        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
                        </svg>
                        Continuar
                    </span>
                </button>
            </div>
        </div>
    </div>
</div>

<!-- Formulario de Completar Perfil (inicialmente oculto) -->
<div id="profileForm" class="min-h-screen bg-gray-50 px-3 sm:px-4 lg:px-8 pt-8 pb-12" style="display: none;">
    <div class="max-w-4xl mx-auto">

        <!-- Header -->
        <div class="bg-white rounded-2xl shadow-xl p-8 border border-gray-100 mb-8">
            <div class="flex items-center">
                <div class="h-12 w-12 bg-gradient-to-r from-purple-500 to-purple-600 rounded-full flex items-center justify-center mr-4 shadow-lg">
                    <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                    </svg>
                </div>
                <div>
                    <h1 class="text-3xl font-bold text-gray-900">Completa tu Perfil</h1>
                    <p class="text-gray-600 mt-1">Paso 1 de 1 - Información del Profesor</p>
                </div>
            </div>
        </div>

        <!-- Alertas -->
        <partial name="_Alerts" />

        <!-- Formulario -->
        <form asp-action="CompleteProfile" method="post" class="space-y-6">
            <div asp-validation-summary="ModelOnly" class="text-sm text-red-500 bg-red-50 border border-red-200 rounded-lg p-4"></div>

            <!-- Sección: Información Personal -->
            <div class="bg-white rounded-2xl shadow-xl p-8 border border-gray-100">
                <h2 class="text-xl font-bold text-gray-900 mb-6 flex items-center border-b pb-4">
                    <svg class="w-6 h-6 mr-2 text-purple-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                    </svg>
                    Información Personal
                </h2>

                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <!-- Género -->
                    <div>
                        <label asp-for="Gender" class="block text-sm font-medium text-gray-700 mb-2">Género <span class="text-red-500">*</span></label>
                        <select asp-for="Gender" class="w-full px-4 py-3 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-purple-500 focus:border-purple-500">
                            <option value="">Seleccione...</option>
                            <option value="M">Masculino</option>
                            <option value="F">Femenino</option>
                        </select>
                        <span asp-validation-for="Gender" class="text-sm text-red-500"></span>
                    </div>

                    <!-- Fecha de Nacimiento -->
                    <div>
                        <label asp-for="DateOfBirth" class="block text-sm font-medium text-gray-700 mb-2">Fecha de Nacimiento <span class="text-red-500">*</span></label>
                        <input asp-for="DateOfBirth" type="date" class="w-full px-4 py-3 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-purple-500 focus:border-purple-500" />
                        <span asp-validation-for="DateOfBirth" class="text-sm text-red-500"></span>
                    </div>
                </div>
            </div>

            <!-- Sección: Ubicación -->
            <div class="bg-white rounded-2xl shadow-xl p-8 border border-gray-100">
                <h2 class="text-xl font-bold text-gray-900 mb-6 flex items-center border-b pb-4">
                    <svg class="w-6 h-6 mr-2 text-purple-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                    </svg>
                    Ubicación
                </h2>

                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <!-- Provincia -->
                    <div>
                        <label asp-for="Province" class="block text-sm font-medium text-gray-700 mb-2">Provincia <span class="text-red-500">*</span></label>
                        <input asp-for="Province" class="w-full px-4 py-3 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-purple-500 focus:border-purple-500" placeholder="Ej: Santo Domingo" />
                        <span asp-validation-for="Province" class="text-sm text-red-500"></span>
                    </div>

                    <!-- Sector -->
                    <div>
                        <label asp-for="Sector" class="block text-sm font-medium text-gray-700 mb-2">Sector <span class="text-red-500">*</span></label>
                        <input asp-for="Sector" class="w-full px-4 py-3 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-purple-500 focus:border-purple-500" placeholder="Ej: Los Mina" />
                        <span asp-validation-for="Sector" class="text-sm text-red-500"></span>
                    </div>

                    <!-- Dirección -->
                    <div class="md:col-span-2">
                        <label asp-for="Address" class="block text-sm font-medium text-gray-700 mb-2">Dirección <span class="text-red-500">*</span></label>
                        <textarea asp-for="Address" rows="3" class="w-full px-4 py-3 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-purple-500 focus:border-purple-500" placeholder="Calle, número, edificio, etc."></textarea>
                        <span asp-validation-for="Address" class="text-sm text-red-500"></span>
                    </div>

                    <!-- Teléfono -->
                    <div>
                        <label asp-for="PhoneNumber" class="block text-sm font-medium text-gray-700 mb-2">Teléfono</label>
                        <input asp-for="PhoneNumber" type="tel" class="w-full px-4 py-3 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-purple-500 focus:border-purple-500" placeholder="(809) 000-0000" />
                        <span asp-validation-for="PhoneNumber" class="text-sm text-red-500"></span>
                    </div>
                </div>
            </div>

            <!-- Sección: Información Académica -->
            <div class="bg-white rounded-2xl shadow-xl p-8 border border-gray-100">
                <h2 class="text-xl font-bold text-gray-900 mb-6 flex items-center border-b pb-4">
                    <svg class="w-6 h-6 mr-2 text-purple-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"></path>
                    </svg>
                    Información Académica
                </h2>

                <div class="grid grid-cols-1 gap-6">
                    <!-- Especialidad -->
                    <div>
                        <label asp-for="Specialty" class="block text-sm font-medium text-gray-700 mb-2">Especialidad</label>
                        <input asp-for="Specialty" class="w-full px-4 py-3 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-purple-500 focus:border-purple-500" placeholder="Ej: Matemáticas, Ciencias, Historia..." />
                        <span asp-validation-for="Specialty" class="text-sm text-red-500"></span>
                        <p class="text-xs text-gray-500 mt-1">Ingrese su área de especialización o materia principal</p>
                    </div>
                </div>
            </div>

            <!-- Sección: Nueva Contraseña -->
            <div class="bg-white rounded-2xl shadow-xl p-8 border border-gray-100">
                <h2 class="text-xl font-bold text-gray-900 mb-6 flex items-center border-b pb-4">
                    <svg class="w-6 h-6 mr-2 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"></path>
                    </svg>
                    Nueva Contraseña
                </h2>

                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <!-- Nueva Contraseña -->
                    <div>
                        <label asp-for="NewPassword" class="block text-sm font-medium text-gray-700 mb-2">Nueva Contraseña <span class="text-red-500">*</span></label>
                        <input asp-for="NewPassword" type="password" class="w-full px-4 py-3 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-purple-500 focus:border-purple-500" placeholder="Mínimo 8 caracteres" />
                        <span asp-validation-for="NewPassword" class="text-sm text-red-500"></span>
                    </div>

                    <!-- Confirmar Contraseña -->
                    <div>
                        <label asp-for="ConfirmPassword" class="block text-sm font-medium text-gray-700 mb-2">Confirmar Contraseña <span class="text-red-500">*</span></label>
                        <input asp-for="ConfirmPassword" type="password" class="w-full px-4 py-3 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-purple-500 focus:border-purple-500" placeholder="Repite la contraseña" />
                        <span asp-validation-for="ConfirmPassword" class="text-sm text-red-500"></span>
                    </div>
                </div>

                <!-- Requisitos -->
                <div class="mt-4 bg-purple-50 rounded-lg p-4">
                    <p class="text-sm font-medium text-purple-900 mb-2">La contraseña debe cumplir:</p>
                    <ul class="text-xs text-purple-700 space-y-1">
                        <li class="flex items-center">
                            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                            </svg>
                            Mínimo 8 caracteres
                        </li>
                        <li class="flex items-center">
                            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                            </svg>
                            Al menos una letra mayúscula y una minúscula
                        </li>
                        <li class="flex items-center">
                            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                            </svg>
                            Al menos un número
                        </li>
                    </ul>
                </div>
            </div>

            <!-- Botón de Enviar -->
            <div class="flex justify-end gap-4">
                <button type="submit"
                        class="px-8 py-4 bg-gradient-to-r from-purple-500 to-purple-600 hover:from-purple-600 hover:to-purple-700 text-white text-lg font-semibold rounded-lg shadow-lg hover:shadow-xl transform hover:scale-105 transition-all duration-200">
                    <span class="flex items-center">
                        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                        </svg>
                        Completar Perfil
                    </span>
                </button>
            </div>
        </form>

    </div>
</div>

<script>
    function closeWelcomeModal() {
        const modal = document.getElementById('welcomeModal');
        const form = document.getElementById('profileForm');

        // Animar salida del modal
        modal.style.opacity = '0';
        modal.style.transform = 'scale(0.95)';

        setTimeout(() => {
            modal.style.display = 'none';
            form.style.display = 'block';

            // Animar entrada del formulario
            form.style.opacity = '0';
            setTimeout(() => {
                form.style.opacity = '1';
                form.style.transition = 'opacity 0.5s ease-in-out';
            }, 50);
        }, 300);
    }

    // Evitar que el usuario cierre el modal con ESC o haciendo clic fuera
    document.addEventListener('keydown', function(e) {
        if (e.key === 'Escape') {
            e.preventDefault();
        }
    });
</script>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}