@model SIRGA.Web.Models.Calificacion.CapturaMasivaDto

@{
    ViewData["Title"] = "Calificar Estudiantes";
    Layout = "~/Views/Shared/_LayoutWithSidebar.cshtml";
    ViewBag.UserName = User.Identity.Name;
    ViewBag.UserRole = "Profesor";
    var modoSoloLectura = Model.TodasPublicadas;
    
    string ObtenerIniciales(string nombreCompleto)
    {
        if (string.IsNullOrEmpty(nombreCompleto)) return "NA";
        var partes = nombreCompleto.Split(' ', StringSplitOptions.RemoveEmptyEntries);
        if (partes.Length == 1) return partes[0].Substring(0, Math.Min(2, partes[0].Length)).ToUpper();
        return $"{partes[0][0]}{partes[partes.Length - 1][0]}".ToUpper();
    }

    // Calcular estadísticas
    decimal totalCalificaciones = 0;
    int estudiantesConNota = 0;
    int estudiantesAprobados = 0;

    foreach (var estudiante in Model.Calificaciones)
    {
        decimal total = 0;
        foreach (var comp in estudiante.Componentes.Values)
        {
            if (comp.HasValue) total += comp.Value;
        }
        
        if (total > 0)
        {
            estudiantesConNota++;
            totalCalificaciones += total;
            if (total >= 70) estudiantesAprobados++;
        }
    }

    var promedioGeneral = estudiantesConNota > 0 ? totalCalificaciones / estudiantesConNota : 0;
    var porcentajeAprobados = estudiantesConNota > 0 ? (estudiantesAprobados * 100.0m) / estudiantesConNota : 0;
}

@section SidebarMenu {
    <partial name="_ProfesorSidebarMenu" />
}

<div class="min-h-screen bg-gray-50 px-3 sm:px-4 lg:px-8 pt-8 pb-12">
    <div class="max-w-7xl mx-auto">

        <!-- Encabezado -->
        <div class="bg-white rounded-2xl shadow-xl p-8 border border-gray-100 mb-8">
            <div class="flex items-center justify-between flex-wrap gap-4">
                <div class="flex items-center">
                    <div class="h-16 w-16 bg-gradient-to-r from-purple-500 to-purple-600 rounded-full flex items-center justify-center mr-4 shadow-lg">
                        <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
                        </svg>
                    </div>
                    <div>
                        <h1 class="text-3xl font-bold text-gray-900">@ViewBag.AsignaturaNombre</h1>
                        <p class="text-gray-600 mt-1">
                            @ViewBag.CursoNombre <span class="mx-2">•</span> Período @ViewBag.NumeroPeriodo
                        </p>
                    </div>
                </div>
                <a asp-action="MisAsignaturas" class="px-4 py-2 bg-gray-100 hover:bg-gray-200 text-gray-700 rounded-lg transition-colors">
                    <svg class="w-5 h-5 inline-block mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
                    </svg>
                    Volver
                </a>
            </div>
        </div>

        @if (modoSoloLectura)
        {
            <div class="bg-yellow-50 border-l-4 border-yellow-400 p-6 mb-6 rounded-r-lg shadow-md">
                <div class="flex items-center">
                    <svg class="w-8 h-8 text-yellow-600 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"></path>
                    </svg>
                    <div>
                        <h3 class="text-lg font-bold text-yellow-900 mb-1">Calificaciones Publicadas - Modo Solo Lectura</h3>
                        <p class="text-yellow-700">
                            Estas calificaciones ya han sido publicadas y no pueden ser modificadas.
                        </p>
                    </div>
                </div>
            </div>
        }

        <!-- Estadísticas del Curso -->
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
            <!-- Estudiantes con Calificación -->
            <div class="bg-white rounded-xl shadow-lg p-6 border-l-4 border-purple-500">
                <div class="flex items-center justify-between">
                    <div>
                        <p class="text-sm font-medium text-gray-600">Estudiantes Calificados</p>
                        <p class="text-3xl font-bold text-purple-600 mt-2">@estudiantesConNota</p>
                        <p class="text-xs text-gray-500 mt-1">de @Model.Calificaciones.Count</p>
                    </div>
                    <div class="h-12 w-12 bg-purple-100 rounded-full flex items-center justify-center">
                        <svg class="w-6 h-6 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z"></path>
                        </svg>
                    </div>
                </div>
            </div>

            <!-- Promedio General -->
            <div class="bg-white rounded-xl shadow-lg p-6 border-l-4 border-blue-500">
                <div class="flex items-center justify-between">
                    <div>
                        <p class="text-sm font-medium text-gray-600">Promedio del Curso</p>
                        <p class="text-3xl font-bold text-blue-600 mt-2">@promedioGeneral.ToString("F0")</p>
                        <p class="text-xs text-gray-500 mt-1">puntos</p>
                    </div>
                    <div class="h-12 w-12 bg-blue-100 rounded-full flex items-center justify-center">
                        <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
                        </svg>
                    </div>
                </div>
            </div>

            <!-- Porcentaje de Aprobados -->
            <div class="bg-white rounded-xl shadow-lg p-6 border-l-4 border-green-500">
                <div class="flex items-center justify-between">
                    <div>
                        <p class="text-sm font-medium text-gray-600">Estudiantes Aprobados</p>
                        <p class="text-3xl font-bold text-green-600 mt-2">@porcentajeAprobados.ToString("F0")%</p>
                        <p class="text-xs text-gray-500 mt-1">@estudiantesAprobados de @estudiantesConNota</p>
                    </div>
                    <div class="h-12 w-12 bg-green-100 rounded-full flex items-center justify-center">
                        <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                        </svg>
                    </div>
                </div>
            </div>
        </div>

        <!-- Estructura de Calificación -->
        <div class="bg-white rounded-xl shadow-lg border border-gray-100 overflow-hidden mb-8">
            <div class="bg-gradient-to-r from-purple-500 to-purple-600 px-6 py-4">
                <div class="flex items-center text-white">
                    <svg class="w-6 h-6 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"></path>
                    </svg>
                    <h3 class="text-lg font-semibold">Componentes de Evaluación</h3>
                </div>
            </div>
            <div class="p-6">
                <div class="flex flex-wrap gap-4">
                    @foreach (var componente in Model.Componentes.OrderBy(c => c.Orden))
                    {
                        <div class="flex-1 min-w-[200px] bg-purple-50 rounded-lg p-4 border-2 border-purple-200">
                            <div class="flex items-center justify-between mb-2">
                                <span class="text-xs font-semibold text-purple-600 uppercase">@componente.Nombre</span>
                                <span class="inline-flex items-center justify-center px-3 py-1 rounded-full bg-purple-600 text-white text-sm font-bold">
                                    @componente.ValorMaximo pts
                                </span>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- Formulario de Calificaciones -->
        <form id="formCalificaciones" class="bg-white rounded-2xl shadow-xl border border-gray-100 overflow-hidden">
            @Html.AntiForgeryToken()

            <div class="overflow-x-auto">
                <table class="min-w-full divide-y divide-gray-200">
                    <thead class="bg-gray-50">
                        <tr>
                            <th class="px-6 py-4 text-left text-xs font-medium text-gray-500 uppercase sticky left-0 bg-gray-50 z-10">
                                Estudiante
                            </th>
                            @foreach (var componente in Model.Componentes.OrderBy(c => c.Orden))
                            {
                                <th class="px-6 py-4 text-center text-xs font-medium text-gray-500 uppercase">
                                    @componente.Nombre<br>
                                    <span class="text-purple-600">(@componente.ValorMaximo pts)</span>
                                </th>
                            }
                            <th class="px-6 py-4 text-center text-xs font-medium text-gray-500 uppercase bg-green-50">
                                Total
                            </th>
                            <th class="px-6 py-4 text-center text-xs font-medium text-gray-500 uppercase">
                                Observaciones
                            </th>
                        </tr>
                    </thead>
                    <tbody class="bg-white divide-y divide-gray-200">
                        @foreach (var estudiante in Model.Calificaciones)
                        {
                            var iniciales = ObtenerIniciales(estudiante.NombreCompleto);
                            
                            <tr class="hover:bg-gray-50" data-estudiante-id="@estudiante.IdEstudiante">
                                <td class="px-6 py-4 whitespace-nowrap sticky left-0 bg-white">
                                    <div class="flex items-center">
                                        <div class="flex-shrink-0 h-10 w-10 bg-purple-100 rounded-full flex items-center justify-center">
                                            <span class="text-purple-600 font-semibold text-sm">@iniciales</span>
                                        </div>
                                        <div class="ml-3">
                                            <p class="text-sm font-medium text-gray-900">@estudiante.NombreCompleto</p>
                                            <p class="text-xs text-gray-500">@estudiante.Matricula</p>
                                        </div>
                                    </div>
                                </td>

                                @foreach (var componente in Model.Componentes.OrderBy(c => c.Orden))
                                {
                                    var valor = estudiante.Componentes.ContainsKey(componente.Id)
                                        ? estudiante.Componentes[componente.Id]
                                        : null;

                                    <td class="px-6 py-4 text-center">
                                        <input type="number"
                                               class="componente-input w-20 px-2 py-2 border border-gray-300 rounded-lg text-center focus:ring-2 focus:ring-purple-500 @(modoSoloLectura ? "bg-gray-100 cursor-not-allowed" : "")"
                                               data-componente-id="@componente.Id"
                                               data-max="@componente.ValorMaximo"
                                               min="0"
                                               max="@componente.ValorMaximo"
                                               step="1"
                                               value="@(valor?.ToString("F0") ?? "")"
                                               placeholder="0"
                                               @(modoSoloLectura ? "readonly disabled" : "") />
                                    </td>
                                }

                                <td class="px-6 py-4 text-center bg-green-50">
                                    <input type="number" readonly
                                           class="total-input w-20 px-2 py-1 text-center font-bold text-green-700 bg-green-100 border-2 border-green-300 rounded"
                                           value="0" step="1" />
                                </td>

                                <td class="px-6 py-4">
                                    <input type="text"
                                           class="observaciones-input w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-purple-500 @(modoSoloLectura ? "bg-gray-100 cursor-not-allowed" : "")"
                                           placeholder="Opcional"
                                           value="@estudiante.Observaciones"
                                           maxlength="500"
                                           @(modoSoloLectura ? "readonly disabled" : "") />
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <!-- Acciones -->
            <div class="bg-gray-50 px-8 py-6 flex justify-between items-center border-t border-gray-200">
                <div class="text-sm text-gray-600">
                    <span class="font-semibold">@Model.Calificaciones.Count</span> estudiantes
                    @if (modoSoloLectura)
                    {
                        <span class="ml-4 text-green-600 font-semibold">✓ Publicadas</span>
                    }
                </div>
                @if (!modoSoloLectura)
                {
                    <div class="flex gap-3">
                        <button type="button" onclick="guardarCalificaciones()"
                                class="px-6 py-3 bg-blue-500 hover:bg-blue-600 text-white font-semibold rounded-lg shadow-lg transition-all">
                            <svg class="w-5 h-5 inline-block mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7H5a2 2 0 00-2 2v9a2 2 0 002 2h14a2 2 0 002-2V9a2 2 0 00-2-2h-3m-1 4l-3 3m0 0l-3-3m3 3V4"></path>
                            </svg>
                            Guardar Borrador
                        </button>
                        <button type="button" onclick="publicarCalificaciones()"
                                class="px-6 py-3 bg-gradient-to-r from-purple-500 to-purple-600 hover:from-purple-600 hover:to-purple-700 text-white font-semibold rounded-lg shadow-lg transition-all">
                            <svg class="w-5 h-5 inline-block mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                            </svg>
                            Publicar
                        </button>
                    </div>
                }
            </div>
        </form>

    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        const modoSoloLectura = @(modoSoloLectura ? "true" : "false");

        function calcularTotal(row) {
            const inputs = row.querySelectorAll('.componente-input');
            let total = 0;

            inputs.forEach(input => {
                const valor = parseInt(input.value) || 0;
                total += valor;
            });

            const totalInput = row.querySelector('.total-input');
            totalInput.value = total;

            if (total > 100) {
                totalInput.className = 'total-input w-20 px-2 py-1 text-center font-bold bg-red-100 border-2 border-red-500 text-red-700 rounded';
            } else if (total >= 70) {
                totalInput.className = 'total-input w-20 px-2 py-1 text-center font-bold bg-green-100 border-2 border-green-300 text-green-700 rounded';
            } else if (total >= 50) {
                totalInput.className = 'total-input w-20 px-2 py-1 text-center font-bold bg-yellow-100 border-2 border-yellow-300 text-yellow-700 rounded';
            } else {
                totalInput.className = 'total-input w-20 px-2 py-1 text-center font-bold bg-red-100 border-2 border-red-300 text-red-700 rounded';
            }

            // Actualizar estadísticas
            actualizarEstadisticas();
        }

        function actualizarEstadisticas() {
            const rows = document.querySelectorAll('tbody tr');
            let totalCalificaciones = 0;
            let estudiantesConNota = 0;
            let estudiantesAprobados = 0;

            rows.forEach(row => {
                const total = parseInt(row.querySelector('.total-input').value) || 0;
                if (total > 0) {
                    estudiantesConNota++;
                    totalCalificaciones += total;
                    if (total >= 70) estudiantesAprobados++;
                }
            });

            const promedio = estudiantesConNota > 0 ? Math.round(totalCalificaciones / estudiantesConNota) : 0;
            const porcentaje = estudiantesConNota > 0 ? Math.round((estudiantesAprobados * 100) / estudiantesConNota) : 0;

            // Actualizar las tarjetas de estadísticas (si quieres hacerlo dinámicamente)
        }

        if (!modoSoloLectura) {
            document.querySelectorAll('.componente-input').forEach(input => {
                input.addEventListener('input', function() {
                    const max = parseInt(this.dataset.max);
                    if (parseInt(this.value) > max) {
                        this.value = max;
                        Swal.fire({
                            icon: 'warning',
                            title: 'Valor excedido',
                            text: `El valor máximo es ${max} puntos`,
                            toast: true,
                            position: 'top-end',
                            showConfirmButton: false,
                            timer: 3000
                        });
                    }
                    calcularTotal(this.closest('tr'));
                });
            });
        }

        document.addEventListener('DOMContentLoaded', function() {
            document.querySelectorAll('tbody tr').forEach(row => calcularTotal(row));
        });

        function recopilarDatos() {
            const calificaciones = [];

            document.querySelectorAll('tbody tr').forEach(row => {
                const idEstudiante = parseInt(row.dataset.estudianteId);
                const inputs = row.querySelectorAll('.componente-input');
                const observaciones = row.querySelector('.observaciones-input').value;

                const componentes = {};
                inputs.forEach(input => {
                    const idComponente = parseInt(input.dataset.componenteId);
                    const valor = input.value ? parseInt(input.value) : null;
                    componentes[idComponente] = valor;
                });

                calificaciones.push({
                    idEstudiante: idEstudiante,
                    componentes: componentes,
                    observaciones: observaciones
                });
            });

            return {
                idAsignatura: @Model.IdAsignatura,
                idCursoAcademico: @Model.IdCursoAcademico,
                idPeriodo: @Model.IdPeriodo,
                idProfesor: @Model.IdProfesor,
                tipoAsignatura: '@Model.TipoAsignatura',
                componentes: @Html.Raw(Json.Serialize(Model.Componentes)),
                calificaciones: calificaciones
            };
        }

        async function guardarCalificaciones() {
            if (modoSoloLectura) {
                Swal.fire({
                    icon: 'error',
                    title: 'Acción no permitida',
                    text: 'Las calificaciones ya están publicadas.'
                });
                return;
            }

            const datos = recopilarDatos();
            const token = document.querySelector('input[name="__RequestVerificationToken"]').value;

            try {
                const response = await fetch('/Profesor/GuardarCalificaciones', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'RequestVerificationToken': token
                    },
                    body: JSON.stringify(datos)
                });

                const result = await response.json();

                if (result.success) {
                    Swal.fire({
                        icon: 'success',
                        title: '¡Guardado!',
                        text: 'Calificaciones guardadas',
                        confirmButtonColor: '#8b5cf6'
                    });
                } else {
                    Swal.fire({
                        icon: 'error',
                        title: 'Error',
                        text: result.message
                    });
                }
            } catch (error) {
                Swal.fire({
                    icon: 'error',
                    title: 'Error',
                    text: 'Error al procesar'
                });
            }
        }

        async function publicarCalificaciones() {
            if (modoSoloLectura) {
                Swal.fire({
                    icon: 'error',
                    title: 'Acción no permitida',
                    text: 'Las calificaciones ya están publicadas.'
                });
                return;
            }

            let hayErrores = false;
            document.querySelectorAll('.total-input').forEach(input => {
                if (parseInt(input.value) > 100) hayErrores = true;
            });

            if (hayErrores) {
                Swal.fire({
                    icon: 'error',
                    title: 'Error',
                    text: 'Hay totales que exceden 100 puntos.'
                });
                return;
            }

            const result = await Swal.fire({
                title: '¿Publicar calificaciones?',
                html: '<p class="text-gray-700 mb-4">Serán visibles para los estudiantes.</p>',
                icon: 'warning',
                showCancelButton: true,
                confirmButtonText: 'Sí, publicar',
                cancelButtonText: 'Cancelar',
                confirmButtonColor: '#8b5cf6'
            });

            if (result.isConfirmed) {
                const token = document.querySelector('input[name="__RequestVerificationToken"]').value;

                try {
                    const response = await fetch('/Profesor/PublicarCalificaciones', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json',
                            'RequestVerificationToken': token
                        },
                        body: JSON.stringify({
                            idAsignatura: @Model.IdAsignatura,
                            idCursoAcademico: @Model.IdCursoAcademico,
                            idPeriodo: @Model.IdPeriodo
                        })
                    });

                    const result = await response.json();

                    if (result.success) {
                        Swal.fire({
                            icon: 'success',
                            title: '¡Publicado!',
                            text: result.message,
                            confirmButtonColor: '#8b5cf6'
                        }).then(() => window.location.href = '/Profesor/MisAsignaturas');
                    } else {
                        Swal.fire({
                            icon: 'error',
                            title: 'Error',
                            text: result.message
                        });
                    }
                } catch (error) {
                    Swal.fire({
                        icon: 'error',
                        title: 'Error',
                        text: 'Error al procesar'
                    });
                }
            }
        }
    </script>
}