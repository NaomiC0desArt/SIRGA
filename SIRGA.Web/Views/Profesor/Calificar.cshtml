@model SIRGA.Web.Models.Calificacion.CapturaMasivaDto

@{
    ViewData["Title"] = "Calificar Estudiantes";
    Layout = "~/Views/Shared/_LayoutWithSidebar.cshtml";
}

<div class="min-h-screen bg-gray-50 px-3 sm:px-4 lg:px-8 pt-8 pb-12">
    <div class="max-w-7xl mx-auto">

        <!-- Encabezado -->
        <div class="bg-white rounded-2xl shadow-xl p-8 border border-gray-100 mb-8">
            <div class="flex items-center justify-between flex-wrap gap-4">
                <div class="flex items-center">
                    <div class="h-16 w-16 bg-gradient-to-r from-purple-500 to-purple-600 rounded-full flex items-center justify-center mr-4 shadow-lg">
                        <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
                        </svg>
                    </div>
                    <div>
                        <h1 class="text-3xl font-bold text-gray-900">@ViewBag.AsignaturaNombre</h1>
                        <p class="text-gray-600 mt-1">
                            @ViewBag.CursoNombre - Período @ViewBag.NumeroPeriodo
                        </p>
                    </div>
                </div>
                <a asp-action="MisAsignaturas" asp-controller="Profesor" class="px-4 py-2 bg-gray-100 hover:bg-gray-200 text-gray-700 rounded-lg transition-colors">
                    <svg class="w-5 h-5 inline-block mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
                    </svg>
                    Volver
                </a>
            </div>
        </div>

        <!-- Información del Tipo -->
        <div class="bg-gradient-to-r from-blue-50 to-indigo-50 border border-blue-200 rounded-xl p-6 mb-8">
            <div class="flex items-start">
                <svg class="w-6 h-6 text-blue-600 mr-3 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
                <div>
                    <p class="font-semibold text-blue-900 mb-2">Tipo: @ViewBag.TipoAsignatura</p>
                    <div class="text-sm text-blue-700">
                        @foreach (var componente in Model.Componentes.OrderBy(c => c.Orden))
                        {
                            <span class="inline-block mr-4">@componente.Nombre: @componente.ValorMaximo pts</span>
                        }
                    </div>
                </div>
            </div>
        </div>

        <!-- Formulario -->
        <form id="formCalificaciones" class="bg-white rounded-2xl shadow-xl border border-gray-100 overflow-hidden">
            @Html.AntiForgeryToken()

            <div class="overflow-x-auto">
                <table class="min-w-full divide-y divide-gray-200">
                    <thead class="bg-gray-50">
                        <tr>
                            <th class="px-6 py-4 text-left text-xs font-medium text-gray-500 uppercase sticky left-0 bg-gray-50 z-10">
                                Estudiante
                            </th>
                            @foreach (var componente in Model.Componentes.OrderBy(c => c.Orden))
                            {
                                <th class="px-6 py-4 text-center text-xs font-medium text-gray-500 uppercase">
                                    @componente.Nombre<br>
                                    <span class="text-blue-600">(@componente.ValorMaximo pts)</span>
                                </th>
                            }
                            <th class="px-6 py-4 text-center text-xs font-medium text-gray-500 uppercase bg-green-50">
                                Total
                            </th>
                            <th class="px-6 py-4 text-center text-xs font-medium text-gray-500 uppercase">
                                Observaciones
                            </th>
                        </tr>
                    </thead>
                    <tbody class="bg-white divide-y divide-gray-200">
                        @foreach (var estudiante in Model.Calificaciones)
                        {
                            <tr class="hover:bg-gray-50" data-estudiante-id="@estudiante.IdEstudiante">
                                <td class="px-6 py-4 whitespace-nowrap sticky left-0 bg-white">
                                    <div class="flex items-center">
                                        <div class="flex-shrink-0 h-10 w-10 bg-purple-100 rounded-full flex items-center justify-center">
                                            <span class="text-purple-600 font-semibold text-sm">
                                                @estudiante.Matricula.Substring(0, 2)
                                            </span>
                                        </div>
                                        <div class="ml-3">
                                            <p class="text-sm font-medium text-gray-900">@estudiante.NombreCompleto</p>
                                            <p class="text-xs text-gray-500">@estudiante.Matricula</p>
                                        </div>
                                    </div>
                                </td>

                                @foreach (var componente in Model.Componentes.OrderBy(c => c.Orden))
                                {
                                    var valor = estudiante.Componentes.ContainsKey(componente.Id)
                                    ? estudiante.Componentes[componente.Id]
                                    : null;

                                    <td class="px-6 py-4 text-center">
                                        <input type="number"
                                               class="componente-input w-20 px-2 py-2 border border-gray-300 rounded-lg text-center focus:ring-2 focus:ring-purple-500"
                                               data-componente-id="@componente.Id"
                                               data-max="@componente.ValorMaximo"
                                               min="0"
                                               max="@componente.ValorMaximo"
                                               step="0.01"
                                               value="@(valor?.ToString() ?? "")"
                                               placeholder="0" />
                                    </td>
                                }

                                <td class="px-6 py-4 text-center bg-green-50">
                                    <input type="number" readonly
                                           class="total-input w-20 px-2 py-1 text-center font-bold text-green-700 bg-green-100 border-2 border-green-300 rounded"
                                           value="0" step="0.01" />
                                </td>

                                <td class="px-6 py-4">
                                    <input type="text"
                                           class="observaciones-input w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-purple-500"
                                           placeholder="Opcional"
                                           value="@estudiante.Observaciones"
                                           maxlength="500" />
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <!-- Acciones -->
            <div class="bg-gray-50 px-8 py-6 flex justify-between items-center border-t border-gray-200">
                <div class="text-sm text-gray-600">
                    <span class="font-semibold">@Model.Calificaciones.Count</span> estudiantes
                </div>
                <div class="flex gap-3">
                    <button type="button" onclick="guardarCalificaciones()"
                            class="px-6 py-3 bg-blue-500 hover:bg-blue-600 text-white font-semibold rounded-lg shadow-lg transition-all">
                        <svg class="w-5 h-5 inline-block mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7H5a2 2 0 00-2 2v9a2 2 0 002 2h14a2 2 0 002-2V9a2 2 0 00-2-2h-3m-1 4l-3 3m0 0l-3-3m3 3V4"></path>
                        </svg>
                        Guardar Borrador
                    </button>
                    <button type="button" onclick="publicarCalificaciones()"
                            class="px-6 py-3 bg-gradient-to-r from-purple-500 to-purple-600 hover:from-purple-600 hover:to-purple-700 text-white font-semibold rounded-lg shadow-lg transition-all">
                        <svg class="w-5 h-5 inline-block mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                        </svg>
                        Publicar
                    </button>
                </div>
            </div>
        </form>

    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        console.log('🎯 Script de calificaciones cargado');

        // ✅ Calcular total de una fila
        function calcularTotal(row) {
            const inputs = row.querySelectorAll('.componente-input');
            let total = 0;

            inputs.forEach(input => {
                const valor = parseFloat(input.value) || 0;
                total += valor;
            });

            const totalInput = row.querySelector('.total-input');
            totalInput.value = total.toFixed(2);

            // Cambiar color según el total
            if (total > 100) {
                totalInput.className = 'total-input w-20 px-2 py-1 text-center font-bold bg-red-100 border-2 border-red-500 text-red-700 rounded';
            } else if (total >= 70) {
                totalInput.className = 'total-input w-20 px-2 py-1 text-center font-bold bg-green-100 border-2 border-green-300 text-green-700 rounded';
            } else if (total >= 50) {
                totalInput.className = 'total-input w-20 px-2 py-1 text-center font-bold bg-yellow-100 border-2 border-yellow-300 text-yellow-700 rounded';
            } else {
                totalInput.className = 'total-input w-20 px-2 py-1 text-center font-bold bg-red-100 border-2 border-red-300 text-red-700 rounded';
            }
        }

        // ✅ Configurar eventos de input
        document.querySelectorAll('.componente-input').forEach(input => {
            input.addEventListener('input', function() {
                // Validar que no exceda el máximo
                const max = parseFloat(this.dataset.max);
                if (parseFloat(this.value) > max) {
                    this.value = max;
                    Swal.fire({
                        icon: 'warning',
                        title: 'Valor excedido',
                        text: `El valor máximo para este componente es ${max} puntos`,
                        toast: true,
                        position: 'top-end',
                        showConfirmButton: false,
                        timer: 3000
                    });
                }

                const row = this.closest('tr');
                calcularTotal(row);
            });
        });

        // ✅ Calcular todos los totales al cargar la página
        document.addEventListener('DOMContentLoaded', function() {
            console.log('📊 Calculando totales iniciales...');
            document.querySelectorAll('tbody tr').forEach(row => {
                calcularTotal(row);
            });
            console.log('✅ Totales calculados');
        });

        // ✅ Recopilar datos del formulario
        function recopilarDatos() {
            const calificaciones = [];

            document.querySelectorAll('tbody tr').forEach(row => {
                const idEstudiante = parseInt(row.dataset.estudianteId);
                const inputs = row.querySelectorAll('.componente-input');
                const observaciones = row.querySelector('.observaciones-input').value;

                const componentes = {};
                inputs.forEach(input => {
                    const idComponente = parseInt(input.dataset.componenteId);
                    const valor = input.value ? parseFloat(input.value) : null;
                    componentes[idComponente] = valor;
                });

                calificaciones.push({
                    IdEstudiante: idEstudiante,
                    Componentes: componentes,
                    Observaciones: observaciones
                });
            });

            const datos = {
                IdAsignatura: @Model.IdAsignatura,
                IdCursoAcademico: @Model.IdCursoAcademico,
                IdPeriodo: @Model.IdPeriodo,
                IdProfesor: @Model.IdProfesor,
                TipoAsignatura: '@Model.TipoAsignatura',
                Componentes: @Html.Raw(Json.Serialize(Model.Componentes)),
                Calificaciones: calificaciones
            };

            console.log('📦 Datos recopilados:', datos);
            return datos;
        }

        // ✅ Guardar calificaciones
        async function guardarCalificaciones() {
            const datos = recopilarDatos();
            const token = document.querySelector('input[name="__RequestVerificationToken"]').value;

            console.log('💾 Guardando calificaciones...');

            try {
                const response = await fetch('/Calificacion/Guardar', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'RequestVerificationToken': token
                    },
                    body: JSON.stringify(datos)
                });

                const result = await response.json();
                console.log('📥 Respuesta:', result);

                if (result.success) {
                    Swal.fire({
                        icon: 'success',
                        title: '¡Guardado!',
                        text: 'Calificaciones guardadas como borrador',
                        confirmButtonColor: '#8b5cf6'
                    });
                } else {
                    Swal.fire({
                        icon: 'error',
                        title: 'Error',
                        text: result.message || 'Error al guardar calificaciones'
                    });
                }
            } catch (error) {
                console.error('❌ Error:', error);
                Swal.fire({
                    icon: 'error',
                    title: 'Error',
                    text: 'Error al procesar la solicitud'
                });
            }
        }

        // ✅ Publicar calificaciones
        async function publicarCalificaciones() {
            // Validar que ningún total exceda 100
            let hayErrores = false;
            document.querySelectorAll('.total-input').forEach(input => {
                if (parseFloat(input.value) > 100) {
                    hayErrores = true;
                }
            });

            if (hayErrores) {
                Swal.fire({
                    icon: 'error',
                    title: 'Error de validación',
                    text: 'Hay estudiantes con totales que exceden 100 puntos. Por favor corrígelos antes de publicar.'
                });
                return;
            }

            const result = await Swal.fire({
                title: '¿Publicar calificaciones?',
                html: `
                    <p class="text-gray-700 mb-4">Las calificaciones serán visibles para los estudiantes.</p>
                    <div class="bg-orange-50 border border-orange-200 rounded-lg p-4">
                        <p class="text-sm text-orange-700">
                            <strong>⚠️ Advertencia:</strong> Solo el administrador podrá editarlas después.
                        </p>
                    </div>
                `,
                icon: 'warning',
                showCancelButton: true,
                confirmButtonText: 'Sí, publicar',
                cancelButtonText: 'Cancelar',
                confirmButtonColor: '#8b5cf6'
            });

            if (result.isConfirmed) {
                const token = document.querySelector('input[name="__RequestVerificationToken"]').value;

                console.log('📤 Publicando calificaciones...');

                try {
                    const response = await fetch('/Calificacion/Publicar', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json',
                            'RequestVerificationToken': token
                        },
                        body: JSON.stringify({
                            IdAsignatura: @Model.IdAsignatura,
                            IdCursoAcademico: @Model.IdCursoAcademico,
                            IdPeriodo: @Model.IdPeriodo
                        })
                    });

                    const result = await response.json();
                    console.log('📥 Respuesta:', result);

                    if (result.success) {
                        Swal.fire({
                            icon: 'success',
                            title: '¡Publicado!',
                            text: result.message || 'Calificaciones publicadas exitosamente',
                            confirmButtonColor: '#8b5cf6'
                        }).then(() => window.location.href = '/Profesor/MisAsignaturas');
                    } else {
                        Swal.fire({
                            icon: 'error',
                            title: 'Error',
                            text: result.message || 'Error al publicar calificaciones'
                        });
                    }
                } catch (error) {
                    console.error('❌ Error:', error);
                    Swal.fire({
                        icon: 'error',
                        title: 'Error',
                        text: 'Error al procesar la solicitud'
                    });
                }
            }
        }
    </script>
}