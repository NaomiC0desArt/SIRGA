@model ProfesorDashboardViewModel
@using SIRGA.Web.ViewComponents

@{
    ViewData["Title"] = "Panel de Profesor";
    Layout = "~/Views/Shared/_LayoutWithSidebar.cshtml";
    ViewBag.UserName = Model.UserName;
    ViewBag.UserRole = "Profesor";
}

@section SidebarMenu {
    <partial name="_ProfesorSidebarMenu" />
}

        <!-- Encabezado usando View Component -->
        @await Component.InvokeAsync("DashboardHeader", new DashboardHeaderViewModel
   {
       Title = "Panel de Profesor",
       UserName = Model.UserName,
       ColorScheme = "purple",
       IconPath = "M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253",
       ShowDate = true
   })

        <!-- Alertas -->
        <partial name="_Alerts" />

        <!-- Estadísticas Rápidas -->
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
            @await Component.InvokeAsync("StatsCard", new StatsCardViewModel
       {
           Title = "Mis Estudiantes",
           Value = "20",
           ColorScheme = "blue",
           IconPath = "M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z"
       })

            @await Component.InvokeAsync("StatsCard", new StatsCardViewModel
       {
           Title = "Clases Activas",
           Value = "6",
           ColorScheme = "green",
           IconPath = "M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"
       })

            @await Component.InvokeAsync("StatsCard", new StatsCardViewModel
       {
           Title = "Calificaciones Pendientes",
           Value = "8",
           ColorScheme = "orange",
           IconPath = "M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"
       })

            @await Component.InvokeAsync("StatsCard", new StatsCardViewModel
       {
           Title = "Asistencia Registrada",
           Value = "18",
           ColorScheme = "purple",
           IconPath = "M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"
       })
        </div>

        <!-- Módulos Principales -->
        <div class="bg-white rounded-2xl shadow-xl p-8 border border-gray-100 mb-8">
            <h2 class="text-2xl font-bold text-gray-900 mb-6 flex items-center">
                <svg class="w-6 h-6 mr-3 text-purple-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2H6a2 2 0 01-2-2V6zM14 6a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2h-2a2 2 0 01-2-2V6zM4 16a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2H6a2 2 0 01-2-2v-2zM14 16a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2h-2a2 2 0 01-2-2v-2z"></path>
                </svg>
                Gestión de Clases
            </h2>

            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                @await Component.InvokeAsync("NavigationCard", new NavigationCardViewModel
           {
               Title = "Registro de Calificaciones",
               Description = "Registra y gestiona las notas de tus estudiantes",
               Controller = "Calificacion",
               Action = "",
               ColorScheme = "blue",
               IconPath = "M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-3 7h3m-3 4h3m-6-4h.01M9 16h.01"
           })

                @await Component.InvokeAsync("NavigationCard", new NavigationCardViewModel
           {
               Title = "Registro de Asistencia",
               Description = "Lleva un control detallado de asistencia",
               Controller = "AsistenciaProfesor",
               Action = "Index",
               ColorScheme = "green",
               IconPath = "M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"
           })
            </div>
        </div>

        <!-- Clases de Hoy -->
