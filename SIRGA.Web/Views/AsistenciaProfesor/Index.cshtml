@model List<SIRGA.Web.Models.Asistencia.ClaseDelDiaDto>
@{
    ViewData["Title"] = "Registro de Asistencia";
    var fechaConsulta = ViewBag.FechaConsulta as DateTime? ?? DateTime.Today;
}

<div class="min-h-screen bg-gray-50 px-3 sm:px-4 lg:px-8 pt-8 pb-12">
    <div class="max-w-7xl mx-auto">

        <div class="mb-6">
            <a asp-action="Index" asp-controller="Profesor" class="inline-flex items-center text-purple-600 hover:text-purple-700 font-medium">
                <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"></path>
                </svg>
                Volver al Panel Principal
            </a>
        </div>

        <!-- Encabezado -->
        <div class="bg-white rounded-2xl shadow-xl p-8 border border-gray-100 mb-8">
            <div class="flex items-center justify-between flex-wrap gap-4">
                <div class="flex items-center">
                    <div class="h-16 w-16 bg-gradient-to-r from-green-500 to-green-600 rounded-full flex items-center justify-center mr-4 shadow-lg">
                        <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                        </svg>
                    </div>
                    <div>
                        <h1 class="text-3xl font-bold text-gray-900">Registro de Asistencia</h1>
                        <p class="text-gray-600 mt-1">Gestiona la asistencia de tus clases</p>
                    </div>
                </div>
                <div class="bg-green-50 px-4 py-2 rounded-lg border border-green-200">
                    <p class="text-sm text-green-700 font-medium">
                        @fechaConsulta.ToString("dddd, dd MMMM yyyy", new System.Globalization.CultureInfo("es-ES"))
                    </p>
                </div>
            </div>
        </div>

        <!-- Alertas -->
        <partial name="_Alerts" />
        <partial name="_Notifications" />

        <!-- Selector de Fecha -->
        <div class="bg-white rounded-2xl shadow-xl p-6 border border-gray-100 mb-8">
            <form asp-action="Index" method="get" class="flex items-center gap-4 flex-wrap">
                <div class="flex-1 min-w-[200px]">
                    <label for="fecha" class="block text-sm font-semibold text-gray-700 mb-2">
                        <svg class="w-4 h-4 inline mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                        </svg>
                        Seleccionar Fecha
                    </label>
                    <input type="date"
                           class="w-full px-4 py-3 rounded-lg border border-gray-300 focus:ring-2 focus:ring-green-500 focus:border-transparent transition-all"
                           id="fecha"
                           name="fecha"
                           value="@fechaConsulta.ToString("yyyy-MM-dd")"
                           max="@DateTime.Today.ToString("yyyy-MM-dd")"
                           onchange="this.form.submit()">
                </div>
                <div class="flex items-end">
                    <button type="submit" class="px-6 py-3 bg-gradient-to-r from-green-500 to-green-600 text-white rounded-lg hover:from-green-600 hover:to-green-700 transition-all shadow-lg hover:shadow-xl font-medium">
                        <svg class="w-5 h-5 inline mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
                        </svg>
                        Buscar
                    </button>
                </div>
            </form>
        </div>

        <!-- Lista de Clases -->
        @if (Model == null || !Model.Any())
        {
            <div class="bg-white rounded-2xl shadow-xl p-12 border border-gray-100 text-center">
                <div class="max-w-md mx-auto">
                    <div class="bg-gray-100 rounded-full w-24 h-24 flex items-center justify-center mx-auto mb-6">
                        <svg class="w-12 h-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                        </svg>
                    </div>
                    <h3 class="text-xl font-semibold text-gray-900 mb-2">No hay clases programadas</h3>
                    <p class="text-gray-600">No tienes clases programadas para este día.</p>
                </div>
            </div>
        }
        else
        {
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                @foreach (var clase in Model)
                {
                    <div class="bg-white rounded-2xl shadow-xl border border-gray-100 overflow-hidden hover:shadow-2xl transition-all duration-300 transform hover:-translate-y-1">

                        <!-- Header de la Clase -->
                        <div class="bg-gradient-to-r from-green-500 to-green-600 p-6 text-white">
                            <div class="flex items-center justify-between mb-2">
                                <h3 class="text-xl font-bold">@clase.AsignaturaNombre</h3>
                                @if (clase.AsistenciaRegistrada)
                                {
                                    <span class="px-3 py-1 bg-white bg-opacity-20 rounded-full text-xs font-semibold backdrop-blur-sm">
                                        ✓ Registrada
                                    </span>
                                }
                                else
                                {
                                    <span class="px-3 py-1 bg-yellow-400 bg-opacity-90 text-yellow-900 rounded-full text-xs font-semibold">
                                        Pendiente
                                    </span>
                                }
                            </div>
                            <p class="text-green-100 text-sm">@clase.GradoCompleto</p>
                        </div>

                        <!-- Información de la Clase -->
                        <div class="p-6 space-y-4">

                            <!-- Horario -->
                            <div class="flex items-center text-gray-700">
                                <div class="bg-green-100 rounded-lg p-2 mr-3">
                                    <svg class="w-5 h-5 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                                    </svg>
                                </div>
                                <div>
                                    <p class="text-xs text-gray-500 font-medium">Horario</p>
                                    <p class="text-sm font-semibold">@clase.HorarioFormateado</p>
                                </div>
                            </div>

                            <!-- Lugar -->
                            <div class="flex items-center text-gray-700">
                                <div class="bg-blue-100 rounded-lg p-2 mr-3">
                                    <svg class="w-5 h-5 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                                    </svg>
                                </div>
                                <div>
                                    <p class="text-xs text-gray-500 font-medium">Ubicación</p>
                                    <p class="text-sm font-semibold">@clase.Location</p>
                                </div>
                            </div>

                            <!-- Estudiantes -->
                            <div class="flex items-center text-gray-700">
                                <div class="bg-purple-100 rounded-lg p-2 mr-3">
                                    <svg class="w-5 h-5 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
                                    </svg>
                                </div>
                                <div>
                                    <p class="text-xs text-gray-500 font-medium">Total Estudiantes</p>
                                    <p class="text-sm font-semibold">@clase.CantidadEstudiantes estudiantes</p>
                                </div>
                            </div>

                            <!-- Estadísticas de Asistencia -->
                            @if (clase.AsistenciaRegistrada)
                            {
                                <div class="bg-gray-50 rounded-xl p-4 border border-gray-200">
                                    <p class="text-xs font-semibold text-gray-600 mb-3">Resumen de Asistencia</p>
                                    <div class="space-y-2">
                                        <div class="flex items-center justify-between">
                                            <span class="text-xs text-gray-600 flex items-center">
                                                <span class="w-2 h-2 bg-green-500 rounded-full mr-2"></span>
                                                Presentes
                                            </span>
                                            <span class="text-sm font-bold text-green-600">@clase.EstudiantesPresentes</span>
                                        </div>
                                        <div class="flex items-center justify-between">
                                            <span class="text-xs text-gray-600 flex items-center">
                                                <span class="w-2 h-2 bg-red-500 rounded-full mr-2"></span>
                                                Ausentes
                                            </span>
                                            <span class="text-sm font-bold text-red-600">@clase.EstudiantesAusentes</span>
                                        </div>
                                        <div class="flex items-center justify-between">
                                            <span class="text-xs text-gray-600 flex items-center">
                                                <span class="w-2 h-2 bg-yellow-500 rounded-full mr-2"></span>
                                                Tarde
                                            </span>
                                            <span class="text-sm font-bold text-yellow-600">@clase.EstudiantesTarde</span>
                                        </div>
                                        @if (clase.EstudiantesJustificados.HasValue && clase.EstudiantesJustificados > 0)
                                        {
                                            <div class="flex items-center justify-between">
                                                <span class="text-xs text-gray-600 flex items-center">
                                                    <span class="w-2 h-2 bg-blue-500 rounded-full mr-2"></span>
                                                    Justificados
                                                </span>
                                                <span class="text-sm font-bold text-blue-600">@clase.EstudiantesJustificados</span>
                                            </div>
                                        }
                                    </div>
                                </div>
                            }
                        </div>

                        <!-- Acciones -->
                        <div class="p-6 pt-0 space-y-3">
                            <a asp-action="TomarAsistencia"
                               asp-route-idClase="@clase.IdClaseProgramada"
                               asp-route-fecha="@fechaConsulta.ToString("yyyy-MM-dd")"
                               class="block w-full text-center px-6 py-3 bg-gradient-to-r from-green-500 to-green-600 text-white rounded-lg hover:from-green-600 hover:to-green-700 transition-all shadow-lg hover:shadow-xl font-medium">
                                <svg class="w-5 h-5 inline mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"></path>
                                </svg>
                                @(clase.AsistenciaRegistrada ? "Ver Asistencia" : "Tomar Asistencia")
                            </a>

                            <a asp-action="Historial"
                               asp-route-idClase="@clase.IdClaseProgramada"
                               class="block w-full text-center px-6 py-3 bg-white border-2 border-gray-300 text-gray-700 rounded-lg hover:bg-gray-50 hover:border-gray-400 transition-all font-medium">
                                <svg class="w-5 h-5 inline mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                                </svg>
                                Ver Historial
                            </a>
                        </div>
                    </div>
                }
            </div>
        }
    </div>
</div>