@section Scripts {
    <script>
        const idClase = @ViewBag.IdClase;
        const fecha = '@ViewBag.Fecha.ToString("yyyy-MM-dd")';
const asistenciaYaRegistrada = @(Model.Any(e => e.YaRegistrada) ? "true" : "false");

document.addEventListener('DOMContentLoaded', function () {
    // Si ya está registrada, deshabilitar todo
    if (asistenciaYaRegistrada) {
        console.log('🔒 Asistencia ya registrada. Interfaz bloqueada.');
        deshabilitarTodo();
        return;
    }

    // Marcar estados iniciales
    document.querySelectorAll('.estado-input').forEach(function (input) {
        if (input.value) {
            const row = input.closest('tr');
            const estadoBtn = row.querySelector(`[data-estado="${input.value}"]`);
            if (estadoBtn) {
                seleccionarEstado(estadoBtn, row.dataset.estudianteId, input.value, false);
            }
        }
    });
});

function deshabilitarTodo() {
    // Deshabilitar todos los botones de estado
    document.querySelectorAll('.estado-btn').forEach(btn => {
        btn.disabled = true;
        btn.classList.add('opacity-50', 'cursor-not-allowed');
        btn.onclick = function() {
            mostrarNotificacion('La asistencia ya fue registrada y no puede modificarse', 'warning');
            return false;
        };
    });

    // Deshabilitar campos de observaciones
    document.querySelectorAll('.observaciones-input').forEach(input => {
        input.disabled = true;
        input.classList.add('bg-gray-100', 'cursor-not-allowed');
    });
}

function seleccionarEstado(button, estudianteId, estado, showJustificar = true) {
    if (asistenciaYaRegistrada) {
        mostrarNotificacion('La asistencia ya fue registrada y no puede modificarse', 'warning');
        return;
    }

    const row = button.closest('tr');
    const buttons = row.querySelectorAll('.estado-btn');
    const estadoInput = row.querySelector('.estado-input');
    const justificarBtn = row.querySelector('.justificar-btn');

    // Remover selección previa
    buttons.forEach(btn => {
        btn.classList.remove('bg-green-500', 'bg-red-500', 'bg-yellow-500', 'border-green-500', 'border-red-500', 'border-yellow-500', 'text-white');
        btn.classList.add('border-gray-300', 'text-gray-400');
    });

    // Aplicar nueva selección
    const colors = getButtonColors(estado);
    button.classList.remove('border-gray-300', 'text-gray-400');
    button.classList.add(colors.bg, colors.border, 'text-white');

    // Guardar estado
    estadoInput.value = estado;

    // Mostrar/ocultar botón justificar
    if (showJustificar && (estado === 'Ausente' || estado === 'Tarde')) {
        justificarBtn.classList.remove('hidden');
    } else {
        justificarBtn.classList.add('hidden');
    }

    // Resaltar fila
    row.classList.remove('bg-green-50', 'bg-red-50', 'bg-yellow-50');
    if (estado === 'Presente') row.classList.add('bg-green-50');
    if (estado === 'Ausente') row.classList.add('bg-red-50');
    if (estado === 'Tarde') row.classList.add('bg-yellow-50');
}

function getButtonColors(estado) {
    switch (estado) {
        case 'Presente':
            return { bg: 'bg-green-500', border: 'border-green-500' };
        case 'Ausente':
            return { bg: 'bg-red-500', border: 'border-red-500' };
        case 'Tarde':
            return { bg: 'bg-yellow-500', border: 'border-yellow-500' };
        default:
            return { bg: 'bg-gray-500', border: 'border-gray-500' };
    }
}

function marcarTodos(estado) {
    if (asistenciaYaRegistrada) {
        mostrarNotificacion('La asistencia ya fue registrada y no puede modificarse', 'warning');
        return;
    }

    document.querySelectorAll('.estado-btn[data-estado="' + estado + '"]').forEach(function (btn) {
        const row = btn.closest('tr');
        seleccionarEstado(btn, row.dataset.estudianteId, estado);
    });
}

function abrirModalJustificacion(estudianteId, nombreCompleto) {
    if (asistenciaYaRegistrada) {
        mostrarNotificacion('La asistencia ya fue registrada y no puede modificarse', 'warning');
        return;
    }

    const row = document.querySelector(`tr[data-estudiante-id="${estudianteId}"]`);
    const estado = row.querySelector('.estado-input').value;
    
    if (!estado) {
        mostrarNotificacion('Primero debes seleccionar un estado (Ausente o Tarde)', 'warning');
        return;
    }
    
    if (estado !== 'Ausente' && estado !== 'Tarde') {
        mostrarNotificacion('Solo se pueden justificar ausencias o tardanzas', 'warning');
        return;
    }

    document.getElementById('justificarEstudianteId').value = estudianteId;
    document.getElementById('modalEstudianteNombre').textContent = nombreCompleto;
    
    const justificacionExistente = row.querySelector('.justificacion-input').value;
    document.getElementById('justificacionTexto').value = justificacionExistente || '';
    
    document.getElementById('modalJustificacion').classList.remove('hidden');
}

function cerrarModalJustificacion() {
    document.getElementById('modalJustificacion').classList.add('hidden');
}

function guardarJustificacion() {
    const estudianteId = document.getElementById('justificarEstudianteId').value;
    const justificacion = document.getElementById('justificacionTexto').value.trim();

    if (!justificacion) {
        mostrarNotificacion('Por favor, ingresa una justificación.', 'error');
        return;
    }

    if (justificacion.length < 10) {
        mostrarNotificacion('La justificación debe tener al menos 10 caracteres.', 'error');
        return;
    }

    const row = document.querySelector(`tr[data-estudiante-id="${estudianteId}"]`);
    const justificacionInput = row.querySelector('.justificacion-input');
    justificacionInput.value = justificacion;

    console.log(`✅ Justificación guardada para estudiante ${estudianteId}:`, justificacion);

    cerrarModalJustificacion();
    mostrarNotificacion('✓ Justificación agregada. Recuerda guardar la asistencia.', 'success');
    
    row.classList.remove('bg-green-50', 'bg-red-50', 'bg-yellow-50');
    row.classList.add('bg-blue-50');
}

function guardarAsistencia() {
    if (asistenciaYaRegistrada) {
        mostrarNotificacion('La asistencia ya fue registrada y no puede modificarse', 'warning');
        return;
    }

    document.getElementById('modalConfirmacion').classList.remove('hidden');
}

function cerrarModalConfirmacion() {
    document.getElementById('modalConfirmacion').classList.add('hidden');
}

async function confirmarGuardarAsistencia() {
    cerrarModalConfirmacion();

    const asistencias = [];
    let hayErrores = false;

    document.querySelectorAll('#tablaAsistencia tr').forEach(function (row) {
        const estudianteId = parseInt(row.dataset.estudianteId);
        const estado = row.querySelector('.estado-input').value;
        const observaciones = row.querySelector('.observaciones-input').value;
        
        const justificacionInput = row.querySelector('.justificacion-input');
        const justificacion = justificacionInput ? justificacionInput.value.trim() : null;

        if (!estado) {
            row.classList.add('bg-red-100');
            hayErrores = true;
            return;
        }

        row.classList.remove('bg-red-100');

        console.log(`📋 Estudiante ${estudianteId}:`, {
            estado,
            observaciones: observaciones || null,
            justificacion: justificacion || null
        });

        asistencias.push({
            idEstudiante: estudianteId,
            estado: estado,
            observaciones: observaciones || null,
            justificacion: justificacion || null,
            requiereJustificacion: estado === 'Ausente' || estado === 'Tarde'
        });
    });

    if (hayErrores) {
        mostrarNotificacion('Por favor, marca el estado de todos los estudiantes antes de guardar.', 'error');
        return;
    }

    const data = {
        idClaseProgramada: idClase,
        fecha: fecha,
        asistencias: asistencias
    };

    console.log('📤 Enviando datos:', JSON.stringify(data, null, 2));

    try {
        const response = await fetch('/AsistenciaProfesor/RegistrarAsistenciaMasiva', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json',
                'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]').value
            },
            body: JSON.stringify(data)
        });

        const result = await response.json();

        if (result.success) {
            mostrarNotificacion('✓ Asistencia guardada exitosamente', 'success');
            setTimeout(() => {
                window.location.href = '/AsistenciaProfesor/Index';
            }, 1500);
        } else {
            mostrarNotificacion('Error: ' + result.message, 'error');
            if (result.errors) {
                console.error('❌ Errores:', result.errors);
            }
        }
    } catch (error) {
        console.error('❌ Error:', error);
        mostrarNotificacion('Error al guardar la asistencia. Por favor, intenta de nuevo.', 'error');
    }
}

