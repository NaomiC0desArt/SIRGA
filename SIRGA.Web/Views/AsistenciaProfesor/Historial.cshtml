@model List<SIRGA.Web.Models.Asistencia.AsistenciaResponseDto>
@{
    ViewData["Title"] = "Historial de Asistencia";
    var idClase = ViewBag.IdClase;
    var fechaInicio = ViewBag.FechaInicio as DateTime? ?? DateTime.Today.AddMonths(-1);
    var fechaFin = ViewBag.FechaFin as DateTime? ?? DateTime.Today;
}

@if (Model != null && Model.Any())
{
    <div class="bg-yellow-100 border-l-4 border-yellow-500 p-4 mb-6">
        <h3 class="font-bold text-yellow-800 mb-2">🔍 DEBUG INFO (eliminar en producción)</h3>
        <div class="text-sm">
            <p><strong>Total registros:</strong> @Model.Count</p>
            @{
                var justificados = Model.Count(a => a.Estado == "Justificado");
                var conJustificacion = Model.Count(a => !string.IsNullOrEmpty(a.Justificacion));
            }
            <p><strong>Con estado "Justificado":</strong> @justificados</p>
            <p><strong>Con texto de justificación:</strong> @conJustificacion</p>

            @if (Model.Any())
            {
                var primera = Model.First();
                <hr class="my-2 border-yellow-300" />
                <p><strong>Primera asistencia:</strong></p>
                <ul class="ml-4">
                    <li>ID: @primera.Id</li>
                    <li>Estudiante: @primera.EstudianteNombreCompleto</li>
                    <li>Estado: <strong>@primera.Estado</strong></li>
                    <li>Justificacion: <strong>@(primera.Justificacion ?? "NULL")</strong></li>
                    <li>FechaJustificacion: @(primera.FechaJustificacion?.ToString("dd/MM/yyyy HH:mm") ?? "NULL")</li>
                </ul>
            }
        </div>
    </div>
}

<div class="min-h-screen bg-gray-50 px-3 sm:px-4 lg:px-8 pt-8 pb-12">
    <div class="max-w-7xl mx-auto">

        <!-- Encabezado -->
        <div class="mb-6">
            <div class="flex items-center gap-4 mb-4">
                <a asp-action="Index" class="inline-flex items-center text-green-600 hover:text-green-700 font-medium">
                    <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
                    </svg>
                    Volver a Mis Clases
                </a>
                <a asp-action="Index" asp-controller="Profesor" class="inline-flex items-center text-purple-600 hover:text-purple-700 font-medium">
                    <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"></path>
                    </svg>
                    Ir al Panel Principal
                </a>
            </div>

            <div class="bg-white rounded-2xl shadow-xl p-8 border border-gray-100">
                <div class="flex items-center">
                    <div class="h-16 w-16 bg-gradient-to-r from-blue-500 to-blue-600 rounded-full flex items-center justify-center mr-4 shadow-lg">
                        <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                        </svg>
                    </div>
                    <div>
                        <h1 class="text-3xl font-bold text-gray-900">Historial de Asistencia</h1>
                        <p class="text-gray-600 mt-1">Consulta el registro histórico de asistencia</p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Alertas -->
        <partial name="_Alerts" />

        <!-- Filtros de Fecha -->
        <div class="bg-white rounded-2xl shadow-xl p-6 border border-gray-100 mb-6">
            <form asp-action="Historial" method="get" class="grid grid-cols-1 md:grid-cols-3 gap-4">
                <input type="hidden" name="idClase" value="@idClase" />

                <div>
                    <label class="block text-sm font-semibold text-gray-700 mb-2">
                        <svg class="w-4 h-4 inline mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                        </svg>
                        Fecha Inicio
                    </label>
                    <input type="date"
                           name="fechaInicio"
                           value="@fechaInicio.ToString("yyyy-MM-dd")"
                           class="w-full px-4 py-3 rounded-lg border border-gray-300 focus:ring-2 focus:ring-blue-500 focus:border-transparent">
                </div>

                <div>
                    <label class="block text-sm font-semibold text-gray-700 mb-2">
                        <svg class="w-4 h-4 inline mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                        </svg>
                        Fecha Fin
                    </label>
                    <input type="date"
                           name="fechaFin"
                           value="@fechaFin.ToString("yyyy-MM-dd")"
                           max="@DateTime.Today.ToString("yyyy-MM-dd")"
                           class="w-full px-4 py-3 rounded-lg border border-gray-300 focus:ring-2 focus:ring-blue-500 focus:border-transparent">
                </div>

                <div class="flex items-end">
                    <button type="submit" class="w-full px-6 py-3 bg-gradient-to-r from-blue-500 to-blue-600 text-white rounded-lg hover:from-blue-600 hover:to-blue-700 transition-all shadow-lg hover:shadow-xl font-medium">
                        <svg class="w-5 h-5 inline mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 4a1 1 0 011-1h16a1 1 0 011 1v2.586a1 1 0 01-.293.707l-6.414 6.414a1 1 0 00-.293.707V17l-4 4v-6.586a1 1 0 00-.293-.707L3.293 7.293A1 1 0 013 6.586V4z"></path>
                        </svg>
                        Filtrar
                    </button>
                </div>
            </form>
        </div>

        <!-- Estadísticas Rápidas -->
        @if (Model != null && Model.Any())
        {
            var totalPresentes = Model.Count(a => a.Estado == "Presente");
            var totalAusentes = Model.Count(a => a.Estado == "Ausente");
            var totalTardes = Model.Count(a => a.Estado == "Tarde");
            var totalJustificados = Model.Count(a => a.Estado == "Justificado");

            <div class="grid grid-cols-2 md:grid-cols-4 gap-6 mb-6">
                <div class="bg-gradient-to-br from-green-500 to-green-600 rounded-xl shadow-lg p-6 text-white">
                    <p class="text-green-100 text-sm font-medium">Presentes</p>
                    <p class="text-4xl font-bold mt-2">@totalPresentes</p>
                </div>
                <div class="bg-gradient-to-br from-red-500 to-red-600 rounded-xl shadow-lg p-6 text-white">
                    <p class="text-red-100 text-sm font-medium">Ausentes</p>
                    <p class="text-4xl font-bold mt-2">@totalAusentes</p>
                </div>
                <div class="bg-gradient-to-br from-yellow-500 to-yellow-600 rounded-xl shadow-lg p-6 text-white">
                    <p class="text-yellow-100 text-sm font-medium">Tardes</p>
                    <p class="text-4xl font-bold mt-2">@totalTardes</p>
                </div>
                <div class="bg-gradient-to-br from-blue-500 to-blue-600 rounded-xl shadow-lg p-6 text-white">
                    <p class="text-blue-100 text-sm font-medium">Justificados</p>
                    <p class="text-4xl font-bold mt-2">@totalJustificados</p>
                </div>
            </div>
        }

        <!-- Tabla de Historial -->
        <div class="bg-white rounded-2xl shadow-xl border border-gray-100 overflow-hidden">
            @if (Model == null || !Model.Any())
            {
                <div class="text-center py-16 px-4">
                    <div class="bg-gray-100 rounded-full w-24 h-24 flex items-center justify-center mx-auto mb-6">
                        <svg class="w-12 h-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                        </svg>
                    </div>
                    <h3 class="text-xl font-semibold text-gray-900 mb-2">No hay registros</h3>
                    <p class="text-gray-600">No se encontraron registros de asistencia para el rango de fechas seleccionado.</p>
                </div>
            }
            else
            {
                <div class="overflow-x-auto">
                    <table class="w-full">
                        <thead class="bg-gradient-to-r from-gray-700 to-gray-800 text-white">
                            <tr>
                                <th class="px-6 py-4 text-left text-sm font-semibold">Fecha</th>
                                <th class="px-6 py-4 text-left text-sm font-semibold">Estudiante</th>
                                <th class="px-6 py-4 text-left text-sm font-semibold">Matrícula</th>
                                <th class="px-6 py-4 text-center text-sm font-semibold">Estado</th>
                                <th class="px-6 py-4 text-left text-sm font-semibold">Hora Registro</th>
                                <th class="px-6 py-4 text-left text-sm font-semibold">Observaciones</th>
                                <th class="px-6 py-4 text-left text-sm font-semibold">Justificación</th>
                            </tr>
                        </thead>
                        <tbody class="divide-y divide-gray-200">
                            @foreach (var asistencia in Model.OrderByDescending(a => a.Fecha))
                            {
                                <tr class="hover:bg-gray-50 transition-colors">
                                    <td class="px-6 py-4 text-sm font-medium text-gray-900">
                                        @asistencia.Fecha.ToString("dd/MM/yyyy")
                                    </td>
                                    <td class="px-6 py-4 text-sm text-gray-900">
                                        @asistencia.EstudianteNombreCompleto
                                    </td>
                                    <td class="px-6 py-4">
                                        <span class="px-3 py-1 bg-blue-100 text-blue-700 rounded-full text-xs font-semibold">
                                            @asistencia.EstudianteMatricula
                                        </span>
                                    </td>
                                    <td class="px-6 py-4 text-center">
                                        @switch (asistencia.Estado)
                                        {
                                            case "Presente":
                                                <span class="px-4 py-2 bg-green-100 text-green-700 rounded-full text-xs font-semibold inline-flex items-center">
                                                    <svg class="w-4 h-4 mr-1" fill="currentColor" viewBox="0 0 20 20">
                                                        <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                                                    </svg>
                                                    Presente
                                                </span>
                                                break;
                                            case "Ausente":
                                                <span class="px-4 py-2 bg-red-100 text-red-700 rounded-full text-xs font-semibold inline-flex items-center">
                                                    <svg class="w-4 h-4 mr-1" fill="currentColor" viewBox="0 0 20 20">
                                                        <path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd"></path>
                                                    </svg>
                                                    Ausente
                                                </span>
                                                break;
                                            case "Tarde":
                                                <span class="px-4 py-2 bg-yellow-100 text-yellow-700 rounded-full text-xs font-semibold inline-flex items-center">
                                                    <svg class="w-4 h-4 mr-1" fill="currentColor" viewBox="0 0 20 20">
                                                        <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 10-2 0v4a1 1 0 00.293.707l2.828 2.829a1 1 0 101.415-1.415L11 9.586V6z" clip-rule="evenodd"></path>
                                                    </svg>
                                                    Tarde
                                                </span>
                                                break;
                                            case "Justificado":
                                                <span class="px-4 py-2 bg-blue-100 text-blue-700 rounded-full text-xs font-semibold inline-flex items-center">
                                                    <svg class="w-4 h-4 mr-1" fill="currentColor" viewBox="0 0 20 20">
                                                        <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd"></path>
                                                    </svg>
                                                    Justificado
                                                </span>
                                                break;
                                        }
                                    </td>
                                    <td class="px-6 py-4 text-sm text-gray-600">
                                        @asistencia.HoraRegistro.ToString("hh:mm tt")
                                    </td>
                                    <td class="px-6 py-4 text-sm text-gray-600">
                                        @(string.IsNullOrEmpty(asistencia.Observaciones) ? "-" : asistencia.Observaciones)
                                    </td>
                                    <td class="px-6 py-4 text-sm text-gray-600">
                                        @if (!string.IsNullOrEmpty(asistencia.Justificacion))
                                        {
                                            <div class="max-w-xs">
                                                <p class="text-sm">@asistencia.Justificacion</p>
                                                @if (asistencia.FechaJustificacion.HasValue)
                                                {
                                                    <p class="text-xs text-gray-500 mt-1">
                                                        @asistencia.FechaJustificacion.Value.ToString("dd/MM/yyyy")
                                                    </p>
                                                }
                                            </div>
                                        }
                                        else
                                        {
                                            <span class="text-gray-400">-</span>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>
</div>