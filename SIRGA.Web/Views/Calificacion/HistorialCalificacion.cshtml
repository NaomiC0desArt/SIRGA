@model List<SIRGA.Web.Models.Calificacion.HistorialCalificacionDto>

@{
    ViewData["Title"] = "Historial de Calificación";
    Layout = "~/Views/Shared/_LayoutWithSidebar.cshtml";
    ViewBag.UserName = User.Identity.Name;
    ViewBag.UserRole = "Admin";
}

@section SidebarMenu {
    <partial name="_AdminSidebarMenu" />
}

<div class="min-h-screen bg-gray-50 px-3 sm:px-4 lg:px-8 pt-8 pb-12">
    <div class="max-w-5xl mx-auto">

        <!-- Encabezado -->
        <div class="bg-white rounded-2xl shadow-xl p-8 border border-gray-100 mb-8">
            <div class="flex items-center justify-between flex-wrap gap-4">
                <div class="flex items-center">
                    <div class="h-16 w-16 bg-gradient-to-r from-gray-700 to-gray-900 rounded-full flex items-center justify-center mr-4 shadow-lg">
                        <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                        </svg>
                    </div>
                    <div>
                        <h1 class="text-3xl font-bold text-gray-900">Historial de Cambios</h1>
                        <p class="text-gray-600 mt-1">Registro de modificaciones a la calificación</p>
                    </div>
                </div>
                <button onclick="window.history.back()"
                        class="px-4 py-2 bg-gray-100 hover:bg-gray-200 text-gray-700 rounded-lg transition-colors">
                    <svg class="w-5 h-5 inline-block mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
                    </svg>
                    Volver
                </button>
            </div>
        </div>

        @if (Model != null && Model.Any())
        {
            <!-- Timeline de Cambios -->
            <div class="relative">
                <!-- Línea vertical -->
                <div class="absolute left-8 top-0 bottom-0 w-0.5 bg-gray-300"></div>

                @foreach (var registro in Model)
                {
                    var isReciente = Model.IndexOf(registro) == 0;

                    <div class="relative mb-8 ml-20">
                        <!-- Punto en la línea -->
                        <div class="absolute -left-[3.25rem] top-6 h-6 w-6 rounded-full border-4 @(isReciente ? "bg-amber-500 border-amber-200" : "bg-gray-400 border-gray-200")"></div>

                        <!-- Tarjeta de Cambio -->
                        <div class="bg-white rounded-xl shadow-lg border @(isReciente ? "border-amber-200" : "border-gray-200") overflow-hidden">
                            <!-- Header -->
                            <div class="bg-gradient-to-r @(isReciente ? "from-amber-50 to-orange-50" : "from-gray-50 to-gray-100") px-6 py-4 border-b @(isReciente ? "border-amber-200" : "border-gray-200")">
                                <div class="flex items-center justify-between">
                                    <div class="flex items-center space-x-3">
                                        <div class="h-10 w-10 @(isReciente ? "bg-amber-500" : "bg-gray-500") rounded-full flex items-center justify-center">
                                            <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                                            </svg>
                                        </div>
                                        <div>
                                            <p class="font-semibold text-gray-900">@registro.UsuarioNombre</p>
                                            <p class="text-sm text-gray-600">
                                                @registro.UsuarioRol
                                                @if (isReciente)
                                                {
                                                    <span class="ml-2 px-2 py-0.5 bg-amber-500 text-white text-xs rounded-full">Más reciente</span>
                                                }
                                            </p>
                                        </div>
                                    </div>
                                    <div class="text-right">
                                        <p class="text-sm font-medium text-gray-700">
                                            @registro.FechaModificacion.ToString("dd/MM/yyyy")
                                        </p>
                                        <p class="text-xs text-gray-500">
                                            @registro.FechaModificacion.ToString("hh:mm tt")
                                        </p>
                                    </div>
                                </div>
                            </div>

                            <!-- Contenido -->
                            <div class="p-6">
                                <!-- Período -->
                                <div class="mb-4">
                                    <div class="inline-flex items-center px-3 py-1 bg-indigo-100 text-indigo-700 rounded-full text-sm font-medium">
                                        <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                                        </svg>
                                        Período @registro.NumeroPeriodo
                                    </div>
                                </div>

                                <!-- Motivo -->
                                <div class="mb-4 p-4 bg-gray-50 rounded-lg border-l-4 border-amber-500">
                                    <p class="text-xs font-semibold text-gray-600 mb-1">MOTIVO DE LA EDICIÓN:</p>
                                    <p class="text-sm text-gray-800 italic">@registro.MotivoEdicion</p>
                                </div>

                                <!-- Comparación de Valores -->
                                <div class="grid grid-cols-2 gap-4">
                                    <div class="p-4 bg-red-50 rounded-lg border border-red-200">
                                        <p class="text-xs font-semibold text-red-600 mb-3 flex items-center">
                                            <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                                            </svg>
                                            VALORES ANTERIORES
                                        </p>
                                        <div id="valoresAnteriores-@registro.Id" class="space-y-2"></div>
                                    </div>

                                    <div class="p-4 bg-green-50 rounded-lg border border-green-200">
                                        <p class="text-xs font-semibold text-green-600 mb-3 flex items-center">
                                            <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                                            </svg>
                                            VALORES NUEVOS
                                        </p>
                                        <div id="valoresNuevos-@registro.Id" class="space-y-2"></div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <script>
                        // Parsear y mostrar valores anteriores
                        try {
                            const valoresAnteriores = JSON.parse(@Html.Raw(Json.Serialize(registro.ValoresAnteriores)));
                            const containerAnterior = document.getElementById('valoresAnteriores-@registro.Id');

                            // Componentes
                            if (valoresAnteriores.componentes) {
                                for (const [nombre, valor] of Object.entries(valoresAnteriores.componentes)) {
                                    const div = document.createElement('div');
                                    div.className = 'flex justify-between text-sm';
                                    div.innerHTML = `
                                        <span class="text-gray-700">${nombre}:</span>
                                        <span class="font-semibold text-gray-900">${valor !== null ? valor.toFixed(0) + ' pts' : '-'}</span>
                                    `;
                                    containerAnterior.appendChild(div);
                                }
                            }

                            // Total
                            const divTotal = document.createElement('div');
                            divTotal.className = 'flex justify-between text-sm pt-2 border-t border-red-300 mt-2';
                            divTotal.innerHTML = `
                                <span class="font-bold text-gray-700">TOTAL:</span>
                                <span class="font-bold text-red-700 text-lg">${valoresAnteriores.total !== null ? valoresAnteriores.total.toFixed(0) + ' pts' : '-'}</span>
                            `;
                            containerAnterior.appendChild(divTotal);
                        } catch (e) {
                            console.error('Error al parsear valores anteriores:', e);
                        }

                        // Parsear y mostrar valores nuevos
                        try {
                            const valoresNuevos = JSON.parse(@Html.Raw(Json.Serialize(registro.ValoresNuevos)));
                            const containerNuevo = document.getElementById('valoresNuevos-@registro.Id');

                            // Componentes
                            if (valoresNuevos.componentes) {
                                for (const [nombre, valor] of Object.entries(valoresNuevos.componentes)) {
                                    const div = document.createElement('div');
                                    div.className = 'flex justify-between text-sm';
                                    div.innerHTML = `
                                        <span class="text-gray-700">${nombre}:</span>
                                        <span class="font-semibold text-gray-900">${valor !== null ? valor.toFixed(0) + ' pts' : '-'}</span>
                                    `;
                                    containerNuevo.appendChild(div);
                                }
                            }

                            // Total
                            const divTotal = document.createElement('div');
                            divTotal.className = 'flex justify-between text-sm pt-2 border-t border-green-300 mt-2';
                            divTotal.innerHTML = `
                                <span class="font-bold text-gray-700">TOTAL:</span>
                                <span class="font-bold text-green-700 text-lg">${valoresNuevos.total !== null ? valoresNuevos.total.toFixed(0) + ' pts' : '-'}</span>
                            `;
                            containerNuevo.appendChild(divTotal);
                        } catch (e) {
                            console.error('Error al parsear valores nuevos:', e);
                        }
                    </script>
                }
            </div>
        }
        else
        {
            <!-- Sin Historial -->
            <div class="bg-white rounded-xl shadow-lg p-12 border border-gray-100 text-center">
                <svg class="w-20 h-20 mx-auto text-gray-400 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
                <h3 class="text-xl font-semibold text-gray-700 mb-2">
                    No hay historial de cambios
                </h3>
                <p class="text-gray-500">
                    Esta calificación no ha sido modificada después de su publicación.
                </p>
            </div>
        }

    </div>
</div>