@model SIRGA.Web.Models.Calificacion.EditarCalificacionViewModel

@{
    ViewData["Title"] = "Editar Calificación";
    Layout = "~/Views/Shared/_LayoutWithSidebar.cshtml";
    ViewBag.UserName = User.Identity.Name;
    ViewBag.UserRole = "Admin";
}

@section SidebarMenu {
    <partial name="_AdminSidebarMenu" />
}

<div class="min-h-screen bg-gray-50 px-3 sm:px-4 lg:px-8 pt-8 pb-12">
    <div class="max-w-4xl mx-auto">

        <!-- Encabezado -->
        <div class="bg-white rounded-2xl shadow-xl p-8 border border-gray-100 mb-8">
            <div class="flex items-center justify-between flex-wrap gap-4">
                <div class="flex items-center">
                    <div class="h-16 w-16 bg-gradient-to-r from-amber-500 to-orange-600 rounded-full flex items-center justify-center mr-4 shadow-lg">
                        <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
                        </svg>
                    </div>
                    <div>
                        <h1 class="text-3xl font-bold text-gray-900">Editar Calificación</h1>
                        <p class="text-gray-600 mt-1">@ViewBag.EstudianteNombre • @Model.AsignaturaNombre</p>
                    </div>
                </div>
                <a href="@Url.Action("VerCalificacionesEstudiante", "Calificacion", new { estudianteId = Model.IdEstudiante })"
                   class="px-4 py-2 bg-gray-100 hover:bg-gray-200 text-gray-700 rounded-lg transition-colors">
                    <svg class="w-5 h-5 inline-block mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                    </svg>
                    Cancelar
                </a>
            </div>
        </div>

        <!-- Advertencia -->
        <div class="bg-amber-50 border-l-4 border-amber-400 p-6 mb-6 rounded-r-lg shadow-md">
            <div class="flex">
                <svg class="w-6 h-6 text-amber-600 mr-3 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"></path>
                </svg>
                <div>
                    <h3 class="text-lg font-bold text-amber-900 mb-1">⚠️ Estás editando una calificación publicada</h3>
                    <p class="text-amber-700">
                        Esta acción quedará registrada en el historial. Debes proporcionar un motivo válido para la edición.
                    </p>
                </div>
            </div>
        </div>

        <!-- Información Actual -->
        <div class="bg-white rounded-xl shadow-lg p-6 border border-gray-100 mb-8">
            <h3 class="text-lg font-semibold text-gray-900 mb-4 flex items-center">
                <svg class="w-5 h-5 text-indigo-500 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
                Información de la Calificación
            </h3>
            <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
                <div class="text-center p-4 bg-indigo-50 rounded-lg">
                    <p class="text-xs text-gray-600 mb-1">Estudiante</p>
                    <p class="font-semibold text-gray-900">@ViewBag.EstudianteNombre</p>
                    <p class="text-xs text-gray-500">@ViewBag.EstudianteMatricula</p>
                </div>
                <div class="text-center p-4 bg-purple-50 rounded-lg">
                    <p class="text-xs text-gray-600 mb-1">Asignatura</p>
                    <p class="font-semibold text-gray-900">@Model.AsignaturaNombre</p>
                </div>
                <div class="text-center p-4 bg-blue-50 rounded-lg">
                    <p class="text-xs text-gray-600 mb-1">Período</p>
                    <p class="font-semibold text-gray-900">Período @ViewBag.NumeroPeriodo</p>
                </div>
                <div class="text-center p-4 bg-green-50 rounded-lg">
                    <p class="text-xs text-gray-600 mb-1">Total Actual</p>
                    <p class="text-2xl font-bold text-green-700">@Model.TotalActual.ToString("F0")</p>
                </div>
            </div>
        </div>

        <!-- Formulario de Edición -->
        <form id="formEdicion" class="bg-white rounded-xl shadow-lg p-8 border border-gray-100">
            @Html.AntiForgeryToken()

            <h3 class="text-lg font-semibold text-gray-900 mb-6">Componentes de Calificación</h3>

            <div class="space-y-4 mb-6">
                @foreach (var componente in Model.Componentes.OrderBy(c => c.Key))
                {
                    <div class="flex items-center justify-between p-4 bg-gray-50 rounded-lg border border-gray-200">
                        <label class="text-sm font-medium text-gray-700">
                            @componente.Key
                        </label>
                        <div class="flex items-center space-x-3">
                            <input type="number"
                                   class="componente-input w-24 px-3 py-2 border border-gray-300 rounded-lg text-center focus:ring-2 focus:ring-amber-500"
                                   data-nombre="@componente.Key"
                                   min="0"
                                   max="100"
                                   step="1"
                                   value="@(componente.Value?.ToString("F0") ?? "0")"
                                   placeholder="0"
                                   onchange="calcularTotal()" />
                            <span class="text-sm text-gray-500">pts</span>
                        </div>
                    </div>
                }
            </div>

            <!-- Total Nuevo -->
            <div class="flex items-center justify-between p-6 bg-gradient-to-r from-green-50 to-emerald-50 rounded-lg border-2 border-green-300 mb-6">
                <span class="text-lg font-semibold text-gray-900">Nuevo Total</span>
                <div class="flex items-center space-x-3">
                    <input type="number"
                           id="totalNuevo"
                           readonly
                           class="w-24 px-3 py-2 text-center font-bold text-2xl bg-white border-2 border-green-500 rounded-lg"
                           value="@Model.TotalActual.ToString("F0")" />
                    <span class="text-sm text-gray-500">pts</span>
                </div>
            </div>

            <!-- Motivo de Edición -->
            <div class="mb-6">
                <label class="block text-sm font-medium text-gray-700 mb-2">
                    <svg class="w-4 h-4 inline-block mr-1 text-red-500" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-11a1 1 0 10-2 0v2H7a1 1 0 100 2h2v2a1 1 0 102 0v-2h2a1 1 0 100-2h-2V7z" clip-rule="evenodd"></path>
                    </svg>
                    Motivo de la Edición <span class="text-red-500">*</span>
                </label>
                <textarea id="motivoEdicion"
                          rows="4"
                          class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-amber-500 resize-none"
                          placeholder="Explica por qué es necesario editar esta calificación (mínimo 10 caracteres)..."
                          required></textarea>
                <p class="text-xs text-gray-500 mt-1">Este motivo quedará registrado en el historial de cambios.</p>
            </div>

            <!-- Botones de Acción -->
            <div class="flex gap-4">
                <button type="button"
                        onclick="confirmarEdicion()"
                        class="flex-1 px-6 py-3 bg-gradient-to-r from-amber-500 to-orange-600 hover:from-amber-600 hover:to-orange-700 text-white font-semibold rounded-lg shadow-lg transition-all">
                    <svg class="w-5 h-5 inline-block mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                    </svg>
                    Guardar Cambios
                </button>
                <a href="@Url.Action("VerCalificacionesEstudiante", "Calificacion", new { estudianteId = Model.IdEstudiante })"
                   class="px-6 py-3 bg-gray-200 hover:bg-gray-300 text-gray-700 font-semibold rounded-lg text-center">
                    Cancelar
                </a>
            </div>
        </form>

    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        const componentesOriginales = @Html.Raw(Json.Serialize(Model.Componentes));
        const totalOriginal = @Model.TotalActual;
        const idEstudiante = @Model.IdEstudiante;
        const idAsignatura = @Model.IdAsignatura;
        const idPeriodo = @Model.IdPeriodo;

        function calcularTotal() {
            const inputs = document.querySelectorAll('.componente-input');
            let total = 0;

            inputs.forEach(input => {
                total += parseInt(input.value) || 0;
            });

            const totalInput = document.getElementById('totalNuevo');
            totalInput.value = total;

            if (total > 100) {
                totalInput.className = 'w-24 px-3 py-2 text-center font-bold text-2xl bg-red-100 border-2 border-red-500 text-red-700 rounded-lg';
            } else if (total >= 70) {
                totalInput.className = 'w-24 px-3 py-2 text-center font-bold text-2xl bg-white border-2 border-green-500 rounded-lg';
            } else {
                totalInput.className = 'w-24 px-3 py-2 text-center font-bold text-2xl bg-white border-2 border-yellow-500 rounded-lg';
            }
        }

        async function confirmarEdicion() {
            const total = parseInt(document.getElementById('totalNuevo').value);
            const motivo = document.getElementById('motivoEdicion').value.trim();

            if (!motivo || motivo.length < 10) {
                Swal.fire({
                    icon: 'error',
                    title: 'Motivo requerido',
                    text: 'Debes proporcionar un motivo válido (mínimo 10 caracteres)',
                    confirmButtonColor: '#f59e0b'
                });
                return;
            }

            if (total > 100) {
                Swal.fire({
                    icon: 'error',
                    title: 'Total inválido',
                    text: 'El total no puede exceder 100 puntos',
                    confirmButtonColor: '#f59e0b'
                });
                return;
            }

            // Recopilar componentes
            const componentes = {};
            document.querySelectorAll('.componente-input').forEach(input => {
                const nombre = input.dataset.nombre;
                componentes[nombre] = parseInt(input.value) || 0;
            });

            const result = await Swal.fire({
                title: '¿Confirmar edición?',
                html: `
                    <div class="text-left">
                        <p class="text-gray-700 mb-2">Total anterior: <strong>${totalOriginal} pts</strong></p>
                        <p class="text-gray-700 mb-4">Nuevo total: <strong>${total} pts</strong></p>
                        <p class="text-gray-600 text-sm">Esta acción quedará registrada en el historial.</p>
                    </div>
                `,
                icon: 'warning',
                showCancelButton: true,
                confirmButtonText: 'Sí, guardar',
                cancelButtonText: 'Cancelar',
                confirmButtonColor: '#f59e0b'
            });

            if (result.isConfirmed) {
                await guardarEdicion(componentes, motivo);
            }
        }

        async function guardarEdicion(componentes, motivo) {
            const token = document.querySelector('input[name="__RequestVerificationToken"]').value;

            try {
                const response = await fetch('/Calificacion/EditarCalificacion',  {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'RequestVerificationToken': token
                    },
                    body: JSON.stringify({
                        idEstudiante: idEstudiante,
                        idAsignatura: idAsignatura,
                        idPeriodo: idPeriodo,
                        componentes: componentes,
                        motivoEdicion: motivo
                    })
                });

                const result = await response.json();

                if (result.success) {
                    Swal.fire({
                        icon: 'success',
                        title: '¡Actualizado!',
                        text: 'La calificación ha sido actualizada exitosamente',
                        confirmButtonColor: '#f59e0b'
                    }).then(() => {
                        window.location.href = `/Admin/VerCalificacionesEstudiante?estudianteId=${idEstudiante}`;
                    });
                } else {
                    Swal.fire({
                        icon: 'error',
                        title: 'Error',
                        text: result.message || 'No se pudo guardar la edición',
                        confirmButtonColor: '#f59e0b'
                    });
                }
            } catch (error) {
                Swal.fire({
                    icon: 'error',
                    title: 'Error',
                    text: 'Error de conexión con el servidor',
                    confirmButtonColor: '#f59e0b'
                });
            }
        }

        // Validar que no excedan 100 pts
        document.querySelectorAll('.componente-input').forEach(input => {
            input.addEventListener('input', function() {
                if (parseInt(this.value) > 100) {
                    this.value = 100;
                }
                calcularTotal();
            });
        });
    </script>
}