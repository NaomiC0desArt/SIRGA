@model List<SIRGA.Web.Models.Calificacion.CalificacionEstudianteViewDto>

@{
    ViewData["Title"] = "Calificaciones del Estudiante";
    Layout = "~/Views/Shared/_LayoutWithSidebar.cshtml";
    ViewBag.UserName = User.Identity.Name;
    ViewBag.UserRole = User.IsInRole("Admin") ? "Admin" : "Profesor";
    var esAdmin = User.IsInRole("Admin");
}

@section SidebarMenu {
    @if (esAdmin)
    {
        <partial name="_AdminSidebarMenu" />
    }
    else
    {
        <partial name="_ProfesorSidebarMenu" />
    }
}

<div class="min-h-screen bg-gradient-to-br from-blue-50 via-indigo-50 to-purple-50 px-3 sm:px-4 lg:px-8 pt-8 pb-12">
    <div class="max-w-7xl mx-auto">

        <!-- Encabezado -->
        <div class="bg-white rounded-2xl shadow-xl p-8 border border-indigo-100 mb-8">
            <div class="flex items-center justify-between flex-wrap gap-4">
                <div class="flex items-center">
                    <div class="h-16 w-16 bg-gradient-to-r from-indigo-500 to-purple-600 rounded-full flex items-center justify-center mr-4 shadow-lg">
                        <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                        </svg>
                    </div>
                    <div>
                        <h1 class="text-3xl font-bold text-gray-900">@ViewBag.EstudianteNombre</h1>
                        <p class="text-gray-600 mt-1">Matrícula: @ViewBag.EstudianteMatricula • @ViewBag.CursoNombre</p>
                    </div>
                </div>
                <a href="@Url.Action("BuscarCalificaciones", esAdmin ? "Admin" : "Profesor")"
                   class="px-4 py-2 bg-gray-100 hover:bg-gray-200 text-gray-700 rounded-lg transition-colors">
                    <svg class="w-5 h-5 inline-block mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
                    </svg>
                    Volver a Búsqueda
                </a>
            </div>
        </div>

        @if (Model != null && Model.Any())
        {
            <!-- Resumen General -->
            <div class="grid grid-cols-1 lg:grid-cols-3 gap-6 mb-8">
                <div class="bg-white rounded-xl shadow-lg p-6 border-l-4 border-indigo-500">
                    <div class="flex items-center justify-between">
                        <div>
                            <p class="text-sm font-medium text-gray-600">Promedio General</p>
                            <p class="text-4xl font-bold text-indigo-600 mt-2">
                                @{
                                    var promedioTotal = Model.Any() ? Model.Average(m => m.PromedioGeneral) : 0;
                                }
                                @promedioTotal.ToString("F0")
                            </p>
                            <p class="text-xs text-gray-500 mt-1">puntos</p>
                        </div>
                        <div class="h-16 w-16 bg-indigo-100 rounded-full flex items-center justify-center">
                            <svg class="w-8 h-8 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
                            </svg>
                        </div>
                    </div>
                </div>

                <div class="bg-white rounded-xl shadow-lg p-6 border-l-4 border-purple-500">
                    <div class="flex items-center justify-between">
                        <div>
                            <p class="text-sm font-medium text-gray-600">Total de Asignaturas</p>
                            <p class="text-4xl font-bold text-purple-600 mt-2">@Model.Count</p>
                            <p class="text-xs text-gray-500 mt-1">materias</p>
                        </div>
                        <div class="h-16 w-16 bg-purple-100 rounded-full flex items-center justify-center">
                            <svg class="w-8 h-8 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"></path>
                            </svg>
                        </div>
                    </div>
                </div>

                <div class="bg-white rounded-xl shadow-lg p-6 border-l-4 border-blue-500">
                    <h3 class="font-semibold text-gray-900 mb-4 flex items-center">
                        <svg class="w-5 h-5 mr-2 text-blue-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                        </svg>
                        Escala
                    </h3>
                    <div class="space-y-2">
                        <div class="flex items-center justify-between">
                            <div class="flex items-center">
                                <div class="w-3 h-3 bg-emerald-500 rounded-full mr-2"></div>
                                <span class="text-xs text-gray-600">90-100</span>
                            </div>
                            <span class="text-xs font-medium text-gray-700">Excelente</span>
                        </div>
                        <div class="flex items-center justify-between">
                            <div class="flex items-center">
                                <div class="w-3 h-3 bg-green-500 rounded-full mr-2"></div>
                                <span class="text-xs text-gray-600">80-89</span>
                            </div>
                            <span class="text-xs font-medium text-gray-700">Muy Bien</span>
                        </div>
                        <div class="flex items-center justify-between">
                            <div class="flex items-center">
                                <div class="w-3 h-3 bg-yellow-500 rounded-full mr-2"></div>
                                <span class="text-xs text-gray-600">70-79</span>
                            </div>
                            <span class="text-xs font-medium text-gray-700">Bien</span>
                        </div>
                        <div class="flex items-center justify-between">
                            <div class="flex items-center">
                                <div class="w-3 h-3 bg-red-500 rounded-full mr-2"></div>
                                <span class="text-xs text-gray-600">0-69</span>
                            </div>
                            <span class="text-xs font-medium text-gray-700">Reprobado</span>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Calificaciones por Asignatura -->
            <div class="space-y-4">
                @foreach (var asignatura in Model)
                {
                    var asignaturaId = $"asignatura-{Model.IndexOf(asignatura)}";
                    var tipoDisplay = asignatura.TipoAsignatura switch
                    {
                        "Teorica" => "Teórica",
                        "Practica" => "Práctica",
                        "TeoricoPractica" => "Teórico-Práctica",
                        _ => asignatura.TipoAsignatura
                    };

                    var promedioColor = asignatura.PromedioGeneral >= 90 ? "bg-emerald-100 text-emerald-800 border-emerald-300" :
                    asignatura.PromedioGeneral >= 80 ? "bg-green-100 text-green-800 border-green-300" :
                    asignatura.PromedioGeneral >= 70 ? "bg-yellow-100 text-yellow-800 border-yellow-300" :
                    "bg-red-100 text-red-800 border-red-300";

                    <div class="bg-white rounded-xl shadow-lg border border-indigo-100 overflow-hidden">
                        <button onclick="toggleAsignatura('@asignaturaId')"
                                class="w-full px-6 py-5 flex items-center justify-between hover:bg-indigo-50 transition-colors">
                            <div class="flex items-center space-x-4">
                                <div class="h-12 w-12 bg-gradient-to-r from-indigo-500 to-purple-600 rounded-lg flex items-center justify-center flex-shrink-0">
                                    <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"></path>
                                    </svg>
                                </div>
                                <div class="text-left">
                                    <h2 class="text-xl font-bold text-gray-900">@asignatura.AsignaturaNombre</h2>
                                    <span class="inline-block mt-1 px-3 py-1 bg-indigo-100 text-indigo-700 rounded-full text-xs font-medium">
                                        @tipoDisplay
                                    </span>
                                </div>
                            </div>

                            <div class="flex items-center space-x-4">
                                <div class="text-right mr-4">
                                    <p class="text-xs text-gray-500 mb-1">Promedio</p>
                                    <span class="inline-block px-4 py-2 rounded-lg text-2xl font-bold border-2 @promedioColor">
                                        @asignatura.PromedioGeneral.ToString("F0")
                                    </span>
                                </div>
                                <svg id="@asignaturaId-icon" class="w-6 h-6 text-gray-400 transition-transform duration-200" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
                                </svg>
                            </div>
                        </button>

                        <div id="@asignaturaId" class="hidden border-t border-indigo-100">
                            <div class="overflow-x-auto">
                                <table class="min-w-full">
                                    <thead class="bg-indigo-50">
                                        <tr>
                                            <th class="px-6 py-4 text-left text-xs font-semibold text-indigo-900 uppercase tracking-wider">
                                                Período
                                            </th>
                                            @{
                                                var primerPeriodo = asignatura.Periodos.FirstOrDefault();
                                                if (primerPeriodo != null)
                                                {
                                                    foreach (var componente in primerPeriodo.Componentes.OrderBy(c => c.Key))
                                                    {
                                                        <th class="px-4 py-4 text-center text-xs font-semibold text-indigo-900 uppercase tracking-wider">
                                                            @componente.Key
                                                        </th>
                                                    }
                                                }
                                            }
                                            <th class="px-6 py-4 text-center text-xs font-semibold text-indigo-900 uppercase tracking-wider bg-indigo-100">
                                                Total
                                            </th>
                                            @if (esAdmin)
                                            {
                                                <th class="px-6 py-4 text-center text-xs font-semibold text-indigo-900 uppercase tracking-wider">
                                                    Acciones
                                                </th>
                                            }
                                        </tr>
                                    </thead>
                                    <tbody class="bg-white divide-y divide-indigo-100">
                                        @for (int i = 1; i <= 4; i++)
                                        {
                                            var periodo = asignatura.Periodos.FirstOrDefault(p => p.NumeroPeriodo == i);

                                            <tr class="hover:bg-indigo-50 transition-colors">
                                                <td class="px-6 py-4 whitespace-nowrap">
                                                    <div class="flex items-center">
                                                        <div class="flex-shrink-0 h-10 w-10 bg-indigo-100 rounded-full flex items-center justify-center">
                                                            <span class="text-indigo-700 font-bold text-sm">@($"P{i}")</span>
                                                        </div>
                                                        <span class="ml-3 text-sm font-medium text-gray-900">Período @i</span>
                                                    </div>
                                                </td>

                                                @if (periodo != null && periodo.Publicada)
                                                {
                                                    @foreach (var componente in periodo.Componentes.OrderBy(c => c.Key))
                                                    {
                                                        <td class="px-4 py-4 text-center">
                                                            @if (componente.Value.HasValue)
                                                            {
                                                                <span class="inline-block px-3 py-1.5 rounded-lg text-sm font-semibold bg-slate-100 text-slate-700 border border-slate-200">
                                                                    @componente.Value.Value.ToString("F0")
                                                                </span>
                                                            }
                                                            else
                                                            {
                                                                <span class="text-gray-400 text-sm">-</span>
                                                            }
                                                        </td>
                                                    }

                                                    <td class="px-6 py-4 text-center bg-indigo-50">
                                                        @if (periodo.Total.HasValue)
                                                        {
                                                            var totalColor = periodo.Total >= 90 ? "bg-emerald-100 text-emerald-800 border-emerald-300" :
                                                            periodo.Total >= 80 ? "bg-green-100 text-green-800 border-green-300" :
                                                            periodo.Total >= 70 ? "bg-yellow-100 text-yellow-800 border-yellow-300" :
                                                            "bg-red-100 text-red-800 border-red-300";

                                                            <span class="inline-block px-4 py-2 rounded-lg text-lg font-bold border-2 @totalColor">
                                                                @periodo.Total.Value.ToString("F0")
                                                            </span>
                                                        }
                                                    </td>

                                                    @if (esAdmin)
                                                    {
                                                        <td class="px-6 py-4 text-center">
                                                            <button onclick="editarCalificacion(@ViewBag.EstudianteId, @asignatura.IdAsignatura, @i)"
                                                                    class="px-4 py-2 bg-amber-500 hover:bg-amber-600 text-white rounded-lg text-sm font-semibold transition-colors">
                                                                <svg class="w-4 h-4 inline-block mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
                                                                </svg>
                                                                Editar
                                                            </button>
                                                            <button onclick="verHistorial(@asignatura.IdCalificacion)"
                                                                    class="mt-2 px-4 py-2 bg-gray-500 hover:bg-gray-600 text-white rounded-lg text-sm font-semibold transition-colors">
                                                                <svg class="w-4 h-4 inline-block mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                                                                </svg>
                                                                Historial
                                                            </button>
                                                        </td>
                                                    }
                                                }
                                                else
                                                {
                                                    @for (int j = 0; j < (primerPeriodo?.Componentes.Count ?? 0); j++)
                                                    {
                                                        <td class="px-4 py-4 text-center">
                                                            <span class="inline-block px-3 py-1.5 rounded-lg text-xs bg-gray-100 text-gray-500">
                                                                Pendiente
                                                            </span>
                                                        </td>
                                                    }
                                                    <td class="px-6 py-4 text-center bg-indigo-50">
                                                        <span class="inline-block px-3 py-1.5 rounded-lg text-xs bg-gray-100 text-gray-500">
                                                            Pendiente
                                                        </span>
                                                    </td>
                                                    @if (esAdmin)
                                                    {
                                                        <td class="px-6 py-4 text-center">
                                                            <span class="text-xs text-gray-400">No publicada</span>
                                                        </td>
                                                    }
                                                }
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <div class="bg-white rounded-2xl shadow-xl p-12 border border-indigo-100 text-center">
                <div class="h-24 w-24 bg-indigo-100 rounded-full flex items-center justify-center mx-auto mb-6">
                    <svg class="w-12 h-12 text-indigo-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                    </svg>
                </div>
                <h3 class="text-2xl font-bold text-gray-900 mb-3">
                    No hay calificaciones disponibles
                </h3>
                <p class="text-gray-500 text-lg">
                    Aún no se han publicado calificaciones para este estudiante.
                </p>
            </div>
        }

    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        function toggleAsignatura(asignaturaId) {
            const content = document.getElementById(asignaturaId);
            const icon = document.getElementById(asignaturaId + '-icon');

            if (content.classList.contains('hidden')) {
                content.classList.remove('hidden');
                icon.style.transform = 'rotate(180deg)';
            } else {
                content.classList.add('hidden');
                icon.style.transform = 'rotate(0deg)';
            }
        }

        function editarCalificacion(estudianteId, asignaturaId, periodo) {
    window.location.href = `/Calificacion/EditarCalificacion?estudianteId=${estudianteId}&asignaturaId=${asignaturaId}&periodo=${periodo}`;
}

function verHistorial(calificacionId) {
    window.location.href = `/Calificacion/HistorialCalificacion?calificacionId=${calificacionId}`;
}
    </script>
}