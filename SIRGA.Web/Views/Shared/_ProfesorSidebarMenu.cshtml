@{
    var controller = ViewContext.RouteData.Values["controller"]?.ToString();
    var action = ViewContext.RouteData.Values["action"]?.ToString();

    // Determinar sección activa
    bool esCalificaciones = (controller == "Profesor" && (action == "MisAsignaturas" || action == "Calificar"));
    bool esIndex = (controller == "Profesor" && action == "Index");
}

<!-- Dashboard/Home -->
<a asp-controller="Profesor" asp-action="Index"
   class="sidebar-menu-item @(esIndex ? "bg-blue-50 text-blue-700 font-semibold" : "text-gray-700 hover:bg-gray-100") flex items-center px-3 py-2.5 mb-1 rounded-lg transition-colors">
    <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"></path>
    </svg>
    <span class="text-sm">Mi Panel</span>
</a>

<!-- Gestión de Clases -->
<div class="mb-2">
    <button onclick="toggleSection('gestion-clases-profesor')"
            class="w-full flex items-center justify-between px-3 py-2.5 text-gray-700 hover:bg-gray-100 rounded-lg transition-colors">
        <div class="flex items-center">
            <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"></path>
            </svg>
            <span class="text-sm font-medium">Gestión de Clases</span>
        </div>
        <svg id="gestion-clases-profesor-icon" class="w-4 h-4 transition-transform @(esCalificaciones ? "rotate-180" : "")" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
        </svg>
    </button>

    <div id="gestion-clases-profesor" class="ml-8 mt-1 space-y-1 @(esCalificaciones ? "" : "hidden")">
        <a asp-controller="Profesor" asp-action="MisClases"
           class="sidebar-submenu-item flex items-center px-3 py-2 text-sm text-gray-600 hover:text-purple-700 hover:bg-purple-50 rounded-lg transition-colors">
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
            </svg>
            Mis Clases
        </a>

        <a asp-controller="Profesor" asp-action="MisAsignaturas"
           class="sidebar-submenu-item calificaciones-link @(esCalificaciones ? "bg-purple-50 text-purple-700 font-semibold" : "") flex items-center px-3 py-2 text-sm text-gray-600 hover:text-purple-700 hover:bg-purple-50 rounded-lg transition-colors">
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-3 7h3m-3 4h3m-6-4h.01M9 16h.01"></path>
            </svg>
            Calificaciones
        </a>

        <a asp-controller="AsistenciaProfesor" asp-action="Index"
           class="sidebar-submenu-item flex items-center px-3 py-2 text-sm text-gray-600 hover:text-purple-700 hover:bg-purple-50 rounded-lg transition-colors">
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
            Asistencia
        </a>

        <a href="@Url.Action("BuscarCalificaciones", "Calificacion")" class="menu-item">
            <svg>...</svg>
            Buscar Estudiantes
        </a>
    </div>
</div>

<!-- Mis Estudiantes -->
<a asp-controller="Profesor" asp-action="MisEstudiantes"
   class="sidebar-menu-item flex items-center px-3 py-2.5 mb-1 text-gray-700 hover:bg-gray-100 rounded-lg transition-colors">
    <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z"></path>
    </svg>
    <span class="text-sm">Mis Estudiantes</span>
</a>

<!-- Materiales de Clase -->
<a asp-controller="Profesor" asp-action="Materiales"
   class="sidebar-menu-item flex items-center px-3 py-2.5 mb-1 text-gray-700 hover:bg-gray-100 rounded-lg transition-colors">
    <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 21h10a2 2 0 002-2V9.414a1 1 0 00-.293-.707l-5.414-5.414A1 1 0 0012.586 3H7a2 2 0 00-2 2v14a2 2 0 002 2z"></path>
    </svg>
    <span class="text-sm">Materiales de Clase</span>
</a>

<!-- Divider -->
<div class="my-4 border-t border-gray-200"></div>

<!-- Reportes -->
<a asp-controller="Profesor" asp-action="Reportes"
   class="sidebar-menu-item flex items-center px-3 py-2.5 mb-1 text-gray-700 hover:bg-gray-100 rounded-lg transition-colors">
    <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
    </svg>
    <span class="text-sm">Reportes</span>
</a>

<!-- Mi Perfil -->
<a asp-controller="Profesor" asp-action="Perfil"
   class="sidebar-menu-item flex items-center px-3 py-2.5 mb-1 text-gray-700 hover:bg-gray-100 rounded-lg transition-colors">
    <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
    </svg>
    <span class="text-sm">Mi Perfil</span>
</a>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        // Mantener la sección de Gestión de Clases abierta si estamos en calificaciones
        const currentPath = window.location.pathname.toLowerCase();
        const isCalificaciones = currentPath.includes('/profesor/misasignaturas') ||
                                 currentPath.includes('/profesor/calificar');

        if (isCalificaciones) {
            const section = document.getElementById('gestion-clases-profesor');
            const icon = document.getElementById('gestion-clases-profesor-icon');
            if (section && icon) {
                section.classList.remove('hidden');
                icon.style.transform = 'rotate(180deg)';
            }
        }
    });
</script>