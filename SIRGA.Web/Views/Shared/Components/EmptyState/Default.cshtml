@model SIRGA.Web.ViewComponents.EmptyStateViewModel

<div class="text-center py-16">
    <div class="mx-auto h-24 w-24 bg-gray-100 rounded-full flex items-center justify-center mb-6">
        <svg class="w-12 h-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="@Model.IconPath"></path>
        </svg>
    </div>

    <h3 class="text-lg font-medium text-gray-900 mb-2">@Model.Title</h3>
    <p class="text-gray-500 mb-6">@Model.Message</p>

    @if (Model.Actions != null && Model.Actions.Any())
    {
        <div class="flex justify-center gap-3">
            @foreach (var action in Model.Actions)
            {
                <a asp-controller="@action.Controller"
                   asp-action="@action.Action"
                   asp-all-route-data="action.RouteValues"
                   class="inline-flex items-center px-6 py-3 @action.ColorClass font-semibold rounded-lg shadow-lg transition-all duration-200">
                    @if (!string.IsNullOrEmpty(action.IconPath))
                    {
                        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="@action.IconPath" />
                        </svg>
                    }
                    @action.Text
                </a>
            }
        </div>
    }
</div>