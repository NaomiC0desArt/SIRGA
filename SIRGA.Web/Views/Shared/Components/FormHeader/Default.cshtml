@model SIRGA.Web.ViewComponents.FormHeaderViewModel

<div class="bg-white rounded-2xl shadow-xl p-8 border border-gray-100 mb-8">
    <div class="flex items-center">
        <div class="h-12 w-12 bg-gradient-to-r @Model.GetGradientClasses() rounded-full flex items-center justify-center mr-4 shadow-lg">
            <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="@Model.IconPath"></path>
            </svg>
        </div>
        <div>
            <h1 class="text-3xl font-bold text-gray-900">@Model.Title</h1>
            <p class="text-gray-600 mt-1">@Model.Description</p>
        </div>
    </div>
</div>