@model SIRGA.Web.ViewComponents.InfoBoxViewModel

<div class="@Model.GetBackgroundClass() border rounded-lg p-4 mb-6">
    <div class="flex items-start">
        <svg class="w-5 h-5 @Model.GetIconColorClass() mt-0.5 mr-3 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="@Model.IconPath"></path>
        </svg>
        <div class="text-sm @Model.GetTextColorClass()">
            <p class="font-semibold mb-1">@Model.Title</p>
            @if (Model.Items != null && Model.Items.Any())
            {
                <ul class="list-disc list-inside space-y-1">
                    @foreach (var item in Model.Items)
                    {
                        <li>@Html.Raw(item)</li>
                    }
                </ul>
            }
        </div>
    </div>
</div>