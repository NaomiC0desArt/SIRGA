@model SIRGA.Web.ViewComponents.ValidatedFormFieldViewModel

<div>
    <label for="@Model.PropertyName" class="block text-md font-medium text-gray-700 mb-2">
        <span class="flex items-center">
            @if (!string.IsNullOrEmpty(Model.IconPath))
            {
                <svg class="w-5 h-5 mr-2 @Model.GetIconColorClass()" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="@Model.IconPath"></path>
                </svg>
            }
            @Model.Label
            @if (Model.IsRequired)
            {
                <span class="text-red-500 ml-1">*</span>
            }
        </span>
    </label>

    @if (Model.InputType == "textarea")
    {
        <textarea id="@Model.PropertyName"
                  name="@Model.PropertyName"
                  rows="@Model.TextAreaRows"
                  class="w-full px-4 py-3 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 @Model.GetFocusRingClass() transition-all duration-200"
                  placeholder="@Model.Placeholder"></textarea>
    }
    else if (Model.InputType == "select")
    {
        <select id="@Model.PropertyName"
                name="@Model.PropertyName"
                class="w-full px-4 py-3 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 @Model.GetFocusRingClass() transition-all duration-200">
            @foreach (var option in Model.Options)
            {
                <option value="@option.Value">@option.Text</option>
            }
        </select>
    }
    else if (Model.InputType == "checkbox")
    {
        <div class="flex items-center">
            <input id="@Model.PropertyName"
                   name="@Model.PropertyName"
                   type="checkbox"
                   class="h-5 w-5 text-@(Model.ColorScheme)-600 focus:ring-@(Model.ColorScheme)-500 border-gray-300 rounded cursor-pointer" />
            <label for="@Model.PropertyName" class="ml-3 block text-md font-medium text-gray-700 cursor-pointer">
                @Model.Label
            </label>
        </div>
    }
    else
    {
        <input id="@Model.PropertyName"
               name="@Model.PropertyName"
               type="@Model.InputType"
               class="w-full px-4 py-3 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 @Model.GetFocusRingClass() transition-all duration-200"
               placeholder="@Model.Placeholder" />
    }

    <span class="text-sm text-red-500 mt-1" data-valmsg-for="@Model.PropertyName" data-valmsg-replace="true"></span>

    @if (!string.IsNullOrEmpty(Model.HelpText))
    {
        <p class="mt-2 text-sm text-gray-500">
            <svg class="w-4 h-4 inline mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
            @Model.HelpText
        </p>
    }
</div>